			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 127.</fw>
				<head type="title">CXXVII. SOLTAR. T. B. 117. </head>
				<head type="sub"><app xml:id="app.1">
						<lem wit="#KK" xml:id="lem.1">Tanuság az házi állapatrol és
								kös<corr>s</corr>égi gondviselésröl.</lem>
						<rdg wit="#W1" xml:id="rdg.1">kösségi</rdg>
						<rdg wit="#W2 #W3" xml:id="rdg.2">köszégi</rdg>
					</app></head>
				<head type="notation">Az CXVII. Soltar notajára.</head>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">HOgy ha ember házat épét</l>
					<l xml:id="l.2"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">Isten segedelme nékül,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.3">nélkül</rdg>
						</app></l>
					<l xml:id="l.3">Ott az munka hiában kel,</l>
					<l xml:id="l.4">Ha Isten nem örzi népét</l>
					<l xml:id="l.5">Es az várost meg nem oyja</l>
					<l xml:id="l.6">Az örzöknec semmi haszna.</l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.7">Hijában keltec föl reggel,</l>
					<l xml:id="l.8"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">Nagy késön fekünni menvén,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.4">fekenni</rdg>
							<rdg wit="#W2" xml:id="rdg.5">ménvén</rdg>
						</app></l>
					<l xml:id="l.9">Alég esztec az kenyérben,</l>
					<l xml:id="l.10">Kit kerestec veréteckel,</l>
					<l xml:id="l.11">Holott kit az Isten szeret</l>
					<l xml:id="l.12">Annac könnyen ád eleget.</l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.13">Az kinec gyermeki vadnac</l>
					<l xml:id="l.14">Szép ayándéckal láttatic,</l>
					<l xml:id="l.15">Melly az Istentöl adatic:</l>
					<l xml:id="l.16">Kedves áldása az Urnac,</l>
					<l xml:id="l.17">Az ki láthattya magzatit,</l>
					<l xml:id="l.18"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">Önnön méhénec gyümölczit.</lem>
							<rdg wit="#W1" xml:id="rdg.6">mihinec</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.19"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Oh melly drága adományoc!</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.7">adományoc!</rdg>
							<rdg wit="#W3" xml:id="rdg.8">adományoc?</rdg>
						</app></l>
					<l xml:id="l.20"><app xml:id="app.6">
							<lem wit="#KK" xml:id="lem.6">Hogy ez illy apro gyermekec,</lem>
							<rdg wit="#W2" xml:id="rdg.9">gyermékec</rdg>
						</app></l>
					<l xml:id="l.21">Ekessen fölnevekednec:</l>
					<l xml:id="l.22"><app xml:id="app.7">
							<lem wit="#KK" xml:id="lem.7">Es ök szinten
								ollya<corr>t</corr>énoc</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.10">ollyaténoc</rdg>
							<rdg wit="#W3" xml:id="rdg.11">ollyatténoc</rdg>
						</app></l>
					<l xml:id="l.23">Mint â nyilac az kézivben</l>
					<l xml:id="l.24">Az erös vitéz keziben.</l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.25"><app xml:id="app.8">
							<lem wit="#KK" xml:id="lem.8">Nyilván bodognac mondatic,</lem>
							<rdg wit="#W1" xml:id="rdg.12">Nilván</rdg>
						</app></l>
					<l xml:id="l.26"><app xml:id="app.9">
							<lem wit="#KK" xml:id="lem.9">Ki bövölkedic azockal,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.13">bövelkedic</rdg>
						</app></l>
					<l xml:id="l.27">Rakva ö tegze nyilackal:</l>
					<l xml:id="l.28"><app xml:id="app.10">
							<lem wit="#KK" xml:id="lem.10">Szégyen ö <corr>r</corr>aytoc nem
								esic,</lem>
							<rdg wit="#W1" xml:id="rdg.14">raytoc</rdg>
							<rdg wit="#W2 #W3" xml:id="rdg.15">taytoc</rdg>
						</app></l>
					<l xml:id="l.29"><app xml:id="app.11">
							<lem wit="#KK" xml:id="lem.11">Ha ellens<corr>é</corr>g az
								kapuban,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.16">ellenség</rdg>
							<rdg wit="#W3" xml:id="rdg.17">ellenseg</rdg>
						</app></l>
					<l xml:id="l.30"><app xml:id="app.12">
							<lem wit="#KK" xml:id="lem.12">B<corr>é</corr>idézi vádolásban.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.18">Béidézi</rdg>
							<rdg wit="#W3" xml:id="rdg.19">Beidézi</rdg>
						</app></l>
				</lg>
			</div>
