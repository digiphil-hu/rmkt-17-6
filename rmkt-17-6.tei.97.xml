                                                  <div type="poem" xml:id="d.1" xml:lang="hu">
                                                  <fw type="originalNum">[RMKT XVII/6:] 97.</fw>
                                                  <head type="title">XCVII. SOLTAR. T. B.</head>
                                                  <head type="sub">Intes az Christusnac
                                                  tiszteletire.</head>
                                                  <pb facs="225"> </pb>
                                                  <lg xml:id="lg.1">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                                                  <l xml:id="l.1">AZ Ur Isten regnál,</l>
                                                  <l xml:id="l.2"><app xml:id="app.1">
                                                  <lem wit="#KK" xml:id="lem.1">Ö az erös
                                                  kir<corr>á</corr>l,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.1">királ</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.2">kiral</rdg>
                                                  </app></l>
                                                  <l xml:id="l.3">Kin mind ez föld örvendgyön,</l>
                                                  <l xml:id="l.4"><app xml:id="app.2">
                                                  <lem wit="#KK" xml:id="lem.2">Minden sziget
                                                  örülly<corr>ö</corr>n,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.3">öröllyön</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.4">örüllyön</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.5">örüllyon</rdg>
                                                  </app></l>
                                                  <l xml:id="l.5">Fölhö áll elötte,</l>
                                                  <l xml:id="l.6">Es homály környüle,</l>
                                                  <l xml:id="l.7"><app xml:id="app.3">
                                                  <lem wit="#KK" xml:id="lem.3">Ö törvén
                                                  székinec</lem>
                                                  <rdg wit="#W1" xml:id="rdg.6">törvenszékinec</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.7">törvénszékinec</rdg>
                                                  </app></l>
                                                  <l xml:id="l.8"><app xml:id="app.4">
                                                  <lem wit="#KK" xml:id="lem.4">Es itéletinec</lem>
                                                  <rdg wit="#W1" xml:id="rdg.8">Itiletinec</rdg>
                                                  </app></l>
                                                  <l xml:id="l.9">Igassag ereje.</l>
                                                  </lg>
                                                  <lg xml:id="lg.2">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                                                  <l xml:id="l.10">Tüz megyen elötte,</l>
                                                  <l xml:id="l.11">Mellyel ellensége</l>
                                                  <l xml:id="l.12">Szörnyen megégettetic,</l>
                                                  <l xml:id="l.13">Es hamuvá tétetic,</l>
                                                  <l xml:id="l.14">Hirec sem lesz soha,</l>
                                                  <l xml:id="l.15"><app xml:id="app.5">
                                                  <lem wit="#KK" xml:id="lem.5">Az ö
                                                  villám<corr>á</corr>sa</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.9">villámása</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.10">villámasa</rdg>
                                                  </app></l>
                                                  <l xml:id="l.16"><app xml:id="app.6">
                                                  <lem wit="#KK" xml:id="lem.6"><corr>Fénlic
                                                  világoson</corr></lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.11">[Lásd a
                                                  főszövegben.]</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.12">[Hiányzik.]</rdg>
                                                  </app></l>
                                                  <l xml:id="l.17">Ez egész világon,</l>
                                                  <l xml:id="l.18">Az föld fél ha láttya.</l>
                                                  </lg>
                                                  <lg xml:id="lg.3">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                                                  <l xml:id="l.19">Az Isten szinénec</l>
                                                  <l xml:id="l.20">Elötte az hegyec</l>
                                                  <l xml:id="l.21">Mint viasz elolvadnac,</l>
                                                  <l xml:id="l.22">Mert Ura ez világnac.</l>
                                                  <l xml:id="l.23">Hirdetic az egec</l>
                                                  <l xml:id="l.24">Minden féle népnec</l>
                                                  <l xml:id="l.25">Az ö igasságát,</l>
                                                  <l xml:id="l.26"><app xml:id="app.7">
                                                  <lem wit="#KK" xml:id="lem.7">Es nagy diczö
                                                  voltát</lem>
                                                  <rdg wit="#W1" xml:id="rdg.13">düczö</rdg>
                                                  </app></l>
                                                  <l xml:id="l.27">Az ö hatalmánac.</l>
                                                  </lg>
                                                  <lg xml:id="lg.4">
                                                  <metamark function="pause"/>
                                                  <fw corresp="Szenci Molnár Albert" type="lg"><hi
                                                  rend="super">*</hi><hi rend="sub">*</hi><hi
                                                  rend="super">*</hi> 4 </fw>
                                                  <l xml:id="l.28">Hát pironkodgyanac</l>
                                                  <l xml:id="l.29">Kic bálvánt imádnac,</l>
                                                  <l xml:id="l.30">Es tisztelnec képeket</l>
                                                  <l xml:id="l.31">Kikre vetic sziveket,</l>
                                                  <l xml:id="l.32">Ti minden Istenec</l>
                                                  <l xml:id="l.33">Ötet tisztellyétec</l>
                                                  <l xml:id="l.34">Alván széki elött,</l>
                                                  <l xml:id="l.35">Kit az Sion hallott,</l>
                                                  <l xml:id="l.36">Es örült ez hirnec.</l>
                                                  </lg>
                                                  <lg xml:id="lg.5">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                                                  <l xml:id="l.37">Uram az Judánac</l>
                                                  <l xml:id="l.38">Leányi vigadnac</l>
                                                  <l xml:id="l.39"><app xml:id="app.8">
                                                  <lem wit="#KK" xml:id="lem.8">Diczérven
                                                  itéleted,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.14">itileted</rdg>
                                                  </app></l>
                                                  <l xml:id="l.40">Mert magassan fölvivéd,</l>
                                                  <l xml:id="l.41"><app xml:id="app.9">
                                                  <lem wit="#KK" xml:id="lem.9">Az te
                                                  diczösegöd</lem>
                                                  <rdg wit="#W1" xml:id="rdg.15">düczösegöd</rdg>
                                                  </app></l>
                                                  <l xml:id="l.42">Minden népec fölött,</l>
                                                  <l xml:id="l.43">Minden isteneknél</l>
                                                  <l xml:id="l.44">Föllyeb emeltetél,</l>
                                                  <l xml:id="l.45">Nagy az te fölségöd.</l>
                                                  </lg>
                                                  <lg xml:id="lg.6">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                                                  <l xml:id="l.46">Ti Isten szeretöc</l>
                                                  <l xml:id="l.47">Gonoszt gyülöllyetöc,</l>
                                                  <l xml:id="l.48">Hamis czelekedetben</l>
                                                  <l xml:id="l.49">Hogy részetec ne legyen,</l>
                                                  <l xml:id="l.50">Mert az ö szolgáit</l>
                                                  <l xml:id="l.51">Megmenti hiveit</l>
                                                  <l xml:id="l.52"><app xml:id="app.10">
                                                  <lem wit="#KK" xml:id="lem.10">Gonoszoc
                                                  kez<corr>e</corr>kböl,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.16">kezélkböl [A <hi
                                                  rend="italic">Corrigenda</hi>-ban kijavítva:]
                                                  kezekböl</rdg>
                                                  <rdg wit="#W2 #W3" xml:id="rdg.17">kezékböl</rdg>
                                                  </app></l>
                                                  <l xml:id="l.53">Ö nagy erejéböl</l>
                                                  <l xml:id="l.54">Megtartya népeit.</l>
                                                  </lg>
                                                  <lg xml:id="lg.7">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                                                  <l xml:id="l.55">Szentihez világát</l>
                                                  <l xml:id="l.56">Nyuytya nagy irgalmát,</l>
                                                  <l xml:id="l.57">Es az tiszta szivöec</l>
                                                  <l xml:id="l.58">Töle örömet nyernec,</l>
                                                  <l xml:id="l.59">Szent hivec ez Urban</l>
                                                  <l xml:id="l.60"><app xml:id="app.11">
                                                  <lem wit="#KK" xml:id="lem.11">Örüllyetec
                                                  vigan,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.18">Oeröllyetek</rdg>
                                                  </app></l>
                                                  <l xml:id="l.61"><app xml:id="app.12">
                                                  <lem wit="#KK" xml:id="lem.12">Es az ö
                                                  szents<corr>é</corr>gét</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.19"
                                                  >szentségét</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.20">szentsegét</rdg>
                                                  </app></l>
                                                  <l xml:id="l.62"><app xml:id="app.13">
                                                  <lem wit="#KK" xml:id="lem.13">Diczösséges
                                                  nevét</lem>
                                                  <rdg wit="#W1" xml:id="rdg.21">Düczösséges</rdg>
                                                  </app></l>
                                                  <l xml:id="l.63">Aldgyátoc mindnyájan.</l>
                                                  </lg>
                                                  </div>
