	<text>
		<body>
			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 144.</fw>
				<head type="title">CXLIV. SOLTAR. T. B. 18.</head>
				<head type="sub">Davidnac háláadása és könyörgése.</head>
				<head type="notation">Az XVIII. Soltar notájára.</head>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">ALdott az Ur, ki kezemet tanitya</l>
					<l xml:id="l.2">Es uyaimat az hadakozásra,</l>
					<l xml:id="l.3">Aldott légyen az én jo Istenem,</l>
					<l xml:id="l.4"><app xml:id="app.1">
							<lem wit="#KK" xml:id="lem.1">Az ki mindenkor megöri<corr>z</corr>
								engem.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.1">megöriz</rdg>
							<rdg wit="#W3" xml:id="rdg.2">megörizz</rdg>
						</app></l>
					<l rend="level_1" xml:id="l.5">Ö az én kövárom és szabaditom,</l>
					<l xml:id="l.6">Ö én paisom és én otalmazom,</l>
					<l xml:id="l.7"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">Te benned vetem
								rem<corr>é</corr>nségemet,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.3">reménségemet</rdg>
							<rdg wit="#W3" xml:id="rdg.4">remenségemet</rdg>
						</app></l>
					<l xml:id="l.8">Mert alám vetöd az én népemet.</l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.9">De miczoda az ember életében,</l>
					<l xml:id="l.10">Hogy ö reá gondot tartasz ecképpen?</l>
					<l xml:id="l.11">Miczodác az emberec fiai,</l>
					<l xml:id="l.12"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">Hogy fölséged öket igy
								k<corr>e</corr>dvelli?</lem>
							<rdg wit="#W1 #W2 #W3" xml:id="rdg.5">kédvelli</rdg>
						</app></l>
					<l rend="level_1" xml:id="l.13">Az emberec dolgát ha megtekinted,</l>
					<l xml:id="l.14">Legottan öket czac semminec leled,</l>
					<l xml:id="l.15">Az ö napjai hamar elfogynac,</l>
					<l xml:id="l.16">Es mint az árnyéc ottan elmulnac.</l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.17"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">Hayts meg az egeket és szálly le
								menten,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.6">száll</rdg>
						</app></l>
					<l xml:id="l.18">Illesd az hegyeket, hog’ füstyök mennyen,</l>
					<l xml:id="l.19">Boczáss villámást, öket verd széllel,</l>
					<l xml:id="l.20">Mennyütö nyilaiddal szélleszd el.</l>
					<l rend="level_1" xml:id="l.21"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Segéts meg, fellyöl kezed
								hozzámnyuytsad,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.7">fellöl</rdg>
						</app></l>
					<l xml:id="l.22">Ez nagy árvizet rólam elforditsad,</l>
					<l xml:id="l.23">Szabadits meg ez veszedelemböl,</l>
					<l xml:id="l.24">Oerizz meg az idegen nemzettöl.</l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.25">Kiknec szájoc merö hazugságot szól</l>
					<l xml:id="l.26">Oe hamis kezeckel tésznec gonoszól,</l>
					<l xml:id="l.27">Uram néked mondoc uy éneket,</l>
					<l xml:id="l.28">Megzönditem néked hegedömet.</l>
					<l rend="level_1" xml:id="l.29">Mert te vagy Uram, ki minden inségben</l>
					<l xml:id="l.30"><app xml:id="app.6">
							<lem wit="#KK" xml:id="lem.6">Az királt megotalmazod kegyessen,</lem>
							<rdg wit="#W1" xml:id="rdg.8">megotalmozod</rdg>
						</app></l>
					<l xml:id="l.31"><app xml:id="app.7">
							<lem wit="#KK" xml:id="lem.7">Szolgádat Davidot megtekinted,</lem>
							<rdg wit="#W1" xml:id="rdg.9">Davidat</rdg>
						</app></l>
					<l xml:id="l.32">Az öldöklö fegyvertöl megmented.</l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.33"><app xml:id="app.8">
							<lem wit="#KK" xml:id="lem.8">Ments meg kezekböl az idegeneknec,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.10">ez</rdg>
						</app></l>
					<l xml:id="l.34">Kic én ellenem szörnyen dühösködnec,</l>
					<l xml:id="l.35">Szájoc beszéde merö hamisság</l>
					<l xml:id="l.36">Kezeknec dolga hitván mulatság.</l>
					<l rend="level_1" xml:id="l.37"><app xml:id="app.9">
							<lem wit="#KK" xml:id="lem.9">Hog’ mint <corr>â</corr> szép plántác â mi
								fiainc,</lem>
							<rdg wit="#W1" xml:id="rdg.11">az</rdg>
							<rdg wit="#W2" xml:id="rdg.12">a</rdg>
							<rdg wit="#W3" xml:id="rdg.13">á</rdg>
						</app></l>
					<l xml:id="l.38">Fölnevekedgyenec mi szép leányinc,</l>
					<l xml:id="l.39">Kic szépségekben ugy villagjanac,</l>
					<l xml:id="l.40">Mint ékes oszlopi az templomnac.</l>
				</lg>
				<lg xml:id="lg.6">
					<fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
					<l xml:id="l.41">Hogy az mi tárházinc tele legyenec,</l>
					<l xml:id="l.42">Czordáinc ezeriglen tenyészszenec,</l>
					<l xml:id="l.43">Barmunc töb legyen soc száz ezernél,</l>
					<l xml:id="l.44">Mind városon falun s’ mezön széllel.</l>
					<l rend="level_1" xml:id="l.45">Erössen szaporodgyanac ökreinc,</l>
					<l xml:id="l.46"><app xml:id="app.10">
							<lem wit="#KK" xml:id="lem.10">Városinkra ne üssön
								ellens<corr>é</corr>ginc,</lem>
							<rdg wit="#W1" xml:id="rdg.14">eilenségink</rdg>
							<rdg wit="#W2" xml:id="rdg.15">ellenséginc</rdg>
							<rdg wit="#W3" xml:id="rdg.16">ellenseginc</rdg>
						</app></l>
					<l xml:id="l.47">Földünkböl senki el ne vitesséc,</l>
					<l xml:id="l.48">Utzáinkon panasz ne hallasséc.</l>
				</lg>
				<lg xml:id="lg.7">
					<fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
					<l xml:id="l.49">O bodog nép, az kit igy megáld Isten!</l>
					<l xml:id="l.50">Es kiknec illy jo szerenczét ád itten:</l>
					<l xml:id="l.51">Bodog nép az, és nem lesz szüksége,</l>
					<l xml:id="l.52">Az mellynec az Ur az ö Istene.</l>
				</lg>
			</div>
		</body>
