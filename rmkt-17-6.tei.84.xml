            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 84.</fw>
                <head type="title">LXXXIIII. SOLTAR. T. B.</head>
                <head type="sub">Kivánsága Davidnac az Isteni tiszteletben valo jelen lételre
                    Jerusalemben.</head>
                <pb facs="201"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">OH seregeknec Istene,</l>
                    <l xml:id="l.2">Melly kedves gyönyörüsége</l>
                    <l xml:id="l.3"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Az te szerelmes
                                hayl<corr>é</corr>kidnac!</lem>
                            <rdg wit="#W1" xml:id="rdg.1">hajlékidnac</rdg>
                            <rdg wit="#W2" xml:id="rdg.2">haylékidnac</rdg>
                            <rdg wit="#W3" xml:id="rdg.3">haylekidnac</rdg>
                        </app></l>
                    <l xml:id="l.4">Az én lelkem foházkodic,</l>
                    <l xml:id="l.5"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Tornátzodba kivánkozic,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">Tornátzodban</rdg>
                        </app></l>
                    <l xml:id="l.6"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Oh Istene az
                                magass<corr>á</corr>gnac,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">magasságnac</rdg>
                            <rdg wit="#W2" xml:id="rdg.6">magassánac</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">magassagnac</rdg>
                        </app></l>
                    <l xml:id="l.7">Ahétozic testem lelkem</l>
                    <l xml:id="l.8">Te hozzád élö Istenem.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Az verébnec vagyon fészke</l>
                    <l xml:id="l.10">Es honnyában költ az feczke,</l>
                    <l xml:id="l.11">En királyom Zebaoth Isten,</l>
                    <l xml:id="l.12">Hól vadnac az te oltárid,</l>
                    <l xml:id="l.13">Es te szentséges haylékid?</l>
                    <l xml:id="l.14">Hol diczértettél fölségessen?</l>
                    <l xml:id="l.15">Bizony bódog az olly ember,</l>
                    <l xml:id="l.16">Ki téged házadban diczér!</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">Oh bódog az ember nyilván</l>
                    <l xml:id="l.18">Az ki az te utaidban</l>
                    <l xml:id="l.19"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Kiván járni szivvel léleckel,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">szivel</rdg>
                        </app></l>
                    <l xml:id="l.20"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Menvén az sir<corr>a</corr>lom
                                völgyén</lem>
                            <rdg wit="#W1 #W2 #W3" xml:id="rdg.9">sirálom</rdg>
                        </app></l>
                    <l xml:id="l.21">Az hól merö száraz minden,</l>
                    <l xml:id="l.22">Ottis ö nagy hiedelemmel,</l>
                    <l xml:id="l.23">Kutat ás, czinál czatornát,</l>
                    <l xml:id="l.24">Kiben essö vizet boczát.</l>
                </lg>
                <lg xml:id="lg.4">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 4 </fw>
                    <l xml:id="l.25">Nyereségröl nyereségre,</l>
                    <l xml:id="l.26">Mennec eröröl eröre,</l>
                    <l xml:id="l.27">Mig hozzád jutnac az Sionra.</l>
                    <l xml:id="l.28">Oh erös Zebaoth Isten!</l>
                    <l xml:id="l.29"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Hayts hozzám f<corr>ö</corr>led
                                kegyessen!</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">füled</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">fúled</rdg>
                        </app></l>
                    <l xml:id="l.30">Figyelmezzél imátságomra</l>
                    <l xml:id="l.31">Jacob Istene, nagy Isten,</l>
                    <l xml:id="l.32"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Halgass meg én
                                sz<corr>ü</corr>kségemben.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">szükségemben</rdg>
                            <rdg wit="#W3" xml:id="rdg.13">szúkségemben</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.33">Mi paisunc oh Ur Isten,</l>
                    <l xml:id="l.34">Kenöttedre nézz kegyessen,</l>
                    <l xml:id="l.35"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Mert job egy nap az te házadban,</lem>
                            <rdg wit="#W2" xml:id="rdg.14">házádban</rdg>
                        </app></l>
                    <l xml:id="l.36"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Hogy nem ezer nap egyebött.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.15">egyéböt</rdg>
                        </app></l>
                    <l xml:id="l.37">Az Isten tornátza elött</l>
                    <l xml:id="l.38">Kapun álló lennéc inkáblan,</l>
                    <l xml:id="l.39">Hogynem mint soc idöt élnéc,</l>
                    <l xml:id="l.40">Házokban az hitleneknec.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41">Mert minékünc fényes napunc</l>
                    <l xml:id="l.42">Az Isten, és mi paisunc,</l>
                    <l xml:id="l.43"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Nagy diczöséggel szeret minket:</lem>
                            <rdg wit="#W1" xml:id="rdg.16">düczöséggel</rdg>
                        </app></l>
                    <l xml:id="l.44">Azockal kegyelmet teszen,</l>
                    <l xml:id="l.45">Kic járnac az jo ösvenyen,</l>
                    <l xml:id="l.46">Soc jovaival áldgya öket,</l>
                    <l xml:id="l.47">Bódog az ember éltében,</l>
                    <l xml:id="l.48">Ki bizic az Ur Istenben.</l>
                </lg>
            </div>
