            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 64.</fw>
                <head type="title">LXIIII. SOLTAR. T. B. 5.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Könyörgése
                            Davidnacmegotalmaz<corr>á</corr>sért.</lem>
                        <rdg wit="#W1 #W2" xml:id="rdg.1">megotalmazásert</rdg>
                        <rdg wit="#W3" xml:id="rdg.2">megotalmazasért</rdg>
                    </app></head>
                <head type="notation">Az V. Soltar notajára.</head>
                <pb facs="152"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">HAlgasd meg Uram könyörgésem,</l>
                    <l xml:id="l.2">Tarts meg ellenségem ellen,</l>
                    <l xml:id="l.3">Az melly reám dühött szörnyen,</l>
                    <l xml:id="l.4">Örizzmeg félelmétöl engem,</l>
                    <l xml:id="l.5">Ments meg életem.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.6"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Röyts el engem az gonoszoktul,</lem>
                            <rdg wit="#W1" xml:id="rdg.3">Reycz</rdg>
                        </app></l>
                    <l xml:id="l.7">Az kic reám fenekednec,</l>
                    <l xml:id="l.8">Czac gonoszra igyekeznec,</l>
                    <l xml:id="l.9">Tarts meg ö hamis tanáczoktul,</l>
                    <l xml:id="l.10"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">H<corr>á</corr>borgásoktul.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">Háborgasoktul</rdg>
                            <rdg wit="#W3" xml:id="rdg.5">Haborgásoktul</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.11"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Az kic
                                nyelvek<corr>e</corr>télesitic,</lem>
                            <rdg wit="#W1" xml:id="rdg.6">nyelveket</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.7">nyelvekét</rdg>
                        </app></l>
                    <l xml:id="l.12">Mint öldöklö fegyvereket,</l>
                    <l xml:id="l.13">Mint â nyilat, beszédeket</l>
                    <l xml:id="l.14">Az ártatlan emberre lövic,</l>
                    <l xml:id="l.15">Es azt megsértic.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.16">Lövöldözic reytec helyekböl</l>
                    <l xml:id="l.17">Az ártatlant és igazat,</l>
                    <l xml:id="l.18">Hirtelen az ö nyilokat</l>
                    <l xml:id="l.19">Elreálövic kegyetlenöl,</l>
                    <l xml:id="l.20">Vakmeröségböl.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.21">Hamisságban hánnyác eszeket,</l>
                    <l xml:id="l.22">Es czac azon igyekeznec,</l>
                    <l xml:id="l.23">Hogy ök tört titkon vessenec,</l>
                    <l xml:id="l.24">Diczekedvén szolnac illyeket:</l>
                    <l xml:id="l.25">Ki látna minket?</l>
                </lg>
                <lg xml:id="lg.6">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 6 </fw>
                    <l xml:id="l.26">Ez dologban szorgalmatosoc,</l>
                    <l xml:id="l.27">Járnac okos ravassággal,</l>
                    <l xml:id="l.28">Elméjec soc fortélt talál,</l>
                    <l xml:id="l.29"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Sok az ö
                                álnoctal<corr>á</corr>lmányoc,</lem>
                            <rdg wit="#W1" xml:id="rdg.8">találmányok</rdg>
                            <rdg wit="#W2" xml:id="rdg.9">találmányoc</rdg>
                            <rdg wit="#W3" xml:id="rdg.10">talalmányoc</rdg>
                        </app></l>
                    <l xml:id="l.30">Kikre nagy gyorsoc.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.31">De az boszszú állo Ur Isten</l>
                    <l xml:id="l.32">Hirtelen öket meglövi,</l>
                    <l xml:id="l.33">Nyilaival meg rettenti,</l>
                    <l xml:id="l.34">Nagy sebeket eyt ö testeken,</l>
                    <l xml:id="l.35">Kit meglát minden.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.36"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Öket az önön gonosz nyelvec</lem>
                            <rdg wit="#W1" xml:id="rdg.11">önnön</rdg>
                        </app></l>
                    <l xml:id="l.37"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Eyti az veszedelembe,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">veszedelemben</rdg>
                        </app></l>
                    <l xml:id="l.38"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Es kic ezt veszic eszekbe,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.13">eszekben</rdg>
                        </app></l>
                    <l xml:id="l.39">Ez dolgon igen megijednec</l>
                    <l xml:id="l.40">Es elrémülnec.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.41"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Es nagy
                                félelemmelmind<corr>e</corr>nec</lem>
                            <rdg wit="#W1" xml:id="rdg.14">mindenec</rdg>
                            <rdg wit="#W2" xml:id="rdg.15">midenec</rdg>
                            <rdg wit="#W3" xml:id="rdg.16">mindnec</rdg>
                        </app></l>
                    <l xml:id="l.42">Hirdetic az Isten dolgát,</l>
                    <l xml:id="l.43">Beszéllic annac nagy voltát,</l>
                    <l xml:id="l.44"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Mellyet innen eszekbe vesznec</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.17">eszekben</rdg>
                        </app></l>
                    <l xml:id="l.45">Es megértenec.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.46"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">De szive <corr>az</corr>
                                igazembernec</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.18">szive az igaz</rdg>
                            <rdg wit="#W3" xml:id="rdg.19">szive igaz</rdg>
                        </app></l>
                    <l xml:id="l.47">Örvend az erös Istenben,</l>
                    <l xml:id="l.48">Ki öt vötte kegyelmében,</l>
                    <l xml:id="l.49"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Örülnec az jo szivö hivec,</lem>
                            <rdg wit="#W1" xml:id="rdg.20">Oerölnec</rdg>
                        </app></l>
                    <l xml:id="l.50"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">Es diczekednec.</lem>
                            <rdg wit="#W1" xml:id="rdg.21">düczekednec</rdg>
                        </app></l>
                </lg>
            </div>
        </body>
