            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 44.</fw>
                <head type="title">XLIIII. SOLTAR. T. B.</head>
                <head type="sub">Könyörgése az Isten népénec az megszabadúlásért.</head>
                <pb facs="112"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">HAllottuc, Isten, füleinckel,</l>
                    <l xml:id="l.2">Az mit régenten czelekedtel,</l>
                    <l xml:id="l.3">Nekünc atyáinc mondottác,</l>
                    <l xml:id="l.4">Kic nagy dolgaidat láttác,</l>
                    <l rend="level_1" xml:id="l.5">Kezeddel az pogán népet</l>
                    <l xml:id="l.6">Elvesztéd földét elpusztitád,</l>
                    <l xml:id="l.7">Osztán más helyre vüd öket,</l>
                    <l xml:id="l.8">Holott ismét megszaporitád.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Mert nem ö fegyverec által let</l>
                    <l xml:id="l.10">Hogy ök megültéc ez jo földet,</l>
                    <l xml:id="l.11"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">N<corr>e</corr>m az ö kezec
                                semkarjoc</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">Nem</rdg>
                            <rdg wit="#W3" xml:id="rdg.2">Nam</rdg>
                        </app></l>
                    <l xml:id="l.12"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Volt n<corr>é</corr>kicszabaditojoc.</lem>
                            <rdg wit="#W1 #W3" xml:id="rdg.3">nekic</rdg>
                            <rdg wit="#W2" xml:id="rdg.4">nékic</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.13">De te ortzád tekintése</l>
                    <l xml:id="l.14">Es az te karod és job kezed</l>
                    <l xml:id="l.15">Öket igy megsegitette,</l>
                    <l xml:id="l.16">Mert ö hozzájoc volt jokedved.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">Ur Isten te vagy én királyom,</l>
                    <l xml:id="l.18">Es az én tellyes vigaságom,</l>
                    <l xml:id="l.19">Jacobnac küldd segedelmed,</l>
                    <l xml:id="l.20">Az mint régenten mivelted.</l>
                    <l rend="level_1" xml:id="l.21">Altalad ellenségünket</l>
                    <l xml:id="l.22"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Megökle<corr>l</corr>dezzüc
                                ésmegrontyuc,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">Megökleldezzük</rdg>
                            <rdg wit="#W2" xml:id="rdg.6">Megöklelddezzüc</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">Megökledezzüc</rdg>
                        </app></l>
                    <l xml:id="l.23">Es az mi gyülölöinket</l>
                    <l xml:id="l.24">Az te nevedben letapodgyuc.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25">Mert én nem bizom kézivemben,</l>
                    <l xml:id="l.26">Sem az én éles fegyveremben,</l>
                    <l xml:id="l.27">Az engem meg nem szabadit,</l>
                    <l xml:id="l.28">Ha az ellenség megszorit.</l>
                    <l rend="level_1" xml:id="l.29">De te tartasz meg bennünket</l>
                    <l xml:id="l.30">Minden mi ellenségünk ellen,</l>
                    <l xml:id="l.31">Es az mi kergetöinket</l>
                    <l xml:id="l.32">Elveszted, es eyted szégyenben.</l>
                </lg>
                <lg xml:id="lg.5">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 5 </fw>
                    <l xml:id="l.33">Azért az Istent magasztallyuc,</l>
                    <l xml:id="l.34"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Es szent nevét öröcké áldgyuc,</lem>
                            <rdg wit="#W1" xml:id="rdg.8">nevit</rdg>
                        </app></l>
                    <l xml:id="l.35">Mindennap diczérvén ötet,</l>
                    <l xml:id="l.36">Hirdessüc nagy kegyességét.</l>
                    <l rend="level_1" xml:id="l.37">De minket te megvetöttél,</l>
                    <l xml:id="l.38">Es jutattál nagy szégyenségben,</l>
                    <l xml:id="l.39"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Az hadba vel<corr>ü</corr>nc
                                nemjövél,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">hadban velünc</rdg>
                            <rdg wit="#W3" xml:id="rdg.10">velúnc</rdg>
                        </app></l>
                    <l xml:id="l.40"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Hogy megtar<corr>tott</corr>ál
                                volnaéppen.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.11">megtartottál</rdg>
                            <rdg wit="#W3" xml:id="rdg.12">megtarttotál</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41">Az ellenségtöl elfuttattál,</l>
                    <l xml:id="l.42">Es velünc nagy szégyent vallattál,</l>
                    <l xml:id="l.43">Minden marhánkat eldullyác</l>
                    <l xml:id="l.44">Kic éltünket háborgattyác.</l>
                    <l rend="level_1" xml:id="l.45">Hogy minket ök megegyenec,</l>
                    <l xml:id="l.46">Mint az juhokot, ugy adál el,</l>
                    <l xml:id="l.47">Kic minket meszsze kergetnec</l>
                    <l xml:id="l.48"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Az pogányoc közibe széllyel.</lem>
                            <rdg wit="#W1" xml:id="rdg.13">pogánoc köziben széllel</rdg>
                            <rdg wit="#W2" xml:id="rdg.14">köziben</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.49">Népedet te semminec tartád,</l>
                    <l xml:id="l.50">Es öket czac óczon eladád,</l>
                    <l xml:id="l.51"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Igen k<corr>e</corr>vésre böczülléd,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.15">kevésre</rdg>
                            <rdg wit="#W3" xml:id="rdg.16">kévésre</rdg>
                        </app></l>
                    <l xml:id="l.52">Czac nem ingyen oda vetéd.</l>
                    <l rend="level_1" xml:id="l.53">Azt töd hogy mi ellenséginc,</l>
                    <l xml:id="l.54">Es az kic mi környülünc laknac,</l>
                    <l xml:id="l.55">Minden felöl mi szomszédinc</l>
                    <l xml:id="l.56">Minket nevetnec és czufolnac.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.57"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Az pogányoc példabeszédet,</lem>
                            <rdg wit="#W1" xml:id="rdg.17">pogánoc</rdg>
                        </app></l>
                    <l xml:id="l.58">Szólnac mi rólunc nevetséget,</l>
                    <l xml:id="l.59">Es mindenféle nemzetec</l>
                    <l xml:id="l.60">Czufolván fejeckel intnec.</l>
                    <l rend="level_1" xml:id="l.61">Gyalázat szitoc szüntelen</l>
                    <l xml:id="l.62">Es szégyen forog én elöttem,</l>
                    <l xml:id="l.63">Ugy hogy nagy szégyenletemben,</l>
                    <l xml:id="l.64">Az én ortzámat bé kell fednem.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.65">Nagy soc szidalmat kell hallanom,</l>
                    <l xml:id="l.66">Ki miatt czac el szomorodom,</l>
                    <l xml:id="l.67">Midön szemem elött nézem</l>
                    <l xml:id="l.68">Boszszuállo ellenségem.</l>
                    <l rend="level_1" xml:id="l.69">Mind ezec esnec miraytunc,</l>
                    <l xml:id="l.70">Mégis nem feleytünc el téged,</l>
                    <l xml:id="l.71">Kötésed ellen nem járunc,</l>
                    <l xml:id="l.72">Mindenben engedünc tenéked.</l>
                </lg>
                <lg xml:id="lg.10">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 10 </fw>
                    <l xml:id="l.73">Az mi szivünc nem fordul viszsza,</l>
                    <l xml:id="l.74"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">De gondol<corr>a</corr>tit
                                raytadtartya,</lem>
                            <rdg wit="#W1 #W2 #W3" xml:id="rdg.18">gondolátit</rdg>
                        </app></l>
                    <l xml:id="l.75">Az mi lábunc ki nem mozdol</l>
                    <l xml:id="l.76"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Ösvényedröl el nem hajol.</lem>
                            <rdg wit="#W1" xml:id="rdg.19">haijol</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.77">Mêgis igy büntetsz bennünket</l>
                    <l xml:id="l.78">Bévetél az sárkányoc közé,</l>
                    <l xml:id="l.79">Es már minden felöl minket</l>
                    <l xml:id="l.80">Halál árnyéka környéköze.</l>
                </lg>
                <lg xml:id="lg.11">
                    <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                    <l xml:id="l.81">Ha elfelettünc volna téged,</l>
                    <l xml:id="l.82">Meg sem gondoltuc volna neved,</l>
                    <l xml:id="l.83">Ha más Isten szolgálatra</l>
                    <l xml:id="l.84">Kezünket emeltüc volna:</l>
                    <l rend="level_1" xml:id="l.85">Nyilván nem türted volna el,</l>
                    <l xml:id="l.86"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Söt igen megbüntettél volna,</lem>
                            <rdg wit="#W1" xml:id="rdg.20">volná</rdg>
                        </app></l>
                    <l xml:id="l.87">Mert mindent látsz szemeiddel,</l>
                    <l xml:id="l.88">Minden szivnec elötted titka.</l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.89">De mi te érötted naponkint</l>
                    <l xml:id="l.90">Öldöztetünc ez világ szerint,</l>
                    <l xml:id="l.91">Miként az ártatlan juhoc,</l>
                    <l xml:id="l.92">Kic az mészárszékre valoc.</l>
                    <l rend="level_1" xml:id="l.93">Kelly föl azért, mit aluszol?</l>
                    <l xml:id="l.94">Es álmodbol már serkennyêlföl,</l>
                    <l xml:id="l.95"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">Támadgy föl es hatalmadbol</lem>
                            <rdg wit="#W2" xml:id="rdg.21">és</rdg>
                        </app></l>
                    <l xml:id="l.96">Ments ki minket ez nagy inségböl.</l>
                </lg>
                <lg xml:id="lg.13">
                    <fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
                    <l xml:id="l.97">Miért forditod el szemedet,</l>
                    <l xml:id="l.98">Mire reyted el szent szinedet,</l>
                    <l xml:id="l.99"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">Minket miért feleytesz el,</lem>
                            <rdg wit="#W1" xml:id="rdg.22">felejteszél</rdg>
                            <rdg wit="#W2" xml:id="rdg.23"><sic>feleytesz szel</sic></rdg>
                        </app></l>
                    <l xml:id="l.100">Nem gondolszé inségünckel?</l>
                    <l rend="level_1" xml:id="l.101">Lelkünc es minden életünc</l>
                    <l xml:id="l.102"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15">Már szintén az földre lehaylott,</lem>
                            <rdg wit="#W1" xml:id="rdg.24">szintin</rdg>
                        </app></l>
                    <l xml:id="l.103"><app xml:id="app.16">
                            <lem wit="#KK" xml:id="lem.16">Az mi hasunc es mi bélünc</lem>
                            <rdg wit="#W2" xml:id="rdg.25">és</rdg>
                        </app></l>
                    <l xml:id="l.104"><app xml:id="app.17">
                            <lem wit="#KK" xml:id="lem.17">Már szintén az földhöz ragadott.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.26">szinte</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.14">
                    <fw corresp="Szenci Molnár Albert" type="lg">14 </fw>
                    <l xml:id="l.105"><app xml:id="app.18">
                            <lem wit="#KK" xml:id="lem.18">Kellyföl azért es otalmazz meg,</lem>
                            <rdg wit="#W2" xml:id="rdg.27">és</rdg>
                        </app></l>
                    <l xml:id="l.106">Irgalmasságod szerint tarts meg,</l>
                    <l xml:id="l.107">Es az te kegyességedböl</l>
                    <l xml:id="l.108">Ments ki minden inségünkböl.</l>
                </lg>
            </div>
