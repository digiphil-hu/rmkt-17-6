      <div type="poem" xml:id="d.1" xml:lang="hu">
        <fw type="originalNum">[RMKT XVII/6:] 88.</fw>
        <head type="title"><app xml:id="app.1">
            <lem wit="#KK" xml:id="lem.1">LXXXVIII. SOLTAR. <corr>T. B.</corr></lem>
            <rdg wit="#W1" xml:id="rdg.1">T. B.</rdg>
            <rdg wit="#W2 #W3" xml:id="rdg.2">C. M.</rdg>
          </app><note type="critic" xml:id="note.1">A zsoltár <persName>Bèze<idno type="ITIdata"
                >Q332684</idno></persName>-é!</note></head>
        <head type="sub">Könyörgés az kemény kisértetben és lelki hartzban.</head>
        <pb facs="208"> </pb>
        <lg xml:id="lg.1">
          <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
          <l xml:id="l.1"><app xml:id="app.2">
              <lem wit="#KK" xml:id="lem.2">UR Isten én idvösségem,</lem>
              <rdg wit="#W1" xml:id="rdg.3">üdvösségem</rdg>
            </app></l>
          <l xml:id="l.2">Eyjel nappal kiáltoc hozzád,</l>
          <l xml:id="l.3">Könyörgésemet meghalgassad,</l>
          <l xml:id="l.4">Es tekénts meg nagy inségem,</l>
          <l xml:id="l.5">Kegyessen hayts hozzam füledet,</l>
          <l xml:id="l.6">Erts meg én esedezésemet.</l>
        </lg>
        <lg xml:id="lg.2">
          <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
          <l xml:id="l.7">Az én lelkem nyavalyáckal</l>
          <l xml:id="l.8">Tellyességgel eláratt, eltölt,</l>
          <l xml:id="l.9"><app xml:id="app.3">
              <lem wit="#KK" xml:id="lem.3">Mint az ki már az sirbe készölt,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.4">sirben</rdg>
            </app></l>
          <l xml:id="l.10">Es az pokolra alászál,</l>
          <l xml:id="l.11"><app xml:id="app.4">
              <lem wit="#KK" xml:id="lem.4">Vagyoc âhoz szinte hasonló</lem>
              <rdg wit="#W1" xml:id="rdg.5">azhoz</rdg>
            </app></l>
          <l xml:id="l.12">Az kinec már kész az koporsó.</l>
        </lg>
        <lg xml:id="lg.3">
          <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
          <l xml:id="l.13">Megfosztattam életemtöl,</l>
          <l xml:id="l.14">Mint az kiket agyon vertenec,</l>
          <l xml:id="l.15">Kic az halottac közt hevernec,</l>
          <l xml:id="l.16">Kikröl már nem emlekezöl,</l>
          <l xml:id="l.17">Kic eltemettetvén fekesznec,</l>
          <l xml:id="l.18">Es te kezedböl kiestenec.</l>
        </lg>
        <lg xml:id="lg.4">
          <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
          <l xml:id="l.19"><app xml:id="app.5">
              <lem wit="#KK" xml:id="lem.5">Az koporsoba töl engem,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.6">koporsoban</rdg>
            </app></l>
          <l xml:id="l.20">Bévetél az setét mélységben,</l>
          <l xml:id="l.21">Holott haragod nyom keményen,</l>
          <l xml:id="l.22">Elburitád szegény fejem</l>
          <l xml:id="l.23">Nagy árvizednec habjaival,</l>
          <l xml:id="l.24">Kic rám rohannac nagy zugással.</l>
        </lg>
        <lg xml:id="lg.5">
          <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
          <l xml:id="l.25">Engem te meg utáltatál,</l>
          <l xml:id="l.26"><app xml:id="app.6">
              <lem wit="#KK" xml:id="lem.6">Es tölem én esmeröimet</lem>
              <rdg wit="#W1" xml:id="rdg.7">ösmeröimet</rdg>
            </app></l>
          <l xml:id="l.27"><app xml:id="app.7">
              <lem wit="#KK" xml:id="lem.7">Meszsze vüd, elhadtac engeme<corr>t</corr>,</lem>
              <rdg wit="#W1" xml:id="rdg.8">engemet,</rdg>
              <rdg wit="#W2 #W3" xml:id="rdg.9">engemet?</rdg>
            </app></l>
          <l xml:id="l.28"><app xml:id="app.8">
              <lem wit="#KK" xml:id="lem.8">Es az tömlötzbe taszitál,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.10">tömlötzben</rdg>
            </app></l>
          <l xml:id="l.29">Holott kemény fogságban vagyoc,</l>
          <l xml:id="l.30"><app xml:id="app.9">
              <lem wit="#KK" xml:id="lem.9">Kiböl ki nem sz<corr>a</corr>badolhatoc.</lem>
              <rdg wit="#W1" xml:id="rdg.11">szabaodlhatok [A <hi rend="italic">Corrigenda</hi>-ban
                kijavítva:] szabadolhatoc</rdg>
              <rdg wit="#W2" xml:id="rdg.12">szabadolhátoc</rdg>
              <rdg wit="#W3" xml:id="rdg.13">szebadolhatoc</rdg>
            </app></l>
        </lg>
        <lg xml:id="lg.6">
          <metamark function="pause"><hi rend="super">*</hi><hi rend="sub">*</hi><hi rend="super"
              >*</hi></metamark>
          <fw corresp="Szenci Molnár Albert" type="lg"> 6 </fw>
          <l xml:id="l.31">Elkeseröttec szemeim,</l>
          <l xml:id="l.32">Fáydalom miatt elbádgyattac,</l>
          <l xml:id="l.33">Naponkint Uram téged hivlac,</l>
          <l xml:id="l.34">Hozzád terjesztvén kezeim:</l>
          <l xml:id="l.35">Halottaknac tészszé czudakat,</l>
          <l xml:id="l.36">Nékic mutatszé nagy dolgokat?</l>
        </lg>
        <lg xml:id="lg.7">
          <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
          <l xml:id="l.37">De föltámadé az halot</l>
          <l xml:id="l.38">Hogy czuda tételed hirdesse?</l>
          <l xml:id="l.39">Es az koporsoban vagyone</l>
          <l xml:id="l.40">Ki emlitse jovoltodot?</l>
          <l xml:id="l.41">Es igasságodat az sirben</l>
          <l xml:id="l.42">Ki diczérné veszedelmében?</l>
        </lg>
        <lg xml:id="lg.8">
          <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
          <l xml:id="l.43"><app xml:id="app.10">
              <lem wit="#KK" xml:id="lem.10">Az setétben ki esmerné</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.14">sétetben</rdg>
            </app></l>
          <l xml:id="l.44">Az te czuda téteményidet?</l>
          <l xml:id="l.45"><app xml:id="app.11">
              <lem wit="#KK" xml:id="lem.11">Azhol elf<corr>e</corr>lettec tégedet,</lem>
              <rdg wit="#W1" xml:id="rdg.15">elfelettek</rdg>
              <rdg wit="#W2" xml:id="rdg.16">elfelettec</rdg>
              <rdg wit="#W3" xml:id="rdg.17">elfélettec</rdg>
            </app></l>
          <l xml:id="l.46">Igasságod ki értené?</l>
          <l xml:id="l.47">De én czac te hozzád üvöltöc,</l>
          <l xml:id="l.48">Minden reggel néked könyörgöc.</l>
        </lg>
        <lg xml:id="lg.9">
          <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
          <l xml:id="l.49">Uram miert vetsz el engem,</l>
          <l xml:id="l.50">Miert reyted el szemeidet?</l>
          <l xml:id="l.51">Szegény vagyoc, Eröm elveszet,</l>
          <l xml:id="l.52"><app xml:id="app.12">
              <lem wit="#KK" xml:id="lem.12">Jay melly igen gyötrettetem,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.18">gyötrettettem</rdg>
            </app></l>
          <l xml:id="l.53">Ez én régi nagy inségemben</l>
          <l xml:id="l.54">Elötted vagyoc rettegésben.</l>
        </lg>
        <lg xml:id="lg.10">
          <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
          <l xml:id="l.55"><app xml:id="app.13">
              <lem wit="#KK" xml:id="lem.13">Nagy haragod re<corr>á</corr>m borult,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.19">reám</rdg>
              <rdg wit="#W3" xml:id="rdg.20">ream</rdg>
            </app></l>
          <l xml:id="l.56">Nagy rettegés engem környülvött,</l>
          <l xml:id="l.57">Es tellyességgel elmeritött,</l>
          <l xml:id="l.58">Mint az árviz reám todult.</l>
          <l xml:id="l.59"><app xml:id="app.14">
              <lem wit="#KK" xml:id="lem.14">Sanyargat engem minden dolog,</lem>
              <rdg wit="#W2" xml:id="rdg.21">Sannyargat</rdg>
            </app></l>
          <l xml:id="l.60">Valamelly én környülem forog.</l>
        </lg>
        <lg xml:id="lg.11">
          <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
          <l xml:id="l.61">Te viszed távol én tölem</l>
          <l xml:id="l.62">Minden esmerö barátimat,</l>
          <l xml:id="l.63">Akar mint hivjam rokonimat,</l>
          <l xml:id="l.64"><app xml:id="app.15">
              <lem wit="#KK" xml:id="lem.15">Ninczen semmi hiv emberem.</lem>
              <rdg wit="#W1" xml:id="rdg.22">hü</rdg>
            </app></l>
          <l xml:id="l.65">Régi társaim ez inségben</l>
          <l xml:id="l.66">Iszonyodnac jöni elömben.</l>
        </lg>
      </div>
