            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 140.</fw>
                <head type="title">CXL. SOLTAR. T. B.</head>
                <head type="sub">Könyörgése Davidnac az megszabaditásért.</head>
                <pb facs="316"/>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">SZabadits meg engem Ur Isten</l>
                    <l xml:id="l.2">Az gonosz czalárd embertöl,</l>
                    <l xml:id="l.3">Örizz eröszac tévöc ellen,</l>
                    <l xml:id="l.4">Ments meg az vakmerö néptöl.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.5">Kic czac hamisságot gondolnac</l>
                    <l xml:id="l.6">Mindenkor az ö szivökben,</l>
                    <l xml:id="l.7">Es hogy hadakat inditsanac</l>
                    <l xml:id="l.8">Azon vadnac mindenképpen.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.9"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Elesben fenic ö nyelveket</lem>
                            <rdg wit="#W1" xml:id="rdg.1">Élesben</rdg>
                        </app></l>
                    <l xml:id="l.10">Az kigyónac fulánkjánál,</l>
                    <l xml:id="l.11">Mint áspis kigyo egyebeket</l>
                    <l xml:id="l.12">Megsértnec mérges aykokval.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.13">Ments meg az gonoszoc kezéböl,</l>
                    <l xml:id="l.14">Az kic eröszakot tésznec,</l>
                    <l xml:id="l.15"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es igyekeznec szüntelenöl</lem>
                            <rdg wit="#W2" xml:id="rdg.2">szüntellenöl</rdg>
                        </app></l>
                    <l xml:id="l.16">Hogy engemet megeytsenec.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.17">Az kevélyec tört vetnec nékem,</l>
                    <l xml:id="l.18">Es mindenütt hálót hánnac,</l>
                    <l xml:id="l.19">Kötéllel megvonszác ösvényem,<note type="critic"
                            xml:id="note.1">= kötelet vonnak át ösvényemen (<persName>Lobwasser<idno
                                    corresp="Ambrosius Lobwasser"/></persName>: Seil mir fürziehen
                            auff den wegen).</note></l>
                    <l xml:id="l.20">Hogy engem megszoritsanac.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.21"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">En pedig mondéc: Oh Ur Isten,</lem>
                            <rdg wit="#W1" xml:id="rdg.3">penig</rdg>
                        </app></l>
                    <l xml:id="l.22">Te vagy én erös Istenem!</l>
                    <l xml:id="l.23">Beszédem vegyed füleidben,</l>
                    <l xml:id="l.24">Halgasd meg esedezésem.</l>
                </lg>
                <lg xml:id="lg.7">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 7 </fw>
                    <l xml:id="l.25">Uram te vagy én segédségem</l>
                    <l xml:id="l.26">Mindennémü inségemben,</l>
                    <l xml:id="l.27">Azert vedelmezd meg én fejem</l>
                    <l xml:id="l.28"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Az hadakozo idöben.</lem>
                            <rdg wit="#W1" xml:id="rdg.4">üdöben</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.29">Ne engedd az hitetleneknec,</l>
                    <l xml:id="l.30">Hogy elö vigyéc dolgokat,</l>
                    <l xml:id="l.31">Hogy inkáb ne kevélkedgyenec,</l>
                    <l xml:id="l.32">Ronts meg gonosz szándékokat.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.33">En reám töröknec fejeket</l>
                    <l xml:id="l.34">Vonnyad mélto büntetésre,</l>
                    <l xml:id="l.35">Ö hamis igyekezeteket</l>
                    <l xml:id="l.36">Fordits az önnön fejekre.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.37">Szállyon réájoc lángozo szén,</l>
                    <l xml:id="l.38">Tüzzel megemésztessenec,</l>
                    <l xml:id="l.39"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Reckennyenec az földbe szörnyen,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">földben</rdg>
                        </app></l>
                    <l xml:id="l.40">Többé föl se kelhessenec</l>
                </lg>
                <lg xml:id="lg.11">
                    <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                    <l xml:id="l.41">Az hamis ember ö nyelvével</l>
                    <l xml:id="l.42"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Ne legyen nyomos ez
                                <corr>f</corr>ölden,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">ez földen</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">ezfölden</rdg>
                        </app></l>
                    <l xml:id="l.43">Az önnön vakmeröségével</l>
                    <l xml:id="l.44">Akadgyon szörnyü veszélben.</l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.45">Tudom hogy Isten az szegénnec</l>
                    <l xml:id="l.46"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Ügyét fölfogja
                                kegyesse<corr>n</corr>,</lem>
                            <rdg wit="#W1" xml:id="rdg.8">kegjessen,</rdg>
                            <rdg wit="#W2" xml:id="rdg.9">kegyessen,</rdg>
                            <rdg wit="#W3" xml:id="rdg.10">kegyessen!</rdg>
                        </app></l>
                    <l xml:id="l.47">Megkegyelmez az erötlennec,</l>
                    <l xml:id="l.48"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Igasság<corr>á</corr>t kijelentvén.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.11">Igasságát</rdg>
                            <rdg wit="#W3" xml:id="rdg.12">Igasságat</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.13">
                    <fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
                    <l xml:id="l.49"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Az igazac nagy diczöséggel</lem>
                            <rdg wit="#W1" xml:id="rdg.13">düczöséggel</rdg>
                        </app></l>
                    <l xml:id="l.50">Diczéric te szent nevedöt.</l>
                    <l xml:id="l.51">Es öröcké jo reménséggel</l>
                    <l xml:id="l.52">Megmaradnac szined elöt.</l>
                </lg>
            </div>
