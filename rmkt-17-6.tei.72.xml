                         <text>
                                                  <body>
                                                  <div type="poem" xml:id="d.1" xml:lang="hu">
                                                  <fw type="originalNum">[RMKT XVII/6:] 72.</fw>
                                                  <head type="title">LXXII. SOLTAR. C. M. 65.</head>
                                                  <head type="sub">Jövendölés az Christus országárol
                                                  â Salomon személyénec példázattyában.</head>
                                                  <head type="notation">Az LXV. Soltar
                                                  notájara.</head>
                                                  <lg xml:id="lg.1">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                                                  <l xml:id="l.1">URam az te itêletidet</l>
                                                  <l xml:id="l.2">Adgyad az királynac : / :</l>
                                                  <l xml:id="l.3">Igasságodnac add értelmét</l>
                                                  <l xml:id="l.4">Az király fiánac,</l>
                                                  <l rend="level_1" xml:id="l.5">Hogy ö az te nagy
                                                  seregedet</l>
                                                  <l xml:id="l.6">Igazán itéllye,</l>
                                                  <l xml:id="l.7">Es az te soc szegény népedet</l>
                                                  <l xml:id="l.8"><app xml:id="app.1">
                                                  <lem wit="#KK" xml:id="lem.1"
                                                  >Törv<corr>é</corr>nnyel vezérlye.</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.1">Törvénnyel</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.2">Törvennyel</rdg>
                                                  </app></l>
                                                  </lg>
                                                  <lg xml:id="lg.2">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                                                  <l xml:id="l.9">Az nép megláttya az hegyeken</l>
                                                  <l xml:id="l.10"><app xml:id="app.2">
                                                  <lem wit="#KK" xml:id="lem.2">Az békeség
                                                  sirj<corr>á</corr>t<note type="critic"
                                                  xml:id="note.1">Olv. zsírját.</note> :/:</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.3">sirját</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.4">sirjat</rdg>
                                                  </app></l>
                                                  <l xml:id="l.11">Az halmokon megláttya minden</l>
                                                  <l xml:id="l.12">Az igasság hasznát.</l>
                                                  <l rend="level_1" xml:id="l.13">Eröszaktul
                                                  megotalmazza</l>
                                                  <l xml:id="l.14">Az szegény kösséget,</l>
                                                  <l xml:id="l.15">Es nagy hatalmával megrontya</l>
                                                  <l xml:id="l.16">Az kegyetleneket.</l>
                                                  </lg>
                                                  <lg xml:id="lg.3">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                                                  <l xml:id="l.17"><app xml:id="app.3">
                                                  <lem wit="#KK" xml:id="lem.3">Diczér es retteg
                                                  téged minden</lem>
                                                  <rdg wit="#W2" xml:id="rdg.5">és</rdg>
                                                  </app></l>
                                                  <l xml:id="l.18">Tenéked engedvén : / :</l>
                                                  <l xml:id="l.19"><app xml:id="app.4">
                                                  <lem wit="#KK" xml:id="lem.4">Mig az nap es hold
                                                  tart az égen,</lem>
                                                  <rdg wit="#W2" xml:id="rdg.6">és</rdg>
                                                  </app></l>
                                                  <l xml:id="l.20"><app xml:id="app.5">
                                                  <lem wit="#KK" xml:id="lem.5">Szép
                                                  f<corr>é</corr>nyességében.</lem>
                                                  <rdg wit="#W1" xml:id="rdg.7">fényességében</rdg>
                                                  <rdg wit="#W2 #W3" xml:id="rdg.8"
                                                  >fenyességében</rdg>
                                                  </app></l>
                                                  <l rend="level_1" xml:id="l.21">Aláboczát szép
                                                  kedves essöt</l>
                                                  <l xml:id="l.22">Az kaszált mezöre,</l>
                                                  <l xml:id="l.23">Czöpögtet nagy szép
                                                  nedvességöt</l>
                                                  <l xml:id="l.24">Az elszáratt földre.</l>
                                                  </lg>
                                                  <lg xml:id="lg.4">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                                                  <l xml:id="l.25">Az igazaknac jol lesz dolgoc,</l>
                                                  <l xml:id="l.26">Mert megvirágoznac : / :</l>
                                                  <l xml:id="l.27">Szép békeségben lész lakásoc</l>
                                                  <l xml:id="l.28">Jártáig az holdnac.</l>
                                                  <l rend="level_1" xml:id="l.29">Uralkodic az
                                                  tenger szélén,</l>
                                                  <l xml:id="l.30">Mind az más tengerig,</l>
                                                  <l xml:id="l.31">Az Euphrates vize környékén</l>
                                                  <l xml:id="l.32">Az föld határáig.</l>
                                                  </lg>
                                                  <lg xml:id="lg.5">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                                                  <l xml:id="l.33">Elötte térdet fejet haytnac</l>
                                                  <l xml:id="l.34">Az idegen népec : / :</l>
                                                  <l xml:id="l.35"><app xml:id="app.6">
                                                  <lem wit="#KK" xml:id="lem.6">Az földet elötte
                                                  cz<corr>ó</corr>kollyác</lem>
                                                  <rdg wit="#W1 #W3" xml:id="rdg.9">czokollyác</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.10">czókollyác</rdg>
                                                  </app></l>
                                                  <l xml:id="l.36">Minden ellenségec.</l>
                                                  <l rend="level_1" xml:id="l.37">Az tengermelléki
                                                  királyoc,</l>
                                                  <l xml:id="l.38">Es szigetbéliec,</l>
                                                  <l xml:id="l.39">Es az Arabiai dúsoc</l>
                                                  <l xml:id="l.40">Ayándéckal jönec.</l>
                                                  </lg>
                                                  <lg xml:id="lg.6">
                                                  <metamark function="pause"/>
                                                  <fw corresp="Szenci Molnár Albert" type="lg"><hi
                                                  rend="super">*</hi><hi rend="sub">*</hi><hi
                                                  rend="super">*</hi> 6 </fw>
                                                  <l xml:id="l.41">Nagy alázatoson imádgyác</l>
                                                  <l xml:id="l.42">Öt minden királyoc : / :</l>
                                                  <l xml:id="l.43">Minden népec ötet
                                                  szolgállyác,</l>
                                                  <l xml:id="l.44">Es ö leszen uroc.</l>
                                                  <l rend="level_1" xml:id="l.45">Mert ö az szegént
                                                  megsegéti,</l>
                                                  <l xml:id="l.46">Az ki ötet hivja,</l>
                                                  <l xml:id="l.47">Es az nyomorultat megmenti,</l>
                                                  <l xml:id="l.48">Kinec nincz gyámola.</l>
                                                  </lg>
                                                  <lg xml:id="lg.7">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                                                  <l xml:id="l.49">Az szükölködököt megszánnya</l>
                                                  <l xml:id="l.50"><app xml:id="app.7">
                                                  <lem wit="#KK" xml:id="lem.7">Nagy
                                                  k<corr>e</corr>gyességében : / :</lem>
                                                  <rdg wit="#W1" xml:id="rdg.11">kegjességében</rdg>
                                                  <rdg wit="#W2 #W3" xml:id="rdg.12"
                                                  >kégyességében</rdg>
                                                  </app></l>
                                                  <l xml:id="l.51">Es az szegént hozzá fogadgya</l>
                                                  <l xml:id="l.52">Megörizvén hiven.</l>
                                                  <l rend="level_1" xml:id="l.53">Eröszaktul
                                                  megtartya öket</l>
                                                  <l xml:id="l.54">Es az czalárdságtul,</l>
                                                  <l xml:id="l.55">Nagyra böczülli ö véreket,</l>
                                                  <l xml:id="l.56">Megmenti gonosztul.</l>
                                                  </lg>
                                                  <lg xml:id="lg.8">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                                                  <l xml:id="l.57">Eltében ayándékoztatic</l>
                                                  <l xml:id="l.58">Sébai arannyal : / :</l>
                                                  <l xml:id="l.59"><app xml:id="app.8">
                                                  <lem wit="#KK" xml:id="lem.8">Diczöségessen
                                                  köszöntetic</lem>
                                                  <rdg wit="#W1" xml:id="rdg.13">Düczöségessen</rdg>
                                                  </app></l>
                                                  <l xml:id="l.60">Nagy szép áldásockal.</l>
                                                  <l rend="level_1" xml:id="l.61">Teremnec szép sürö
                                                  gabonác</l>
                                                  <l xml:id="l.62">Az hegy oldalakon,</l>
                                                  <l xml:id="l.63">Az szép vetésec ingadoznac</l>
                                                  <l xml:id="l.64">Mint fác az Libanon.</l>
                                                  </lg>
                                                  <lg xml:id="lg.9">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                                                  <l xml:id="l.65">Az városbéliec nagy szépen</l>
                                                  <l xml:id="l.66">Nönec virágoznac : / :</l>
                                                  <l xml:id="l.67">Mint az szép zöld pásit
                                                  mezöben</l>
                                                  <l xml:id="l.68">Az füvec villagnac.</l>
                                                  <l rend="level_1" xml:id="l.69"><app
                                                  xml:id="app.9">
                                                  <lem wit="#KK" xml:id="lem.9">Ez királnac nagy
                                                  diczösége</lem>
                                                  <rdg wit="#W1" xml:id="rdg.14">düczösége</rdg>
                                                  </app></l>
                                                  <l xml:id="l.70">Mind öröcké megáll,</l>
                                                  <l xml:id="l.71">Kiterjed fölségénec neve</l>
                                                  <l xml:id="l.72">Mig az nap fény szolgáll.</l>
                                                  </lg>
                                                  <lg xml:id="lg.10">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                                                  <l xml:id="l.73">Ez földön minden nemzetségec</l>
                                                  <l xml:id="l.74">Ötet áldgyác vigan : / :</l>
                                                  <l xml:id="l.75"><app xml:id="app.10">
                                                  <lem wit="#KK" xml:id="lem.10">Es szivec szerint
                                                  diczekednec</lem>
                                                  <rdg wit="#W1" xml:id="rdg.15">düczekednek</rdg>
                                                  </app></l>
                                                  <l xml:id="l.76">Ez kegyes királyban.</l>
                                                  <l rend="level_1" xml:id="l.77"><app
                                                  xml:id="app.11">
                                                  <lem wit="#KK" xml:id="lem.11">Az pogányokis igy
                                                  diczéric:</lem>
                                                  <rdg wit="#W2" xml:id="rdg.16">így</rdg>
                                                  </app></l>
                                                  <l xml:id="l.78"><app xml:id="app.12">
                                                  <lem wit="#KK" xml:id="lem.12">Diczösség
                                                  Istennec,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.17">Düczösség</rdg>
                                                  </app></l>
                                                  <l xml:id="l.79">Az ki nagy czudát
                                                  czelekeszic,</l>
                                                  <l xml:id="l.80">Ura Izraelnec.</l>
                                                  </lg>
                                                  <lg xml:id="lg.11">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                                                  <l xml:id="l.81"><app xml:id="app.13">
                                                  <lem wit="#KK" xml:id="lem.13">Az ö neve nagy
                                                  diczöséggel</lem>
                                                  <rdg wit="#W1" xml:id="rdg.18">düczöséggel</rdg>
                                                  </app></l>
                                                  <l xml:id="l.82">Mindenütt áldatic : / :</l>
                                                  <l xml:id="l.83"><app xml:id="app.14">
                                                  <lem wit="#KK" xml:id="lem.14"
                                                  >Sz<corr>e</corr>ntség<corr>é</corr>nec
                                                  diczéretivel</lem>
                                                  <rdg wit="#W1" xml:id="rdg.19">Szentségénec</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.20">Széntségénec</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.21">Széntségenec</rdg>
                                                  </app></l>
                                                  <l xml:id="l.84">Mind ez föld eltelic.</l>
                                                  </lg>
                                                  </div>
