      <div type="poem" xml:id="d.1" xml:lang="hu">
        <fw type="originalNum">[RMKT XVII/6:] 91.</fw>
        <head type="title">XCI. SOLTAR. C. M.</head>
        <head type="sub">Vigaztalás az veszedelemben.</head>
        <pb facs="215"> </pb>
        <lg xml:id="lg.1">
          <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
          <l xml:id="l.1">AZki az fölséges Urnac</l>
          <l xml:id="l.2">Lakozic otalmában,</l>
          <l xml:id="l.3">Es ez nagy hatalmasságnac</l>
          <l xml:id="l.4">Nyugoszic árnyékában.</l>
          <l rend="level_1" xml:id="l.5">Ez illyen nyilván mondhattya:</l>
          <l xml:id="l.6">Isten az én kövárom,</l>
          <l xml:id="l.7"><app xml:id="app.1">
              <lem wit="#KK" xml:id="lem.1">Ö életemnec otalma,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.1">életemnec</rdg>
              <rdg wit="#W3" xml:id="rdg.2">eletemnec</rdg>
            </app></l>
          <l xml:id="l.8">Es czac ö benne bizom.</l>
        </lg>
        <lg xml:id="lg.2">
          <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
          <l xml:id="l.9">Az vadásznac ö tööritöl</l>
          <l xml:id="l.10">Téged megment féltedben,</l>
          <l xml:id="l.11">Az hamis nyelvec mérgétöl</l>
          <l xml:id="l.12">Megotalmaz kegyessen.</l>
          <l rend="level_1" xml:id="l.13">Téged ö kedves szárnyával</l>
          <l xml:id="l.14">Takargat és béfedez,</l>
          <l xml:id="l.15">Es az ö igassagával</l>
          <l xml:id="l.16">Mint paisval védelmez.</l>
        </lg>
        <lg xml:id="lg.3">
          <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
          <l xml:id="l.17">Nem leszen néked félelmed</l>
          <l xml:id="l.18">Eyjeli irtozástol,</l>
          <l xml:id="l.19">Szived nappal meg nem ijed</l>
          <l xml:id="l.20">Az röpölö gyors nyiltol:</l>
          <l rend="level_1" xml:id="l.21">Nem árt néked semmiképpen</l>
          <l xml:id="l.22">Az eyjeli döglelet,</l>
          <l xml:id="l.23">Az halálos dög délszinben</l>
          <l xml:id="l.24">Néked semmit nem tehet.</l>
        </lg>
        <lg xml:id="lg.4">
          <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
          <l xml:id="l.25">Ha te mellöled egy felöl</l>
          <l xml:id="l.26">Ezren elesnénekis,</l>
          <l xml:id="l.27">Es tiz ezren job kéz felöl</l>
          <l xml:id="l.28">Nem árthat néked mégis.</l>
          <l rend="level_1" xml:id="l.29">Söt még nézelled kedvedént</l>
          <l xml:id="l.30">Öket szemeid elött,</l>
          <l xml:id="l.31">Mondván: ö érdemec szerént</l>
          <l xml:id="l.32">Ez veszél raytoc esött.</l>
        </lg>
        <lg xml:id="lg.5">
          <metamark function="pause"/>
          <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi rend="sub"
              >*</hi><hi rend="super">*</hi> 5 </fw>
          <l xml:id="l.33">Somma szerint, az Istenben</l>
          <l xml:id="l.34">Vetem hiedelmemet,</l>
          <l xml:id="l.35">Az ki ül az magas helyben,</l>
          <l xml:id="l.36">Ebben vesd remenségedet:<note type="critic" xml:id="note.1">A sor egy
              szótaggal többet tartalmaz, mint kellene.</note></l>
          <l rend="level_1" xml:id="l.37">Es semmi kár téged nem ér,</l>
          <l xml:id="l.38">Sem nem esel veszélben,</l>
          <l xml:id="l.39">Es minden gonosz hátratér,</l>
          <l xml:id="l.40">Házad felé sem megyen.</l>
        </lg>
        <lg xml:id="lg.6">
          <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
          <l xml:id="l.41">Mert az ö szent angyalinac</l>
          <l xml:id="l.42">Megparanczolta nyilván,</l>
          <l xml:id="l.43">Hogy téged otalmazzanac</l>
          <l xml:id="l.44">Minden te utaidban.</l>
          <l rend="level_1" xml:id="l.45">Ezec tégedet nagy szépen</l>
          <l xml:id="l.46"><app xml:id="app.2">
              <lem wit="#KK" xml:id="lem.2">Ö kezekben hordoznac,</lem>
              <rdg wit="#W1" xml:id="rdg.3">kezzekben</rdg>
            </app></l>
          <l xml:id="l.47">Hogy lábad ne üsd az köben,</l>
          <l xml:id="l.48">Olly hiven igazgatnac.</l>
        </lg>
        <lg xml:id="lg.7">
          <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
          <l xml:id="l.49">Oroszlánon és sárkányon</l>
          <l xml:id="l.50">Minden kár nélkül járhatsz,</l>
          <l xml:id="l.51">Oroszlán kölkön és kigyon</l>
          <l xml:id="l.52">Lábaiddal tapodhatsz.</l>
          <l rend="level_1" xml:id="l.53">Mond Isten: ötet megtartom,</l>
          <l xml:id="l.54">Mert engem szivböl szeret,</l>
          <l xml:id="l.55"><app xml:id="app.3">
              <lem wit="#KK" xml:id="lem.3">En ötet megot<corr>a</corr>lmazom,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.4">megotalmazom</rdg>
              <rdg wit="#W3" xml:id="rdg.5">megotálmazom</rdg>
            </app></l>
          <l xml:id="l.56">Mert diczéri nevemet.</l>
        </lg>
        <lg xml:id="lg.8">
          <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
          <l xml:id="l.57">Mihelt hiv könyörgésében,</l>
          <l xml:id="l.58">Ötet menten segétem,</l>
          <l xml:id="l.59">Véle leszec szükségében,</l>
          <l xml:id="l.60">Kiböl hamar kiveszem.</l>
          <l rend="level_1" xml:id="l.61"><app xml:id="app.4">
              <lem wit="#KK" xml:id="lem.4">Es nagy diczöségre ötet</lem>
              <rdg wit="#W1" xml:id="rdg.6">düczöségre</rdg>
            </app></l>
          <l xml:id="l.62">Emelem, magasztalom,</l>
          <l xml:id="l.63">Es az én segedelmemet</l>
          <l xml:id="l.64">Ö néki megmutatom.</l>
        </lg>
      </div>
