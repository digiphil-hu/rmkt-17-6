            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 53.</fw>
                <head type="title">LIII. SOLTAR. T. B. 14.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Ez Soltárnac értelme és notája eggyez az
                            odaföl valo XIIII. Soltárral, és mayd ugyan azon igékböl áll.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">éggyez</rdg>
                    </app></head>
                <pb facs="132"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">AZ bolond igy szól az ö szivében:</l>
                    <l xml:id="l.2"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Ninczen Isten, azért
                                gono<corr>ssá</corr>gban él,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.2">gonosságban</rdg>
                            <rdg wit="#W3" xml:id="rdg.3">gonnsagban</rdg>
                        </app></l>
                    <l xml:id="l.3">Utálatos bünt teszen, semmit nem fél,</l>
                    <l xml:id="l.4"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Ez egez földen az ki jot tegyen</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">földön</rdg>
                        </app></l>
                    <l xml:id="l.5">Senki ninczen.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.6">Az Ur az égböl alá tekinte,</l>
                    <l xml:id="l.7">Ez földön az emberec fiaira,</l>
                    <l xml:id="l.8">Hogy meglássa ha kinec esze volna,</l>
                    <l xml:id="l.9">Ha az Istent valaki keresné,</l>
                    <l xml:id="l.10">Es tisztelné.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.11"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">De azt jol láttya diczöségében,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">düczöségében</rdg>
                        </app></l>
                    <l xml:id="l.12">Hogy az jo utrol eltértec mindenec,</l>
                    <l xml:id="l.13">Mindnyájan förtelmes bünben hevernec,</l>
                    <l xml:id="l.14">Az ki az Istent tisztelné hiven</l>
                    <l xml:id="l.15">Czac egy sinczen.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.16">De az hamissac meg nem gondollyác,</l>
                    <l xml:id="l.17">Hogy népemet mint az kenyért megeszic,</l>
                    <l xml:id="l.18">Meg nem térnec söt magokat elhiszic,</l>
                    <l xml:id="l.19">Az Istent segédségül nem hivjác,</l>
                    <l xml:id="l.20">Sem urallyác.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.21">Az hol nincz félelem, ott rettegnec,</l>
                    <l xml:id="l.22">Mert megtöri ö czontyokat az Isten,</l>
                    <l xml:id="l.23">Es boszut áll az te ellenségiden,</l>
                    <l xml:id="l.24">Töled, Sion, meg szégyenitetnec,</l>
                    <l xml:id="l.25">Kic rád törnec.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.26"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Az Sionrol valyon s’ ki jövendel,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">valljon</rdg>
                        </app></l>
                    <l xml:id="l.27"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Ki az szent Izraelt
                                    megszabadit<corr>ya?</corr></lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.7">megszabaditya?</rdg>
                            <rdg wit="#W3" xml:id="rdg.8">megszabaditsa<note type="critic"
                                    xml:id="note.1">Vö. 14,32 és <persName>Lobwasser<idno
                                            corresp="Ambrosius Lobwasser"/></persName>: Der Jsrael
                                    erlöß aus seinen nöten?</note></rdg>
                        </app></l>
                    <l xml:id="l.28">Ha Isten fogságbol népét kihozza,</l>
                    <l xml:id="l.29"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Örvend az Jácob es az Izrael</lem>
                            <rdg wit="#W2" xml:id="rdg.9">és</rdg>
                        </app></l>
                    <l xml:id="l.30"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Tellyes szivvel.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">szivel</rdg>
                        </app></l>
                </lg>
            </div>
