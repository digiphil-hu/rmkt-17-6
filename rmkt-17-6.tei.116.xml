			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 116.</fw>
				<head type="title">CXVI. SOLTAR. T. B. 74.</head>
				<head type="sub">Hálá adása Davidnac, az veszedelemböl valo megszabadulásért.</head>
				<head type="notation">Az LXXIV. Soltar notajára.</head>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">SZeretem és áldom az Ur Istent,</l>
					<l xml:id="l.2"><app xml:id="app.1">
							<lem wit="#KK" xml:id="lem.1">Mert meghalgatá az én
								besz<corr>é</corr>demet</lem>
							<rdg wit="#W1 #W3" xml:id="rdg.1">beszedemet</rdg>
							<rdg wit="#W2" xml:id="rdg.2">beszédemet</rdg>
						</app></l>
					<l xml:id="l.3">Könyörgésemre haytá kegyes fülét,</l>
					<l xml:id="l.4">Kiert imádom ötet naponként.</l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.5">Midön az halál környülvön engem,</l>
					<l xml:id="l.6">Es czaknem szörnyü köteliben eyte,</l>
					<l xml:id="l.7">Pokolnac kinnya engem rettegete,</l>
					<l xml:id="l.8"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">Nagy volt bánatom es nagy sérelmem.</lem>
							<rdg wit="#W2" xml:id="rdg.3">és</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.9"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">Segétségül hivám <corr>a</corr>z Ur
								nevét,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.4">az</rdg>
							<rdg wit="#W3" xml:id="rdg.5">áz</rdg>
						</app></l>
					<l xml:id="l.10">Tarts meg lelkemet, s’ ottan megsegite,</l>
					<l xml:id="l.11">Az Ur hiv, igaz, és nagy ö jo kedve,</l>
					<l xml:id="l.12"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">Oe megörzi az
								eg<corr>y</corr>ügyöeket.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.6">együgyöëket</rdg>
							<rdg wit="#W3" xml:id="rdg.7">egügyöeket</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.13">Mikor én nagy nyavalyában volnéc,</l>
					<l xml:id="l.14">Ottan megmenté nyomorult életem:</l>
					<l xml:id="l.15">Légy czendességben te azért én lelkem,</l>
					<l xml:id="l.16"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Látván segedelm<corr>é</corr>t
								fölségénec.</lem>
							<rdg wit="#W1" xml:id="rdg.8">segedelmit fölséginec</rdg>
							<rdg wit="#W2" xml:id="rdg.9">segedelmét</rdg>
							<rdg wit="#W3" xml:id="rdg.10">segedelmet</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.17">Te megmentél az haláltol engem,</l>
					<l xml:id="l.18"><app xml:id="app.6">
							<lem wit="#KK" xml:id="lem.6">Szemem sirástol, lábamot eséstöl:</lem>
							<rdg wit="#W1" xml:id="rdg.11">lábomat</rdg>
						</app></l>
					<l xml:id="l.19">Az élöc földén jároc szünetlenöl,</l>
					<l xml:id="l.20">Az te szined elött én Istenem.</l>
				</lg>
				<lg xml:id="lg.6">
					<metamark function="pause"/>
					<fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
							rend="sub">*</hi><hi rend="super">*</hi> 6 </fw>
					<l xml:id="l.21">Hittem Istenben, mikor igy szoléc,</l>
					<l xml:id="l.22">En szegény lelkem vala nagy inségben.</l>
					<l xml:id="l.23">Es ezt mondám félelmes sietségben:</l>
					<l xml:id="l.24"><app xml:id="app.7">
							<lem wit="#KK" xml:id="lem.7">Hiszem hazugoc minden emberec.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.12">emberec?</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.7">
					<fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
					<l xml:id="l.25"><app xml:id="app.8">
							<lem wit="#KK" xml:id="lem.8">Mit adgyac az Urnac jo tetiért?</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.13">tetiért?</rdg>
							<rdg wit="#W3" xml:id="rdg.14">tetiért.</rdg>
						</app></l>
					<l xml:id="l.26">Az hálá ado pohárt én fölveszem,</l>
					<l xml:id="l.27">Es az Ur jotéteményit hirdetem,</l>
					<l xml:id="l.28"><app xml:id="app.9">
							<lem wit="#KK" xml:id="lem.9">Szent nevét áld<corr>o</corr>m
								segétségiért.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.15">áldom</rdg>
							<rdg wit="#W3" xml:id="rdg.16">áldóm</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.8">
					<fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
					<l xml:id="l.29">Fogadásom az egéz nép elött,</l>
					<l xml:id="l.30"><app xml:id="app.10">
							<lem wit="#KK" xml:id="lem.10">Hálá<corr>a</corr>dással megadom
								nékie,</lem>
							<rdg wit="#W1" xml:id="rdg.17">Háláadással</rdg>
							<rdg wit="#W2" xml:id="rdg.18">Hálaádással</rdg>
							<rdg wit="#W3" xml:id="rdg.19">Háládással</rdg>
						</app></l>
					<l xml:id="l.31">Az hiveknec halála (minden hidgye)</l>
					<l xml:id="l.32">Drágalátos az Ur szeme elött.</l>
				</lg>
				<lg xml:id="lg.9">
					<fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
					<l xml:id="l.33"><app xml:id="app.11">
							<lem wit="#KK" xml:id="lem.11">Imádlac téged idvözitömet</lem>
							<rdg wit="#W1" xml:id="rdg.20"><sic>üdvozitömet</sic></rdg>
						</app>,</l>
					<l xml:id="l.34">Ki engem választál szegény szolgádnac.</l>
					<l xml:id="l.35"><app xml:id="app.12">
							<lem wit="#KK" xml:id="lem.12">Nékem szolgálo leányod fiânac,</lem>
							<rdg wit="#W1" xml:id="rdg.21">Fia léven szolgálo leányodnac</rdg>
						</app></l>
					<l xml:id="l.36"><app xml:id="app.13">
							<lem wit="#KK" xml:id="lem.13">Fölold<corr>o</corr>zád minden
								kötelimet.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.22">Föloldozád</rdg>
							<rdg wit="#W3" xml:id="rdg.23">Föloldazád</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.10">
					<fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
					<l xml:id="l.37">Aldozom néked háláadással,</l>
					<l xml:id="l.38"><app xml:id="app.14">
							<lem wit="#KK" xml:id="lem.14">N<corr>e</corr>vedet minden nép elött
								hirdetem:</lem>
							<rdg wit="#W1 #W2 #W3" xml:id="rdg.24">Névedet</rdg>
						</app></l>
					<l xml:id="l.39"><app xml:id="app.15">
							<lem wit="#KK" xml:id="lem.15">Es az melly fogadást az elött
								töttem,</lem>
							<rdg wit="#W1" xml:id="rdg.25">mélly</rdg>
						</app></l>
					<l xml:id="l.40">Megállom minden elött vigsággal.</l>
				</lg>
				<lg xml:id="lg.11">
					<fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
					<l xml:id="l.41">Az te Hâzadnac ö pitvariban</l>
					<l xml:id="l.42">Es egész Jerusalemben tisztellec:</l>
					<l xml:id="l.43"><app xml:id="app.16">
							<lem wit="#KK" xml:id="lem.16">Velem eggyütt az Urat
								dicz<corr>ér</corr>jétec,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.26">diczérjetec</rdg>
							<rdg wit="#W3" xml:id="rdg.27">diczetjétec</rdg>
						</app></l>
					<l xml:id="l.44"><app xml:id="app.17">
							<lem wit="#KK" xml:id="lem.17">Mondgyatoc Alleluját mindnyájan.</lem>
							<rdg wit="#W2" xml:id="rdg.28">mindnyáján</rdg>
						</app></l>
				</lg>
			</div>
		</body>
	</text>
