      <div type="poem" xml:id="d.1" xml:lang="hu">
        <fw type="originalNum">[RMKT XVII/6:] 141.</fw>
        <head type="title">CXLI. SOLTAR. T. B.</head>
        <head type="sub"><app xml:id="app.1">
            <lem wit="#KK" xml:id="lem.1">Könyörgése Davidnac az Isten vezerléséert és
                megszabaditás<corr>a</corr>ert.</lem>
            <rdg wit="#W1" xml:id="rdg.1">megszabaditásaert</rdg>
            <rdg wit="#W2 #W3" xml:id="rdg.2">megszabaditásert</rdg>
          </app></head>
        <pb facs="318"/>
        <lg xml:id="lg.1">
          <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
          <l xml:id="l.1"><app xml:id="app.2">
              <lem wit="#KK" xml:id="lem.2">TE hozz<corr>á</corr>d kiáltoc Ur Isten,</lem>
              <rdg wit="#W1" xml:id="rdg.3">hozzád</rdg>
              <rdg wit="#W2 #W3" xml:id="rdg.4">hozzad</rdg>
            </app></l>
          <l xml:id="l.2">Siess én hozzám, ne késsél,</l>
          <l xml:id="l.3"><app xml:id="app.3">
              <lem wit="#KK" xml:id="lem.3">Mert téged ohaytlac szivvel,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.5">szivel</rdg>
            </app></l>
          <l xml:id="l.4">Azért halgass meg kegyelmessen.</l>
        </lg>
        <lg xml:id="lg.2">
          <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
          <l xml:id="l.5"><app xml:id="app.4">
              <lem wit="#KK" xml:id="lem.4">Könyörgésem elödbe me<corr>n</corr>nyen</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.6">elödben mennyen</rdg>
              <rdg wit="#W3" xml:id="rdg.7">menyen</rdg>
            </app></l>
          <l xml:id="l.6">Mint jo illat füstölgése,</l>
          <l xml:id="l.7">Kezeim fölemelése</l>
          <l xml:id="l.8">Estveli áldozatul legyen.</l>
        </lg>
        <lg xml:id="lg.3">
          <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
          <l xml:id="l.9">Örizettel tarts meg én szájam,</l>
          <l xml:id="l.10">Az melly gondot tartson arra,</l>
          <l xml:id="l.11">Závort szerezz ayakimra,</l>
          <l xml:id="l.12">Hogy tölöc ne legyen nyavalyám.</l>
        </lg>
        <lg xml:id="lg.4">
          <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
          <l xml:id="l.13">Ne boczásd szivemet gonoszra,</l>
          <l xml:id="l.14">Hogy az hamissan élöckel</l>
          <l xml:id="l.15">Soha ne ereszkedgyem el</l>
          <l xml:id="l.16">Az ö nyájas kévánságokra.</l>
        </lg>
        <lg xml:id="lg.5">
          <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
          <l xml:id="l.17">Az hiv ember megfedgyen engem,</l>
          <l xml:id="l.18">Es feddése kedves leszen,</l>
          <l xml:id="l.19">Mint balsam olay fejemen,</l>
          <l xml:id="l.20">Még verése sem árt én nékem.</l>
        </lg>
        <lg xml:id="lg.6">
          <metamark function="pause"/>
          <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi rend="sub"
              >*</hi><hi rend="super">*</hi> 6 </fw>
          <l xml:id="l.21"><app xml:id="app.5">
              <lem wit="#KK" xml:id="lem.5">Mert én elhiszem s’ mondom nyilv<corr>á</corr>n</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.8">nyilvan</rdg>
              <rdg wit="#W3" xml:id="rdg.9">nyilvã</rdg>
            </app>,</l>
          <l xml:id="l.22">Hogy még az hitetlenekért</l>
          <l xml:id="l.23">Imátkozom mentségekért,</l>
          <l xml:id="l.24">Nyavalyájokon szánakodván.</l>
        </lg>
        <lg xml:id="lg.7">
          <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
          <l xml:id="l.25"><app xml:id="app.6">
              <lem wit="#KK" xml:id="lem.6">Midön az ö föfö bir<corr>á</corr>joc</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.10">birájoc</rdg>
              <rdg wit="#W3" xml:id="rdg.11">birajoc</rdg>
            </app></l>
          <l xml:id="l.26">Magas helyröl lehânyatnac,</l>
          <l xml:id="l.27"><app xml:id="app.7">
              <lem wit="#KK" xml:id="lem.7">Es osztán eszökbe jutnac</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.12">eszökben</rdg>
            </app></l>
          <l xml:id="l.28"><app xml:id="app.8">
              <lem wit="#KK" xml:id="lem.8">Az én besz<corr>é</corr>dim, kic nyájasoc.</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.13">beszédim</rdg>
              <rdg wit="#W3" xml:id="rdg.14">beszedim</rdg>
            </app></l>
        </lg>
        <lg xml:id="lg.8">
          <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
          <l xml:id="l.29">Mint ha ki fát vág nagy erövel,</l>
          <l xml:id="l.30">Az forgáczit széllel hintven,</l>
          <l xml:id="l.31">Az mi czontainc acképpen</l>
          <l xml:id="l.32">Hevernec az sir mellett széllel.</l>
        </lg>
        <lg xml:id="lg.9">
          <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
          <l xml:id="l.33">Szemeim reád néznec Uram,</l>
          <l xml:id="l.34">Reménségem vagyon benned,</l>
          <l xml:id="l.35">Lelkemet hát el ne vegyed,</l>
          <l xml:id="l.36">Mert te vagy minden bizodalmam.</l>
        </lg>
        <lg xml:id="lg.10">
          <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
          <l xml:id="l.37">Az törtöl, kit nékem vetöttec,</l>
          <l xml:id="l.38">Es hálojoktul örizz meg,</l>
          <l xml:id="l.39"><app xml:id="app.9">
              <lem wit="#KK" xml:id="lem.9">Az hamis népektül m<corr>e</corr>ntsmeg,</lem>
              <rdg wit="#W1" xml:id="rdg.15">ménczmeg</rdg>
              <rdg wit="#W2 #W3" xml:id="rdg.16">méntsmeg</rdg>
            </app></l>
          <l xml:id="l.40">Az kic vesztemre igyekeznec.</l>
        </lg>
        <lg xml:id="lg.11">
          <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
          <l xml:id="l.41">Eyts öket önnen hálójokban,</l>
          <l xml:id="l.42">Kit ök másnac készétettec,</l>
          <l xml:id="l.43">Hogy én veszél nélkül legyec,</l>
          <l xml:id="l.44">Mellettöc elmehessec bátran.</l>
        </lg>
      </div>
