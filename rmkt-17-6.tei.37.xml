        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 37.</fw>
                <head type="title">XXXVII. SOLTAR. C. M.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Vigaztalása Davidnac az
                                Istentele<corr>ne</corr>knec szerenczés allapattyoc ellen.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">Istenteleneknec</rdg>
                        <rdg wit="#W2 #W3" xml:id="rdg.2">Istenteleknec</rdg>
                    </app></head>
                <pb facs="95"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">NE boszszonkodgyál â gonosz tevökre,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">gonosztévökre</rdg>
                        </app></l>
                    <l xml:id="l.2">Midön ö nékic jól vagyon dolgoc,</l>
                    <l xml:id="l.3"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Ne nézz buslakodván
                                szerencz<corr>é</corr>jekre,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">szerenczéjekre</rdg>
                            <rdg wit="#W3" xml:id="rdg.5">szerenczejekre</rdg>
                        </app></l>
                    <l xml:id="l.4"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Ha l<corr>á</corr>tod hogy jobbul
                                állapattyoc,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">látod</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">latod</rdg>
                        </app></l>
                    <l xml:id="l.5">Mert mint az szénafü levágattatnac,</l>
                    <l xml:id="l.6">Es mint az zöld fü hamar elhulnac.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Tégy jol es bizzál erössen Istenben,</l>
                    <l xml:id="l.8"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Es békével élhetsz ez országban,</lem>
                            <rdg wit="#W2" xml:id="rdg.8">élhétsz</rdg>
                        </app></l>
                    <l xml:id="l.9"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Jo szerenczéd lesz minden életedben,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">lész</rdg>
                        </app></l>
                    <l xml:id="l.10">Örvendgy az Urnac nagy jovoltában,</l>
                    <l xml:id="l.11">Es valamit kérsz töle mind megnyéred,</l>
                    <l xml:id="l.12">Mindent megád, az mit kiván szived.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13">Támazd czac az Istenre minden dolgod,</l>
                    <l xml:id="l.14">Es bizzál kétségnélkül ö hozzá,</l>
                    <l xml:id="l.15">Mert ö megczelekedendi meglátod,</l>
                    <l xml:id="l.16">Artatlanságod világra hozza,</l>
                    <l xml:id="l.17">Hogy igasságod ugyan lássa minden,</l>
                    <l xml:id="l.18">Mint az fényes nap fénlic délszinben.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Bizd Istenre, es légy czendesz
                                szivedben,</lem>
                            <rdg wit="#W2" xml:id="rdg.10">és</rdg>
                        </app></l>
                    <l xml:id="l.20">Es reménségedet vesd ö benne,</l>
                    <l xml:id="l.21"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Ne haragudgyál jo
                                szerencz<corr>é</corr>jeken</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.11">szerenczéjeken</rdg>
                            <rdg wit="#W3" xml:id="rdg.12">szerenczejeken</rdg>
                        </app></l>
                    <l xml:id="l.22">Azoknac az kic élnec kedvekre,</l>
                    <l xml:id="l.23">Ne gondolly semmit az ö életeckel,</l>
                    <l xml:id="l.24"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Hogy vélec eggyütt bünbe ne essel.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.13">bünben ne essél</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Mert â gonoszac mind eltöröltetnec,</lem>
                            <rdg wit="#W1" xml:id="rdg.14">gonoszák</rdg>
                        </app></l>
                    <l xml:id="l.26">De az kic az nagy Istenben biznac,</l>
                    <l xml:id="l.27">Ez földnec azoc örökösi lesznec,</l>
                    <l xml:id="l.28">Az gonosztévöc szörnyen elhulnac,</l>
                    <l xml:id="l.29">Maydan ha ö helyeket megtekénted,</l>
                    <l xml:id="l.30">Az hól laktanac üressen leled.</l>
                </lg>
                <lg xml:id="lg.6">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 6 </fw>
                    <l xml:id="l.31">De az földet örökségül az hivec</l>
                    <l xml:id="l.32"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Birj<corr>á</corr>c, es nagy békeséggel
                                lakjác,</lem>
                            <rdg wit="#W1" xml:id="rdg.15">Birják</rdg>
                            <rdg wit="#W2" xml:id="rdg.16">Birjác és</rdg>
                            <rdg wit="#W3" xml:id="rdg.17">Birjac</rdg>
                        </app></l>
                    <l xml:id="l.33">Es ök szép czendességben gyönyörködnec,</l>
                    <l xml:id="l.34">De azon olálnac az hamissac,</l>
                    <l xml:id="l.35"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Hogy az igazat eythesséc
                                    vesz<corr>é</corr>lben,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.18">veszélben</rdg>
                            <rdg wit="#W3" xml:id="rdg.19">veszelben</rdg>
                        </app></l>
                    <l xml:id="l.36"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">Czikorgattyác fogokat az ellen.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.20">ez</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.37">De az Isten ezeket megneveti,</l>
                    <l xml:id="l.38">Mert láttya hogy napja elközelget,</l>
                    <l xml:id="l.39">Melly nap ezeknec egyszer végét veti.</l>
                    <l xml:id="l.40">Az hitetlen kivonsza fegyverét,</l>
                    <l xml:id="l.41">Kézivjét megvonsza, hogy ö meglöyje</l>
                    <l xml:id="l.42"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">Az szegént, es azt szörnyen
                                megöllye.</lem>
                            <rdg wit="#W2" xml:id="rdg.21">és</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.43">De az önnön fejére viszsza fordol,</l>
                    <l xml:id="l.44">Es tulaydon szivét általjárja,</l>
                    <l xml:id="l.45"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15">Es az ö erös kézivje megromol,</lem>
                            <rdg wit="#W1" xml:id="rdg.22">kéziye</rdg>
                        </app></l>
                    <l xml:id="l.46"><app xml:id="app.16">
                            <lem wit="#KK" xml:id="lem.16">Job az igaznac kisded joszága,</lem>
                            <rdg wit="#W1" xml:id="rdg.23">küsded</rdg>
                        </app></l>
                    <l xml:id="l.47">Az mellyel ö ékes czendességben él,</l>
                    <l xml:id="l.48">Az hamissaknac gazdag kinczeknél.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.49">Az gonoszaknac karjoc megrontatnac,</l>
                    <l xml:id="l.50">Erejeckel meg nem menekednec,</l>
                    <l xml:id="l.51">De az Ur otalmoc az igazaknac,</l>
                    <l xml:id="l.52">Mert idejeket tudgya ezeknec.</l>
                    <l xml:id="l.53">Minden napjait nékic följedzètte,</l>
                    <l xml:id="l.54">Örökségec megmarad öröcké.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.55"><app xml:id="app.17">
                            <lem wit="#KK" xml:id="lem.17">Gonosz idöbennis károc nem leszen,</lem>
                            <rdg wit="#W1" xml:id="rdg.24">üdöbennis</rdg>
                        </app></l>
                    <l xml:id="l.56"><app xml:id="app.18">
                            <lem wit="#KK" xml:id="lem.18">Es soha meg nem szégyenitetnec,</lem>
                            <rdg wit="#W1" xml:id="rdg.25">szegyenültetnec</rdg>
                        </app></l>
                    <l xml:id="l.57"><app xml:id="app.19">
                            <lem wit="#KK" xml:id="lem.19">Megelégitetnec az szüc idöben,</lem>
                            <rdg wit="#W1" xml:id="rdg.26">üdöben</rdg>
                        </app></l>
                    <l xml:id="l.58">De az Istentelenec elvesznec,</l>
                    <l xml:id="l.59"><app xml:id="app.20">
                            <lem wit="#KK" xml:id="lem.20">Az füstbe mennec, es ugy
                                elolvadnac,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.27">füstben</rdg>
                            <rdg wit="#W2" xml:id="rdg.28">és</rdg>
                        </app></l>
                    <l xml:id="l.60">Mint az kövére az kis báránnac.</l>
                </lg>
                <lg xml:id="lg.11">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 11 </fw>
                    <l xml:id="l.61">Az Istentelen soc kölczent fölvészen,</l>
                    <l xml:id="l.62"><app xml:id="app.21">
                            <lem wit="#KK" xml:id="lem.21">De igazán soha meg nem fizet,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.29">sohá</rdg>
                        </app></l>
                    <l xml:id="l.63"><app xml:id="app.22">
                            <lem wit="#KK" xml:id="lem.22">Az igaz örömest ád es jól tészen,</lem>
                            <rdg wit="#W2" xml:id="rdg.30">és</rdg>
                        </app></l>
                    <l xml:id="l.64"><app xml:id="app.23">
                            <lem wit="#KK" xml:id="lem.23">Annakokaért ez <corr>á</corr>ldott
                                nemzet</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.31">éz áldot</rdg>
                            <rdg wit="#W3" xml:id="rdg.32">aldott</rdg>
                        </app></l>
                    <l xml:id="l.65">Örököse lészen az siros földnec,</l>
                    <l xml:id="l.66">De az hitetlenec mind elvesznec.</l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.67">Mert ö járását az Ur igazgattya,</l>
                    <l xml:id="l.68">Es az ö utait jol vezérli,</l>
                    <l xml:id="l.69"><app xml:id="app.24">
                            <lem wit="#KK" xml:id="lem.24">T<corr>á</corr>ntorodástol öt
                                megotalmazza,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.33">Tántorodástol</rdg>
                            <rdg wit="#W3" xml:id="rdg.34">Tantorodástol</rdg>
                        </app></l>
                    <l xml:id="l.70">Mert ö ennec életit kedvelli.</l>
                    <l xml:id="l.71"><app xml:id="app.25">
                            <lem wit="#KK" xml:id="lem.25">Noha esic néha
                                b<corr>o</corr>tránkozása,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.35">néha botránkozása</rdg>
                            <rdg wit="#W3" xml:id="rdg.36">néhá batránkozása</rdg>
                        </app></l>
                    <l xml:id="l.72">El nem vész mert az Ur kézen tartya.</l>
                </lg>
                <lg xml:id="lg.13">
                    <fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
                    <l xml:id="l.73"><app xml:id="app.26">
                            <lem wit="#KK" xml:id="lem.26">Gyermec voltam, es immár
                                megvénhüttem,</lem>
                            <rdg wit="#W2" xml:id="rdg.37">és</rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.38">megvénhöttem</rdg>
                        </app></l>
                    <l xml:id="l.74">De én nem láttam soha szükségét</l>
                    <l xml:id="l.75"><app xml:id="app.27">
                            <lem wit="#KK" xml:id="lem.27">Az igazn<corr>a</corr>c, es én soha nem
                                löltem,</lem>
                            <rdg wit="#W1" xml:id="rdg.39">igaznac</rdg>
                            <rdg wit="#W2" xml:id="rdg.40">igaznac, és</rdg>
                            <rdg wit="#W3" xml:id="rdg.41">igaznác</rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.42">leltem</rdg>
                        </app></l>
                    <l xml:id="l.76"><app xml:id="app.28">
                            <lem wit="#KK" xml:id="lem.28">Hogy ö magva koldulna kenyeret,</lem>
                            <rdg wit="#W1" xml:id="rdg.43">kodolna</rdg>
                        </app></l>
                    <l xml:id="l.77"><app xml:id="app.29">
                            <lem wit="#KK" xml:id="lem.29">Kölczö<corr>n</corr> âd es minden napon
                                joltészen,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.44">Kölczön ád</rdg>
                            <rdg wit="#W3" xml:id="rdg.45">Kölczön, âd</rdg>
                            <rdg wit="#W2" xml:id="rdg.46">és</rdg>
                        </app></l>
                    <l xml:id="l.78"><app xml:id="app.30">
                            <lem wit="#KK" xml:id="lem.30">Es ö magvát meg<corr>á</corr>ldgya az
                                Isten.</lem>
                            <rdg wit="#W1" xml:id="rdg.47">megálgya</rdg>
                            <rdg wit="#W2" xml:id="rdg.48">megáldgya</rdg>
                            <rdg wit="#W3" xml:id="rdg.49">megaldgya</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.14">
                    <fw corresp="Szenci Molnár Albert" type="lg">14 </fw>
                    <l xml:id="l.79"><app xml:id="app.31">
                            <lem wit="#KK" xml:id="lem.31">Hadd el hát az gonoszt, es tégy minden
                                jot,</lem>
                            <rdg wit="#W2" xml:id="rdg.50">és</rdg>
                        </app></l>
                    <l xml:id="l.80"><app xml:id="app.32">
                            <lem wit="#KK" xml:id="lem.32">Hogy mind örö<corr>c</corr>ké te
                                megmaradhass,</lem>
                            <rdg wit="#W1" xml:id="rdg.51">örökke</rdg>
                            <rdg wit="#W2" xml:id="rdg.52">öröcke</rdg>
                            <rdg wit="#W3" xml:id="rdg.53">öröké</rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.54">megmaradhas</rdg>
                        </app></l>
                    <l xml:id="l.81">Mert az Ur Isten szeret igasságot,</l>
                    <l xml:id="l.82"><app xml:id="app.33">
                            <lem wit="#KK" xml:id="lem.33">Es az igazhoz igen irgalmass,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.55">irgalmas</rdg>
                        </app></l>
                    <l xml:id="l.83"><app xml:id="app.34">
                            <lem wit="#KK" xml:id="lem.34">De az hamis es istentelen ember,</lem>
                            <rdg wit="#W2" xml:id="rdg.56">és</rdg>
                        </app></l>
                    <l xml:id="l.84"><app xml:id="app.35">
                            <lem wit="#KK" xml:id="lem.35">Mind czel<corr>é</corr>destöl veszedelmet
                                nyér.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.57">czelédestöl</rdg>
                            <rdg wit="#W3" xml:id="rdg.58">czeledestöl</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.15">
                    <fw corresp="Szenci Molnár Albert" type="lg">15 </fw>
                    <l xml:id="l.85">Az igazac ez földet mind megnyeric</l>
                    <l xml:id="l.86">Es lakjác mint ö örökségeket,</l>
                    <l xml:id="l.87">Az igaznac szája nem hivolkodic,</l>
                    <l xml:id="l.88">Hanem mindenkor szól bölczeséget,</l>
                    <l xml:id="l.89">Ö nyelve nem szól semmi mulatságot,</l>
                    <l xml:id="l.90">De szüntelen beszéll igasságot.</l>
                </lg>
                <lg xml:id="lg.16">
                    <fw corresp="Szenci Molnár Albert" type="lg">16 </fw>
                    <l xml:id="l.91"><app xml:id="app.36">
                            <lem wit="#KK" xml:id="lem.36">Az Ur b<corr>e</corr>szédét ö
                                    sziv<corr>é</corr>ben vészi,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.59">beszédet ö szivében</rdg>
                            <rdg wit="#W3" xml:id="rdg.60">bészédét ö sziveben</rdg>
                        </app></l>
                    <l xml:id="l.92">Azért soha el nem téveledic,</l>
                    <l xml:id="l.93">Az gonosz, mint tolvay, az utat lesi,</l>
                    <l xml:id="l.94">Az igaz emberre olálkodic,</l>
                    <l xml:id="l.95">Azon gondolkodic hogy megfoghassa,</l>
                    <l xml:id="l.96">Es mint egy farkas megszaggathassa.</l>
                </lg>
                <lg xml:id="lg.17">
                    <fw corresp="Szenci Molnár Albert" type="lg">17 </fw>
                    <l xml:id="l.97"><app xml:id="app.37">
                            <lem wit="#KK" xml:id="lem.37">De az Isten nem bocz<corr>á</corr>ttya
                                kéziben,</lem>
                            <rdg wit="#W1 #W3" xml:id="rdg.61">boczattya</rdg>
                            <rdg wit="#W2" xml:id="rdg.62">boczáttya</rdg>
                        </app></l>
                    <l xml:id="l.98"><app xml:id="app.38">
                            <lem wit="#KK" xml:id="lem.38">Az it<corr>é</corr>letbenis nem
                                engedi</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.63">itéletbennis</rdg>
                            <rdg wit="#W3" xml:id="rdg.64">iteletbenis</rdg>
                        </app></l>
                    <l xml:id="l.99">Hogy ö ügyénec gonosz vége légyen,</l>
                    <l xml:id="l.100"><app xml:id="app.39">
                            <lem wit="#KK" xml:id="lem.39">Bizzál hát hozzá es engedgy néki,</lem>
                            <rdg wit="#W2" xml:id="rdg.65">és</rdg>
                        </app></l>
                    <l xml:id="l.101">Fölemel téged hogy birjad az földet,</l>
                    <l xml:id="l.102">Megládd az gonoszaknac veszteket.</l>
                </lg>
                <lg xml:id="lg.18">
                    <fw corresp="Szenci Molnár Albert" type="lg">18 </fw>
                    <l xml:id="l.103">En jol megszemlélém az gonosztévöt</l>
                    <l xml:id="l.104"><app xml:id="app.40">
                            <lem wit="#KK" xml:id="lem.40">Ki elfölkele es elterjede,</lem>
                            <rdg wit="#W2" xml:id="rdg.66">és</rdg>
                        </app></l>
                    <l xml:id="l.105">Es hogy mint zöld borostyánfa ugy fölnöt,</l>
                    <l xml:id="l.106">Es hogy mászszor elmenéc mellette</l>
                    <l xml:id="l.107"><app xml:id="app.41">
                            <lem wit="#KK" xml:id="lem.41">Oda lön, az helyét széllel
                                nézellém,</lem>
                            <rdg wit="#W2" xml:id="rdg.67">széllyel</rdg>
                        </app></l>
                    <l xml:id="l.108">De öt semmiképpen ott nem lelém.</l>
                </lg>
                <lg xml:id="lg.19">
                    <fw corresp="Szenci Molnár Albert" type="lg">19 </fw>
                    <l xml:id="l.109"><app xml:id="app.42">
                            <lem wit="#KK" xml:id="lem.42">Elly igazán, l<corr>é</corr>gy hiv es
                                    tök<corr>é</corr>lletes,</lem>
                            <rdg wit="#W1" xml:id="rdg.68">légy hü es tökelletes</rdg>
                            <rdg wit="#W2" xml:id="rdg.69">légy hiv és tökélletes</rdg>
                            <rdg wit="#W3" xml:id="rdg.70">legy […] tökelletes</rdg>
                        </app></l>
                    <l xml:id="l.110">Es nagy jol leszen tenéked dolgod,</l>
                    <l xml:id="l.111">Békeséged leszen nagy örvendetes,</l>
                    <l xml:id="l.112"><app xml:id="app.43">
                            <lem wit="#KK" xml:id="lem.43">Az gonoszac vallnac czalatságot,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.71">valnac</rdg>
                        </app></l>
                    <l xml:id="l.113">Mert ök szertelen nagy inségben esnec,</l>
                    <l xml:id="l.114">Es végre tellyességgel elvesznec.</l>
                </lg>
                <lg xml:id="lg.20">
                    <fw corresp="Szenci Molnár Albert" type="lg">20 </fw>
                    <l xml:id="l.115">Mert az Ur otalma az igazaknac,</l>
                    <l xml:id="l.116">Es öket megmenti énségekböl,</l>
                    <l xml:id="l.117"><app xml:id="app.44">
                            <lem wit="#KK" xml:id="lem.44">Vélec vagyon, <corr>e</corr>s töle
                                megtartatnac,</lem>
                            <rdg wit="#W2" xml:id="rdg.72">és</rdg>
                        </app></l>
                    <l xml:id="l.118">Es hogy ö hozzá folyamnac szivböl,</l>
                    <l xml:id="l.119">Az gonosztévöktöl megszabaditya,</l>
                    <l xml:id="l.120">Es jelen voltával vigaztallya.</l>
                </lg>
            </div>
        </body>
    </text>
