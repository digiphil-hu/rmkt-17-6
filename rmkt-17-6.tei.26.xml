			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 26.</fw>
				<head type="title">XXVI. SOLTAR. T. B.</head>
				<head type="sub">Könyörgése Davidnac az megszabaditásért.</head>
				<pb facs="69"> </pb>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">Légy itélöm Uram,</l>
					<l xml:id="l.2"><app xml:id="app.1">
							<lem wit="#KK" xml:id="lem.1">Mert hivséggel jártam,</lem>
							<rdg wit="#W1" xml:id="rdg.1">hüséggel</rdg>
						</app></l>
					<l xml:id="l.3">Es éltem nagy ártatlanul,</l>
					<l xml:id="l.4">Azért hiszem az Istent,</l>
					<l xml:id="l.5">Hogy ö engemet megment</l>
					<l xml:id="l.6">Mindennémö háborutul.</l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.7"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">Probálly es kis<corr>é</corr>rts
								meg,</lem>
							<rdg wit="#W1" xml:id="rdg.2">kisércz</rdg>
							<rdg wit="#W2" xml:id="rdg.3">és kisérts</rdg>
							<rdg wit="#W3" xml:id="rdg.4">kiserts</rdg>
						</app></l>
					<l xml:id="l.8"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">Igyemet nézd jol meg,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.5">Ugyemet</rdg>
						</app></l>
					<l xml:id="l.9">Meglátod tisztaságomat.</l>
					<l xml:id="l.10">Visgáldmeg veséimet,</l>
					<l xml:id="l.11">Es probáld meg szivemet,</l>
					<l xml:id="l.12">Hogy értsed indolatomat.</l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.13"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">L<corr>á</corr>tom szemem elöt</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.6">Látom</rdg>
							<rdg wit="#W3" xml:id="rdg.7">Latom</rdg>
						</app></l>
					<l xml:id="l.14">Kegyelmességedöt,</l>
					<l xml:id="l.15">Es azon vagyoc szüntelen,</l>
					<l xml:id="l.16">Hogy minden dolgaimban,</l>
					<l xml:id="l.17">Járjac igasságodban,</l>
					<l xml:id="l.18">Ne vétsec fölséged ellen.</l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.19">Az hazug emberec</l>
					<l xml:id="l.20">Nálam nem kedvesec,</l>
					<l xml:id="l.21">Az tettetö czalárdokat</l>
					<l xml:id="l.22">Szivem szerint gyülölöm,</l>
					<l xml:id="l.23"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Es nagy távol kerülöm</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.8">kerölöm</rdg>
						</app></l>
					<l xml:id="l.24">Az álnoksággal járokat.</l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.25">Az gonosztévöknec</l>
					<l xml:id="l.26">Es hamis népeknec</l>
					<l xml:id="l.27">Társaságokat gyülölöm,</l>
					<l xml:id="l.28">Ö gyülekezetekben</l>
					<l xml:id="l.29">Nem ülöc semmiképpen,</l>
					<l xml:id="l.30">Söt elöttem sem szenvedöm.</l>
				</lg>
				<lg xml:id="lg.6">
					<metamark function="pause"/>
					<fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
							rend="sub">*</hi><hi rend="super">*</hi> 6 </fw>
					<l xml:id="l.31"><app xml:id="app.6">
							<lem wit="#KK" xml:id="lem.6">Belsö tisztaságban</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.9">Bélsö</rdg>
						</app></l>
					<l xml:id="l.32">Es ártatlanságban,</l>
					<l xml:id="l.33">En kezeimet megmosom,</l>
					<l xml:id="l.34">Tisztán téged diczérlec,</l>
					<l xml:id="l.35">Aldozván fölségednec</l>
					<l xml:id="l.36">Oltárod körül forgodom.</l>
				</lg>
				<lg xml:id="lg.7">
					<fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
					<l xml:id="l.37">Eneki fölszóval</l>
					<l xml:id="l.38">Es vig hangosságval,</l>
					<l xml:id="l.39">Magaztalom fölségedet,</l>
					<l xml:id="l.40">Néked adván hálákat,</l>
					<l xml:id="l.41">Hirdetvén czudáidat</l>
					<l xml:id="l.42">Mindenütt áldlac tégedet.</l>
				</lg>
				<lg xml:id="lg.8">
					<fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
					<l xml:id="l.43">Uram haylékodat</l>
					<l xml:id="l.44">Szeretem házadat,</l>
					<l xml:id="l.45"><app xml:id="app.7">
							<lem wit="#KK" xml:id="lem.7">Holott lakol diczöségvel.</lem>
							<rdg wit="#W1" xml:id="rdg.10">düczösegvel</rdg>
						</app></l>
					<l xml:id="l.46">Szent helyedet kedvellöm,</l>
					<l xml:id="l.47">Es azt föllyeb böczüllöm</l>
					<l xml:id="l.48">Minden ez világi kincznél.</l>
				</lg>
				<lg xml:id="lg.9">
					<fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
					<l xml:id="l.49">Ostorodat Uram</l>
					<l xml:id="l.50">Forditsel én rolam,</l>
					<l xml:id="l.51">Ne büntess az bünösöckel,</l>
					<l xml:id="l.52">Vélec ne verd lelkemet.</l>
					<l xml:id="l.53">Ne vöddel életemet</l>
					<l xml:id="l.54">Az véronto embereckel.</l>
				</lg>
				<lg xml:id="lg.10">
					<fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
					<l xml:id="l.55">Kiknec az ö kezec</l>
					<l xml:id="l.56">Rút bünnel tellyesec,</l>
					<l xml:id="l.57">Es azon hánnyác eszeket,</l>
					<l xml:id="l.58">Hogy szegént elnyomjanac,</l>
					<l xml:id="l.59">Ajándékon kapdosnac</l>
					<l xml:id="l.60">Kivel töltic jobkezeket.</l>
				</lg>
				<lg xml:id="lg.11">
					<fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
					<l xml:id="l.61">De én tisztaságban</l>
					<l xml:id="l.62">Jároc igasságban,</l>
					<l xml:id="l.63">Es élec nagy ártatlanol,</l>
					<l xml:id="l.64">Büntöl magam örizem.</l>
					<l xml:id="l.65">Szabadits meg hát engem</l>
					<l xml:id="l.66"><app xml:id="app.8">
							<lem wit="#KK" xml:id="lem.8">Te nagy
								irg<corr>a</corr>lmasságodbol.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.11">irgalmasságodbol</rdg>
							<rdg wit="#W3" xml:id="rdg.12">irgálmasságodbol</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.12">
					<fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
					<l xml:id="l.67">Az én lábam megál,</l>
					<l xml:id="l.68">Tágas helyet talál,</l>
					<l xml:id="l.69">Es megmarad össvenyiben,</l>
					<l xml:id="l.70">Azért Uram diczérlec,</l>
					<l xml:id="l.71">Es örömmel tisztellec,</l>
					<l xml:id="l.72"><app xml:id="app.9">
							<lem wit="#KK" xml:id="lem.9">Az hiveknec seregiben.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.13">serégiben</rdg>
						</app></l>
				</lg>
			</div>
