            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 43.</fw>
                <head type="title">XLIII. SOLTAR. C. M.</head>
                <head type="sub">Könyörgése Davidnac az megszabaditásért.</head>
                <pb facs="111"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">ITélly meg engemet Ur Isten,</l>
                    <l xml:id="l.2"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Es fogadd föl én igyemet</lem>
                            <rdg wit="#W1" xml:id="rdg.1">ügjemet</rdg>
                        </app></l>
                    <l xml:id="l.3">Ez kegyetlen nemzetség ellen,</l>
                    <l xml:id="l.4">Az hamis embernec kezében</l>
                    <l xml:id="l.5">Ne boczáss Uram engemet,</l>
                    <l xml:id="l.6">Tarts meg én fejemet.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Uram engem miért hagyál el,</l>
                    <l xml:id="l.8">Lám te vagy én erösségem?</l>
                    <l xml:id="l.9">Miért jároc keserüséggel,</l>
                    <l xml:id="l.10"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Minden örömömtávozékel<corr>?</corr></lem>
                            <rdg wit="#W1" xml:id="rdg.2">távozekel?</rdg>
                            <rdg wit="#W2" xml:id="rdg.3">távozék el?</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">távozékel</rdg>
                        </app></l>
                    <l xml:id="l.11">Mert nyomorgat ellenségem</l>
                    <l xml:id="l.12">Es sanyargat engem.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Igasságodat addé<corr>r</corr>tenem,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">értenem</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.6">éttenem</rdg>
                        </app></l>
                    <l xml:id="l.14">Világosságod küld alá,</l>
                    <l xml:id="l.15"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Ki megvilágositson engem,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.7">engém</rdg>
                        </app></l>
                    <l xml:id="l.16">Szent hegyedre legyen vezérem,</l>
                    <l xml:id="l.17">Bémenésem igazgassa</l>
                    <l xml:id="l.18">Az te haylékodba.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Isten oltárához bémegyec</l>
                    <l xml:id="l.20">Az én Uram eleiben,</l>
                    <l xml:id="l.21">Az ki öröme én szivemnec.</l>
                    <l xml:id="l.22">Hegedövel néked éneklec,</l>
                    <l xml:id="l.23">Es hálát adoc szüntelen</l>
                    <l xml:id="l.24">Tenéked Ur Isten.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25">Miért vagy szomoru én lelkem,</l>
                    <l xml:id="l.26">Mit keseregsz illy szertelen?</l>
                    <l xml:id="l.27">Bizzál az Istenben mert hiszem,</l>
                    <l xml:id="l.28">Hogy mêg ötet vigan diczérem,</l>
                    <l xml:id="l.29">Midön engem megment hiven</l>
                    <l xml:id="l.30">En Istenem lévén.</l>
                </lg>
            </div>
