            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 30.</fw>
                <head type="title">XXX. SOLTAR. T. B. 76.139.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Háláadása Davidnac az Abs<corr>o</corr>lon
                                el<corr>l</corr>en valo megszabadulásért.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">Absolon ellen volo</rdg>
                        <rdg wit="#W2" xml:id="rdg.2">Absalon elen volo</rdg>
                        <rdg wit="#W3" xml:id="rdg.3">Absalon elen</rdg>
                    </app></head>
                <pb facs="76"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">DIczérlec Uram tégedet,</l>
                    <l xml:id="l.2">Mert te megtartál engemet,</l>
                    <l xml:id="l.3">Es kegyessen fölemelél,</l>
                    <l xml:id="l.4">Ellenségimtöl megmentél</l>
                    <l xml:id="l.5">Es meg nem engedéd azoknac,</l>
                    <l xml:id="l.6">Hogy nyavalyámon vigadgyanac.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Hogy fölkiáltéc tehozzád,</l>
                    <l xml:id="l.8">Nyavalyámot meggyogyitád,</l>
                    <l xml:id="l.9"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es hogy én czac nem az sirbe</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">sirben</rdg>
                        </app></l>
                    <l xml:id="l.10"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Esném az halál töribe,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">töriben</rdg>
                        </app></l>
                    <l xml:id="l.11"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Ismét fölt<corr>á</corr>masztál
                                engemet,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">föltámasztál</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">föltamasztál</rdg>
                        </app></l>
                    <l xml:id="l.12">Pokoltul megmentéd lelkemet.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Istenes hivec es szentec</lem>
                            <rdg wit="#W2" xml:id="rdg.8">és</rdg>
                        </app></l>
                    <l xml:id="l.14">Az Urnac énekellyetec,</l>
                    <l xml:id="l.15">Aldgyátoc ötet mind végig,</l>
                    <l xml:id="l.16"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Mert nem haragszic
                                sok<corr>á</corr>ig,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">sokáig</rdg>
                            <rdg wit="#W3" xml:id="rdg.10">sokaig</rdg>
                        </app></l>
                    <l xml:id="l.17">Az ember alég gondolhattya,</l>
                    <l xml:id="l.18">Melly hamar elmulic haragja.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">De az ö kegyelmess<corr>é</corr>ge</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.11">kegyelmessége</rdg>
                            <rdg wit="#W3" xml:id="rdg.12">kegyelmessege</rdg>
                        </app></l>
                    <l xml:id="l.20">Raytunc megmarad öröcke,</l>
                    <l xml:id="l.21"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Néha olly dolgom
                                <corr>é</corr>rkezic,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.13">érkezic</rdg>
                            <rdg wit="#W3" xml:id="rdg.14">erkezic</rdg>
                        </app></l>
                    <l xml:id="l.22">Kin estve szivem bánkodic,</l>
                    <l xml:id="l.23">De reggel mihelyen fölkelöc,</l>
                    <l xml:id="l.24">Azonnal vig örömet lelöc.</l>
                </lg>
                <lg xml:id="lg.5">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 5 </fw>
                    <l xml:id="l.25">Mikoron jól volna dolgom,</l>
                    <l xml:id="l.26">Ackor vala vigaságom,</l>
                    <l xml:id="l.27">Mert magamban azt itéltem,</l>
                    <l xml:id="l.28">Hogy ne lehessen esetem,</l>
                    <l xml:id="l.29">Mert érzettem kegyességedet,</l>
                    <l xml:id="l.30">Mellyel erösitéd hegyemet.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.31">De hogy tölem szent ortzádat</l>
                    <l xml:id="l.32">Elforditád otalmadat,</l>
                    <l xml:id="l.33">Legottan én elijedéc,</l>
                    <l xml:id="l.34"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Könyörgéc, es igyen szoléc:</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.15">és</rdg>
                        </app></l>
                    <l xml:id="l.35"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Mi hasznod Uram én
                                v<corr>é</corr>remben,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.16">véremben</rdg>
                            <rdg wit="#W3" xml:id="rdg.17">veremben</rdg>
                        </app></l>
                    <l xml:id="l.36"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Az halál ha temet
                                veremben<corr>?</corr></lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.18">veremben?</rdg>
                            <rdg wit="#W3" xml:id="rdg.19">veremben,</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.37"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Uram ha <corr>é</corr>n porrá
                                leszec,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.20">én</rdg>
                            <rdg wit="#W3" xml:id="rdg.21">en</rdg>
                        </app></l>
                    <l xml:id="l.38"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">T<corr>é</corr>gedet hogy
                                diczérhetlec,</lem>
                            <rdg wit="#W1 #W3" xml:id="rdg.22">Tegedet</rdg>
                            <rdg wit="#W2" xml:id="rdg.23">Tégedet</rdg>
                        </app></l>
                    <l xml:id="l.39">Igasságod hogy hirdessem?</l>
                    <l xml:id="l.40">Halgasdmeg Uram kérésem,</l>
                    <l xml:id="l.41">Könyörülly raytam, szabadits meg,</l>
                    <l xml:id="l.42"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">Legy kegyelmes Uram es tartsmeg.</lem>
                            <rdg wit="#W2" xml:id="rdg.24">és tarts még</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.43"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15">Az <corr>é</corr>n siralmimat végre</lem>
                            <rdg wit="#W1 #W3" xml:id="rdg.25">en</rdg>
                            <rdg wit="#W2" xml:id="rdg.26">én</rdg>
                        </app></l>
                    <l xml:id="l.44">Forditád bodog örömre,</l>
                    <l xml:id="l.45">Es szomoru sác ruhámat</l>
                    <l xml:id="l.46">Elvöd rólam bánatimat,</l>
                    <l xml:id="l.47">Kiért Uram öröcké áldlac,</l>
                    <l xml:id="l.48">Mindenec elött magasztallac.</l>
                </lg>
            </div>
        </body>
