            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 12.</fw>
                <head type="title">XII. SOLTAR. C. M.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Davidnac, Saul ellen valopanaszolkodása.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">panaszszolkodása</rdg>
                    </app></head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">SZabaditsmeg es tartsmeg Uram Isten,</lem>
                            <rdg wit="#W2" xml:id="rdg.2">és</rdg>
                        </app></l>
                    <l xml:id="l.2">Mert szentid elfogytac, nincz jotévö,</l>
                    <l xml:id="l.3">Es ez földön már soc az tökélletlen,</l>
                    <l xml:id="l.4">Nincz emberec közt igaz beszédö.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.5">Ezec egymásnac szólnac czac hivságot,</l>
                    <l xml:id="l.6">Dolgokat festic szép beszédeckel.</l>
                    <l xml:id="l.7">Hizelkedvén mutatnac nyájasságot,</l>
                    <l xml:id="l.8">De nyelvec nem eggyez ö sziveckel.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.9"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Czalárd ayakokot elveszti Isten,</lem>
                            <rdg wit="#W1" xml:id="rdg.3">Czalárd aykokat el veszti az Isten</rdg>
                            <rdg wit="#W2" xml:id="rdg.4">ayakokat</rdg>
                        </app></l>
                    <l xml:id="l.10">Eltörli hizelkedö nyelveket,</l>
                    <l xml:id="l.11">Kic kevélységekben szólnac nagy fönnyen.</l>
                    <l xml:id="l.12"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Es czac czufollyác az együgyöket.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">eggyügyöket</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.13">Es azt mondgyác: Jer tegyüc azt nyelvünckel,</l>
                    <l xml:id="l.14"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Hog’ minket minden
                                nagyrab<corr>e</corr>czüllyön</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">böczüllyön</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">béczüllyön</rdg>
                        </app></l>
                    <l xml:id="l.15">Miénc szájunc, aykunc, birunc ezeckel,</l>
                    <l xml:id="l.16"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Kit urallyunc? velünc ki pöröllyön?</lem>
                            <rdg wit="#W1" xml:id="rdg.8">Urallunc?</rdg>
                            <rdg wit="#W2" xml:id="rdg.9">urallunc?</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.17"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Azert mond Isten: Im<corr>é</corr>
                                azszegényec</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">Imé</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">Ime</rdg>
                        </app></l>
                    <l xml:id="l.18">Elhagyatnac, öletnec, pusztulnac,</l>
                    <l xml:id="l.19"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Azért öket megszánom es fölkelec,</lem>
                            <rdg wit="#W1" xml:id="rdg.12">ököt</rdg>
                            <rdg wit="#W2" xml:id="rdg.13">és</rdg>
                        </app></l>
                    <l xml:id="l.20">Es kimentem kezekböl azoknac.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.21">Az Istennec mondási olly igazac,</l>
                    <l xml:id="l.22">Mint az drága ezüst, kit az tüzben</l>
                    <l xml:id="l.23">Az ötvösöc kohokban tisztitottac,</l>
                    <l xml:id="l.24">Es hétszer megeresztettec szépen.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.25">Tarts meg azért népedet kegyelmessen,</l>
                    <l xml:id="l.26">Kérünc jovoltodbol reánc tekénts,</l>
                    <l xml:id="l.27"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9"><corr>Ö</corr>rizz meg öröcké ez
                                nemzetellen,</lem>
                            <rdg wit="#W1" xml:id="rdg.14">Oeriz</rdg>
                            <rdg wit="#W2" xml:id="rdg.15">Oerizz</rdg>
                            <rdg wit="#W3" xml:id="rdg.16">Öerizz</rdg>
                        </app></l>
                    <l xml:id="l.28">Hozzánc mindenkor jokedvet jelents.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.29">Mert az gonoszoc nagy fönnyen forgódnac,</l>
                    <l xml:id="l.30">Udvaroltatnac nagy kevélségben,</l>
                    <l xml:id="l.31">Midön az roszszac fölmagaztaltatnac,</l>
                    <l xml:id="l.32">Es az jo ember nincz böczületben.</l>
                </lg>
            </div>
