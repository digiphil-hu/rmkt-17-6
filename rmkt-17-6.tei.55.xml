			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 55.</fw>
				<head type="title">LV. SOLTAR. T. B.</head>
				<head type="sub">Davidnac megszabaditásert valo könyörgése.</head>
				<pb facs="135"> </pb>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">HAlgasdmeg az én könyörgésem</l>
					<l xml:id="l.2">Ur Isten, ne fordully el tölem,</l>
					<l xml:id="l.3">Imátságom vedd füleidben,</l>
					<l xml:id="l.4">Mert nagy kinokat szenvedec,</l>
					<l xml:id="l.5">Szivemben igen kesergec,</l>
					<l xml:id="l.6"><app xml:id="app.1">
							<lem wit="#KK" xml:id="lem.1">Elötted panaszloc
								r<corr>e</corr>szketvén.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.1">reszketven</rdg>
							<rdg wit="#W3" xml:id="rdg.2">részketvén</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.7"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">Mert fenyeget én ellenségem,</lem>
							<rdg wit="#W1" xml:id="rdg.3">feneget</rdg>
						</app></l>
					<l xml:id="l.8">Az hitetlen retteget engem,</l>
					<l xml:id="l.9">Mert én rolam tanáczot tartnac,</l>
					<l xml:id="l.10">En ellenem kötést tesznec,</l>
					<l xml:id="l.11">Nagy haraggal rám gerjednec,</l>
					<l xml:id="l.12">Hogy engem megnyomoritsanac.</l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.13">Nagy inségben kesereg szivem,</l>
					<l xml:id="l.14">Retteget halálos félelem,</l>
					<l xml:id="l.15">Tellyesseggel elszomorottam,</l>
					<l xml:id="l.16"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">Félec, rettegec, gyötrödöm,</lem>
							<rdg wit="#W1" xml:id="rdg.4">rettegök</rdg>
						</app></l>
					<l xml:id="l.17">Reszketvén szörnyen veszödöm,</l>
					<l xml:id="l.18">Ugy hogy immár sokszor kivántam:</l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.19">Oh ha szárnyaim lehetnénec,</l>
					<l xml:id="l.20">Mint az galamb ha röpülhetnéc,</l>
					<l xml:id="l.21"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">En elröp<corr>ü</corr>lnéc meszsze
								földre,</lem>
							<rdg wit="#W1" xml:id="rdg.5">el röpülnéc</rdg>
							<rdg wit="#W2" xml:id="rdg.6">elröpülnéc</rdg>
							<rdg wit="#W3" xml:id="rdg.7">elröpúlnéc</rdg>
						</app></l>
					<l xml:id="l.22">Elmennéc ez népec közöl,</l>
					<l xml:id="l.23">Pusztát keresnéc ezentöl,</l>
					<l xml:id="l.24">Az hól nyugodalmom lehetne.</l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.25">Elszaladnéc nagy sietséggel,</l>
					<l xml:id="l.26">Ez sebes forgo szélvész elöl,</l>
					<l xml:id="l.27">Ez zurzavarbol én elfutnéc.</l>
					<l xml:id="l.28">Ö nyelveket hasogasd el,</l>
					<l xml:id="l.29">Kic hamis pörlödéseckel,</l>
					<l xml:id="l.30">Ez egész várost bétöltöttéc.</l>
				</lg>
				<lg xml:id="lg.6">
					<fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
					<l xml:id="l.31">Az nagy hamisság éyjel nappal</l>
					<l xml:id="l.32">Ez város köfalain jargal,</l>
					<l xml:id="l.33">Közepette vagyon álnokság,</l>
					<l xml:id="l.34"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Es kör<corr>ö</corr>skörnyül az
								utzác</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.8">köröskörnyül</rdg>
							<rdg wit="#W3" xml:id="rdg.9">köróskörnyül</rdg>
						</app></l>
					<l xml:id="l.35">Minden gyalázattal rakvác,</l>
					<l xml:id="l.36">Eláratt kösztöc az czalárdság.</l>
				</lg>
				<lg xml:id="lg.7">
					<metamark function="pause"/>
					<fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
							rend="sub">*</hi><hi rend="super">*</hi> 7 </fw>
					<l xml:id="l.37">Hogy ha ellenségem volt volna,</l>
					<l xml:id="l.38">Es szemlátomást gyülölt volna,</l>
					<l xml:id="l.39"><app xml:id="app.6">
							<lem wit="#KK" xml:id="lem.6">Örizkedtem volna <corr>ö</corr>
								töle,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.10">ö</rdg>
							<rdg wit="#W3" xml:id="rdg.11">ô</rdg>
						</app></l>
					<l xml:id="l.40">Ha rám törött volna nyilvan,</l>
					<l xml:id="l.41">Es ha nem illy alattomban,</l>
					<l xml:id="l.42">Eltérhettem volna elöle.</l>
				</lg>
				<lg xml:id="lg.8">
					<fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
					<l xml:id="l.43"><app xml:id="app.7">
							<lem wit="#KK" xml:id="lem.7">De te az ki én velem
								l<corr>a</corr>ktál,</lem>
							<rdg wit="#W1" xml:id="rdg.12">laktál</rdg>
							<rdg wit="#W2 #W3" xml:id="rdg.13">láktál</rdg>
						</app></l>
					<l xml:id="l.44">Nálam nagy tisztességben voltál,</l>
					<l xml:id="l.45">Kivel tanáczomat közlöttem,</l>
					<l xml:id="l.46">Titkaim megmondtam bátran,</l>
					<l xml:id="l.47">Egygyütt jártunc az templomban,</l>
					<l xml:id="l.48"><app xml:id="app.8">
							<lem wit="#KK" xml:id="lem.8">Nagy nyájasságb<corr>a</corr>n veled
								éltem.</lem>
							<rdg wit="#W1" xml:id="rdg.14">njayasságban</rdg>
							<rdg wit="#W2" xml:id="rdg.15">nyajasságban</rdg>
							<rdg wit="#W3" xml:id="rdg.16">nyájasságbán</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.9">
					<fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
					<l xml:id="l.49"><app xml:id="app.9">
							<lem wit="#KK" xml:id="lem.9">Béesnec az halál
								k<corr>e</corr>zében,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.17">kezében</rdg>
							<rdg wit="#W3" xml:id="rdg.18">kézében</rdg>
						</app></l>
					<l xml:id="l.50">Es az föld alá elevenen</l>
					<l xml:id="l.51"><app xml:id="app.10">
							<lem wit="#KK" xml:id="lem.10">Az nagy mélységbe bévettetnec,</lem>
							<rdg wit="#W1" xml:id="rdg.19">méljségben</rdg>
							<rdg wit="#W2" xml:id="rdg.20">mélységben</rdg>
						</app></l>
					<l xml:id="l.52">Mert nagy az ö gonosságoc,</l>
					<l xml:id="l.53">De én Istenhez kiáltoc,</l>
					<l xml:id="l.54"><app xml:id="app.11">
							<lem wit="#KK" xml:id="lem.11">M<corr>e</corr>rt ö megtartója
								éltemnec.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.21">Mert</rdg>
							<rdg wit="#W3" xml:id="rdg.22">Mért</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.10">
					<fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
					<l xml:id="l.55">Mind estve reggel öt ohaytom,</l>
					<l xml:id="l.56">Délkorbannis ötet kiáltom,</l>
					<l xml:id="l.57">Es meghalgattya könyörgésem,</l>
					<l xml:id="l.58">Megtart engem békeségben,</l>
					<l xml:id="l.59">Minden ellenségim ellen,</l>
					<l xml:id="l.60">Kic seregben gyültec ellenem.</l>
				</lg>
				<lg xml:id="lg.11">
					<fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
					<l xml:id="l.61">De az öröc hatalmó Isten</l>
					<l xml:id="l.62">Meghalgat engem kérésemben,</l>
					<l xml:id="l.63">Es öket megbünteti végre,</l>
					<l xml:id="l.64">Mert nem jobbolnac éltekben,</l>
					<l xml:id="l.65">Semmi gondgyoc nékic ninczen</l>
					<l xml:id="l.66">Az Istennec tisztességére.</l>
				</lg>
				<lg xml:id="lg.12">
					<fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
					<l xml:id="l.67"><app xml:id="app.12">
							<lem wit="#KK" xml:id="lem.12">Az hitetlen kezét emelte,</lem>
							<rdg wit="#W1" xml:id="rdg.23">kezit</rdg>
						</app></l>
					<l xml:id="l.68"><app xml:id="app.13">
							<lem wit="#KK" xml:id="lem.13">Az békeséges hiv emberre,</lem>
							<rdg wit="#W1" xml:id="rdg.24">hü</rdg>
						</app></l>
					<l xml:id="l.69">Az barátság frigyét megszegte,</l>
					<l xml:id="l.70"><app xml:id="app.14">
							<lem wit="#KK" xml:id="lem.14">Beszéde sikos mint az vay,</lem>
							<rdg wit="#W1" xml:id="rdg.25">àz</rdg>
						</app></l>
					<l xml:id="l.71">Belöl kegyetlen mint tolvay,</l>
					<l xml:id="l.72">Nagy ellenséges az ö szive.</l>
				</lg>
				<lg xml:id="lg.13">
					<fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
					<l xml:id="l.73">Mindenben ö tettetes szava,</l>
					<l xml:id="l.74">Mint az olay lágy és olly sima,</l>
					<l xml:id="l.75">De mérgesseb az éles törnél.</l>
					<l xml:id="l.76">Vesd Istenben reménséged,</l>
					<l xml:id="l.77">Es nyilván megsegit téged,</l>
					<l xml:id="l.78">Az igazat ö nem hadgya el.</l>
				</lg>
				<lg xml:id="lg.14">
					<fw corresp="Szenci Molnár Albert" type="lg">14 </fw>
					<l xml:id="l.79">De az gonoszakat, Ur Isten,</l>
					<l xml:id="l.80">Te bétaszitod az mély sirben,</l>
					<l xml:id="l.81">Holott nagy veszél rájoc terjed.</l>
					<l xml:id="l.82">Az gyilkosoc és hamissac</l>
					<l xml:id="l.83">Eleteket félben hadgyác,</l>
					<l xml:id="l.84"><app xml:id="app.15">
							<lem wit="#KK" xml:id="lem.15">En pedig bizom czac tebenned.</lem>
							<rdg wit="#W1" xml:id="rdg.26">penig</rdg>
						</app></l>
				</lg>
			</div>
