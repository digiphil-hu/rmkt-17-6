                                                  <body>
                                                  <div type="poem" xml:id="d.1" xml:lang="hu">
                                                  <fw type="originalNum">[RMKT XVII/6:] 57.</fw>
                                                  <head type="title">LVII. SOLTAR. T. B.</head>
                                                  <head type="sub">Megszabaditásért valo könyörgése
                                                  Davidnac.</head>
                                                  <pb facs="140"> </pb>
                                                  <lg xml:id="lg.1">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                                                  <l xml:id="l.1">IRgalmazz Uram, irgalmazz
                                                  nékem</l>
                                                  <l xml:id="l.2">Mert te benned bizic az én
                                                  lelkem,</l>
                                                  <l xml:id="l.3">Töb segedelmem nékem ninczen
                                                  sohol,</l>
                                                  <l xml:id="l.4">Szárnyad árnyékában nyugszic
                                                  fejem,</l>
                                                  <l xml:id="l.5">Miglen az nép gonossâga
                                                  elromol.</l>
                                                  </lg>
                                                  <lg xml:id="lg.2">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                                                  <l xml:id="l.6">En az fölséges Istenben bizom,</l>
                                                  <l xml:id="l.7">Ki jóra vezérli minden dolgom,</l>
                                                  <l xml:id="l.8"><app xml:id="app.1">
                                                  <lem wit="#KK" xml:id="lem.1">Segedelmet küld alá
                                                  inségemben,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.1">énségemben</rdg>
                                                  </app></l>
                                                  <l xml:id="l.9">Az ellen lészen nékem ótalmom,</l>
                                                  <l xml:id="l.10">Az ki engem kerget hog’
                                                  bényelhessen.</l>
                                                  </lg>
                                                  <lg xml:id="lg.3">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                                                  <l xml:id="l.11">Az én lelkem oroszlánoc közt
                                                  ül,</l>
                                                  <l xml:id="l.12">Kic sebes lángal vöttenec
                                                  környül,</l>
                                                  <l xml:id="l.13">Fogok olly hegyessec mint nyil és
                                                  dárda,</l>
                                                  <l xml:id="l.14">Naponkint nyelvec ugy
                                                  megélesül,</l>
                                                  <l xml:id="l.15">Mint az jol megköszörült éles
                                                  szablya.</l>
                                                  </lg>
                                                  <lg xml:id="lg.4">
                                                  <metamark function="pause"/>
                                                  <fw corresp="Szenci Molnár Albert" type="lg"><hi
                                                  rend="super">*</hi><hi rend="sub">*</hi><hi
                                                  rend="super">*</hi> 4 </fw>
                                                  <l xml:id="l.16"><app xml:id="app.2">
                                                  <lem wit="#KK" xml:id="lem.2">Magasztaltassál Uram
                                                  <corr>a</corr>z égre,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.2">az</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.3">ez</rdg>
                                                  </app></l>
                                                  <l xml:id="l.17">Nagy düczöséggel ez egesz
                                                  földre,</l>
                                                  <l xml:id="l.18">Mert én járásomra hálokat
                                                  hántac,</l>
                                                  <l xml:id="l.19">Szegény lelkemet elnyomtác
                                                  szinte,</l>
                                                  <l xml:id="l.20">Es én elömben ök mély vermet
                                                  ástac.</l>
                                                  </lg>
                                                  <lg xml:id="lg.5">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                                                  <l xml:id="l.21">De önön magoc belé estenec,</l>
                                                  <l xml:id="l.22">Kin tellyes szivemböl
                                                  örvendezec,</l>
                                                  <l xml:id="l.23">Az én szivem kész mindennec
                                                  elötte</l>
                                                  <l xml:id="l.24"><app xml:id="app.3">
                                                  <lem wit="#KK" xml:id="lem.3">Hogy
                                                  dicz<corr>é</corr>retit szent felségednec</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.4">diczéretit</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.5">diczeretit</rdg>
                                                  </app></l>
                                                  <l xml:id="l.25">Szüntelen énekellye életébe.</l>
                                                  </lg>
                                                  <lg xml:id="lg.6">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                                                  <l xml:id="l.26">En nyelvem és lantom már
                                                  serkennyföl,</l>
                                                  <l xml:id="l.27"><app xml:id="app.4">
                                                  <lem wit="#KK" xml:id="lem.4">Isten diczéretire
                                                  zöndöly föl,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.6">diczéretére</rdg>
                                                  </app></l>
                                                  <l xml:id="l.28">Jo haynalban én ágyambol
                                                  fölkelec,</l>
                                                  <l xml:id="l.29"><app xml:id="app.5">
                                                  <lem wit="#KK" xml:id="lem.5">Es éneklec nagy
                                                  diczöségedröl,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.7">düczöségedröl</rdg>
                                                  </app></l>
                                                  <l xml:id="l.30">Uram téged minden népnec
                                                  hirdetlec.</l>
                                                  </lg>
                                                  <lg xml:id="lg.7">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                                                  <l xml:id="l.31">Mert mind az égig fölhat jo
                                                  voltod,</l>
                                                  <l xml:id="l.32">Az fölhököt éri igasságod,</l>
                                                  <l xml:id="l.33"><app xml:id="app.6">
                                                  <lem wit="#KK" xml:id="lem.6">Diczöségedet láttasd
                                                  meg az égen,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.8">Düczöségedet</rdg>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.9">láttásd</rdg>
                                                  </app></l>
                                                  <l xml:id="l.34">Es jelents meg nagy
                                                  hatalmasságod</l>
                                                  <l xml:id="l.35">Minden embereknec ez egesz
                                                  földen.</l>
                                                  </lg>
