            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 83.</fw>
                <head type="title">LXXXIII. SOLTAR. T. B.</head>
                <head type="sub">Könyörgése az Isten népénec az ellenseg ellen.</head>
                <head type="notation"/>
                <pb facs="199"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">URam ne halgass illy igen,</l>
                    <l xml:id="l.2">Ne maradgy ez veszteglésben,</l>
                    <l xml:id="l.3"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Ne nyugodgyál ô erös
                                Isten<corr>!</corr></lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">Isten!</rdg>
                            <rdg wit="#W3" xml:id="rdg.2">Isten?</rdg>
                        </app></l>
                    <l xml:id="l.4"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Mert ellenségid dihösködnec,</lem>
                            <rdg wit="#W1" xml:id="rdg.3">dühösködnec</rdg>
                        </app></l>
                    <l xml:id="l.5">Es az kic tégedet gyülölnec,</l>
                    <l xml:id="l.6">Fölemeltéc fejeket fönnyen.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Kiváltképpen néped ellen</l>
                    <l xml:id="l.8">Czalárd árultatásképpen<note type="critic" xml:id="note.1">Áruló
                            módon (<persName>Lobwasser<idno corresp="Ambrosius Lobwasser"
                                /></persName>: verrhäterlich).</note></l>
                    <l xml:id="l.9"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Soc álnoc tanáczokat lölnec,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">lélnec</rdg>
                        </app></l>
                    <l xml:id="l.10">Es az kikre te gondot tartasz,</l>
                    <l xml:id="l.11"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Es röytekhelyedben otalmasz</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">reytekhelyedben</rdg>
                        </app></l>
                    <l xml:id="l.12">Azoc ellen öszveesküsznec.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Mondván: Jertec imezeket</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">im ezeket</rdg>
                        </app></l>
                    <l xml:id="l.14">Veszessüc el ez nemzetet,</l>
                    <l xml:id="l.15">Töröllyüc el öket ez földröl,</l>
                    <l xml:id="l.16">Fogyassuc el ez népet szinten,</l>
                    <l xml:id="l.17">Hogy emlekezet se lehessen</l>
                    <l xml:id="l.18">Az Izrael népe nevéröl.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Gonosz tanáczot végeztec,</l>
                    <l xml:id="l.20">Te ellened kötést töttec</l>
                    <l xml:id="l.21">Az Edomi Ismaélitác;</l>
                    <l xml:id="l.22"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Az Moabnac es az Hagarnac</lem>
                            <rdg wit="#W2" xml:id="rdg.7">és</rdg>
                        </app></l>
                    <l xml:id="l.23">Nemzeti te ellened járnac,</l>
                    <l xml:id="l.24"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Gebalitác es Ammonitác.</lem>
                            <rdg wit="#W2" xml:id="rdg.8">és</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25">Philistéus és Amaléc,</l>
                    <l xml:id="l.26">Es mind az Tyrusbéliec,</l>
                    <l xml:id="l.27">Nagy erövel fölkészöltenec,</l>
                    <l xml:id="l.28">Az Assuris ezeckel eggyüt</l>
                    <l xml:id="l.29">Segéteni az Loth fiait</l>
                    <l xml:id="l.30">Minden erövel igyekeznec.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.31">Ez népekvelis azt tegyed</l>
                    <l xml:id="l.32">Mint az Midiant el vesztéd,</l>
                    <l xml:id="l.33">Az Kisson pataknál régenten,</l>
                    <l xml:id="l.34">Mint Sisar és Jabin elvesze,</l>
                    <l xml:id="l.35">Az Endornál éltöc elkele,</l>
                    <l xml:id="l.36">Ollyac lönec mint sár az földen.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.37">Ö fejedelmi mint Oreb,</l>
                    <l xml:id="l.38">Ugy járjanac mint az Zéeb,</l>
                    <l xml:id="l.39">Mint amaz Zebah és az Salman,</l>
                    <l xml:id="l.40">Az kic mondottác nagy kevélyen,</l>
                    <l xml:id="l.41">Az Istennec haylékit menten</l>
                    <l xml:id="l.42">Elfoglallyuc nagy hatalmunkban.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.43"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Tedd forgó kerecké ököt,</lem>
                            <rdg wit="#W1" xml:id="rdg.9">öket</rdg>
                        </app></l>
                    <l xml:id="l.44">Mint szél az poszdorja czöpöt,</l>
                    <l xml:id="l.45">Mint az sebes tüz megégeti</l>
                    <l xml:id="l.46">Az nagy erdöt, és elpusztitya,</l>
                    <l xml:id="l.47">Es mint az sebes tüznec langja</l>
                    <l xml:id="l.48">Az magas hegyet megemeszti.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.49">Kergesd meg forgo szeleddel,</l>
                    <l xml:id="l.50">Nagy rettegéssel ijeszddel,</l>
                    <l xml:id="l.51">Szélvészszel háborits meg öket,</l>
                    <l xml:id="l.52">Ö ortzájokat szégyenits meg,</l>
                    <l xml:id="l.53">Hogy tégedet esmerjenec meg,</l>
                    <l xml:id="l.54">Es böczüllyéc te szent nevedet.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.55"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Taszits öket nagy szégyenbe,</lem>
                            <rdg wit="#W1" xml:id="rdg.10">szegjenben</rdg>
                            <rdg wit="#W2" xml:id="rdg.11">szegyenben</rdg>
                        </app></l>
                    <l xml:id="l.56"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Es eyts bé nagy félelembe,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">félelemben</rdg>
                        </app></l>
                    <l xml:id="l.57">Töröld el, hogy innét mindenec</l>
                    <l xml:id="l.58">Esmerjéc, hogy te az Isten vagy,</l>
                    <l xml:id="l.59">Az kinec hatalma igen nagy,</l>
                    <l xml:id="l.60">Az kit fölségesnec neveznec.</l>
                </lg>
            </div>
