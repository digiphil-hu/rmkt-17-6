            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 61.</fw>
                <head type="title">LXI. SOLTAR. T. B.</head>
                <head type="sub">Könyörgése Davidnac az megszabaditásért.</head>
                <pb facs="148"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">KIáltásom hald meg Isten,</l>
                    <l xml:id="l.2">Vedd füledben</l>
                    <l xml:id="l.3">Az én könyörgésemet,</l>
                    <l xml:id="l.4">Mert én szivem nagy inségböl</l>
                    <l xml:id="l.5">Meszsze földröl</l>
                    <l xml:id="l.6">Kiáltya fölségedet.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Végy föl engemet köszálra,</l>
                    <l xml:id="l.8">Magasságra,</l>
                    <l xml:id="l.9">Hol bátorságom legyen,</l>
                    <l xml:id="l.10">Mert te vagy én erös tornyom,</l>
                    <l xml:id="l.11">Vigaságom</l>
                    <l xml:id="l.12">En ellenségem ellen.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13">Te haylékodban lakásom</l>
                    <l xml:id="l.14">En kivánom</l>
                    <l xml:id="l.15">Es ohaytom szüntelen,</l>
                    <l xml:id="l.16">Szárnyaidnac árnyékában,</l>
                    <l xml:id="l.17">Kivánkozván</l>
                    <l xml:id="l.18">Vagyoc jo reménségben.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Mert meghalgatsz kérésemben</l>
                    <l xml:id="l.20">Oh Ur Isten,</l>
                    <l xml:id="l.21">Nyuytván kegyességedet.</l>
                    <l xml:id="l.22"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Örökségeket megadod</lem>
                            <rdg wit="#W1" xml:id="rdg.1">Oerekségeket</rdg>
                        </app></l>
                    <l xml:id="l.23">Es megáldod,</l>
                    <l xml:id="l.24">Az kic félic nevedet.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25">Naphoz napoc adassanac</l>
                    <l xml:id="l.26">Az királnac,</l>
                    <l xml:id="l.27">Nagy soc nemzetségekre</l>
                    <l xml:id="l.28"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Sok<corr>a</corr>sitsad esztendeit</lem>
                            <rdg wit="#W1" xml:id="rdg.2">Sokasiczád</rdg>
                            <rdg wit="#W2" xml:id="rdg.3">Sokasitsad</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">Sokesitsad</rdg>
                        </app></l>
                    <l xml:id="l.29"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Nyuyts éle<corr>t</corr>it</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">életit</rdg>
                            <rdg wit="#W3" xml:id="rdg.6">élettit</rdg>
                        </app></l>
                    <l xml:id="l.30"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Véghetetlen idökre.</lem>
                            <rdg wit="#W1" xml:id="rdg.7">üdökre</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.31">Országra érjen soc idöt</l>
                    <l xml:id="l.32">Isten elöt,</l>
                    <l xml:id="l.33">Szép czendesz békeségben,</l>
                    <l xml:id="l.34">Igasságodnac hivsége</l>
                    <l xml:id="l.35">Elöl vegye</l>
                    <l xml:id="l.36">Es örizze kegyessen.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.37">Es osztán vigan éneklec</l>
                    <l xml:id="l.38">Szent nevednec</l>
                    <l xml:id="l.39"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Mind öröckön öröcke:</lem>
                            <rdg wit="#W1" xml:id="rdg.8">Mostan es mind örökke</rdg>
                        </app></l>
                    <l xml:id="l.40">Es az melly fogadást tettem,</l>
                    <l xml:id="l.41">Megfizetem</l>
                    <l xml:id="l.42"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Naponkint ö n<corr>é</corr>kie.</lem>
                            <rdg wit="#W1 #W3" xml:id="rdg.9">nekie</rdg>
                            <rdg wit="#W2" xml:id="rdg.10">nékie</rdg>
                        </app></l>
                </lg>
            </div>
