            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 112.</fw>
                <head type="title">CXII. SOLTAR. T. B.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Tanuság az Isteni félelemröl.</lem>
                        <rdg wit="#W2" xml:id="rdg.1">Tánusag</rdg>
                    </app></head>
                <pb facs="262"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">BOdog ember az ki az Istent</l>
                    <l xml:id="l.2"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">F<corr>é</corr>li tiszteli
                                sziveszerént,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.2">Féli</rdg>
                            <rdg wit="#W3" xml:id="rdg.3">Feli</rdg>
                        </app></l>
                    <l xml:id="l.3"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Es az ö törvényét szereti,</lem>
                            <rdg wit="#W1" xml:id="rdg.4">törvényit</rdg>
                        </app></l>
                    <l xml:id="l.4"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Nagy leszsz ez földön ö nemzete,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">lesz</rdg>
                        </app></l>
                    <l xml:id="l.5">Öregböl az hivec serege,</l>
                    <l xml:id="l.6"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Mert az Ur megáldgya es örzi.</lem>
                            <rdg wit="#W2" xml:id="rdg.6">és</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Gazdagsággal ötet megláttya,</l>
                    <l xml:id="l.8">Kivel bövelködic ö háza,</l>
                    <l xml:id="l.9">Igassága megáll öröcké,</l>
                    <l xml:id="l.10">Az hiveknec az setétségben</l>
                    <l xml:id="l.11">Világot támaszt az jo Isten,</l>
                    <l xml:id="l.12">Hogy láttasséc raytoc kegyelme.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Az hiv ember kölczönt ád szivvel,</lem>
                            <rdg wit="#W1" xml:id="rdg.7">hü</rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">szivel</rdg>
                        </app></l>
                    <l xml:id="l.14">Hamissággal senkit nem terhel,</l>
                    <l xml:id="l.15">Ez el nem döl, megál végiglen,</l>
                    <l xml:id="l.16"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Ki az igasságot kedveli,</lem>
                            <rdg wit="#W1" xml:id="rdg.9">kedvelli</rdg>
                        </app></l>
                    <l xml:id="l.17">Es életit azhoz rendeli,</l>
                    <l xml:id="l.18">Öröc emlekezetben leszen.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Es ö egy szálat sem fél azon,</l>
                    <l xml:id="l.20">Hogy rola gonoszhir támadgyon,</l>
                    <l xml:id="l.21"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Reménsége néki az Isten,</lem>
                            <rdg wit="#W2" xml:id="rdg.10">Rémensége</rdg>
                        </app></l>
                    <l xml:id="l.22">Es bátorságos az ö szive,</l>
                    <l xml:id="l.23">Mig megláttya hogy ellensége,</l>
                    <l xml:id="l.24">Megbüntetnec, ésnec veszélben.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Javait hiven osztogattya,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.11">Jovait</rdg>
                        </app></l>
                    <l xml:id="l.26"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Az szükölködöket nem hadgya,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">szükölködököt</rdg>
                        </app></l>
                    <l xml:id="l.27">Kiböl öregböl igassága.</l>
                    <l xml:id="l.28">Az ö szarva meg nem hanyatlic</l>
                    <l xml:id="l.29">Söt ékessen fölemeltetic</l>
                    <l xml:id="l.30"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Böczületes
                                nagymélt<corr>o</corr>ságra.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.13">méltoságra</rdg>
                            <rdg wit="#W3" xml:id="rdg.14">méltöságra</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.31">Hogy ezt láttya az istentelen,</l>
                    <l xml:id="l.32">Boszszonkodic rayta szivében,</l>
                    <l xml:id="l.33"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Es ö nagy gonosz haragjába</lem>
                            <rdg wit="#W1" xml:id="rdg.15">haragjában</rdg>
                        </app></l>
                    <l xml:id="l.34">Czikorgattya fogait szörnyen,</l>
                    <l xml:id="l.35"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">De ha
                                megepedism<corr>é</corr>rgében,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.16">mérgében</rdg>
                            <rdg wit="#W3" xml:id="rdg.17">mergében</rdg>
                        </app></l>
                    <l xml:id="l.36"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">De elvész
                                mindenkiváns<corr>á</corr>ga.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.18">kivansága</rdg>
                            <rdg wit="#W3" xml:id="rdg.19">kivánsaga</rdg>
                        </app></l>
                </lg>
            </div>
