        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 41.</fw>
                <head type="title">XLI. SOLTAR. T. B.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">David elöszáml<corr>á</corr>llya betegséget és
                            egyéb nyavalyáját.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">elöszamlallya</rdg>
                        <rdg wit="#W2" xml:id="rdg.2">elöszámlállya</rdg>
                        <rdg wit="#W3" xml:id="rdg.3"><sic>elöszámlllya</sic></rdg>
                    </app></head>
                <pb facs="107"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">BOdog az ki az nyavalyást hiven</l>
                    <l xml:id="l.2">Szánnya inségében,</l>
                    <l xml:id="l.3">Mert szükségében ötet ismétlen</l>
                    <l xml:id="l.4">Megmenti az Isten,</l>
                    <l rend="level_1" xml:id="l.5"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Megtartya éltét, es ez országba</lem>
                            <rdg wit="#W2" xml:id="rdg.4">és</rdg>
                        </app></l>
                    <l xml:id="l.6"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Lesz jo állapattya,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">állápattya</rdg>
                        </app></l>
                    <l xml:id="l.7"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Ellenséginec
                                kivánság<corr>á</corr>ban</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">kivánságában</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">kivánságaban</rdg>
                        </app></l>
                    <l xml:id="l.8"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Nem adgya markáb<corr>a</corr>n.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">markában</rdg>
                            <rdg wit="#W3" xml:id="rdg.9">markábán</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Fáydalmában az Isten megtartya,</l>
                    <l xml:id="l.10">Szépen fölgyogyitya,</l>
                    <l xml:id="l.11">Beteg ágyát forditya örömre</l>
                    <l xml:id="l.12">Es jó egésségre.</l>
                    <l rend="level_1" xml:id="l.13">Azert igy szóloc néked Istenem:</l>
                    <l xml:id="l.14">Kegyelmezz meg nékem,</l>
                    <l xml:id="l.15">Gyogyits meg Uram én betegségem,</l>
                    <l xml:id="l.16">Mert igen vétkeztem.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">En ellenségim szidnac engemet</l>
                    <l xml:id="l.18">Örölnéc vesztemet,</l>
                    <l xml:id="l.19"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Mondgyác: Halála ennec ha jö el,</lem>
                            <rdg wit="#W1" xml:id="rdg.10">jöél</rdg>
                            <rdg wit="#W2" xml:id="rdg.11">jö él</rdg>
                        </app></l>
                    <l xml:id="l.20">Neve mikor vész el?</l>
                    <l rend="level_1" xml:id="l.21">Meglátogattac engem nyájassan,</l>
                    <l xml:id="l.22">Hazugságot szolván,</l>
                    <l xml:id="l.23">Minden dolgaimat megszemléltéc,</l>
                    <l xml:id="l.24">Osztán kiföczögtéc.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25">Mindnyájan én ellenem suttognac,</l>
                    <l xml:id="l.26">Reám olálkodnac,</l>
                    <l xml:id="l.27">Szereznec, kérnec nékem bánatot,</l>
                    <l xml:id="l.28">Es háboruságot.</l>
                    <l rend="level_1" xml:id="l.29">Mondván: Az ö büninec soksága</l>
                    <l xml:id="l.30">Fáydalmánac oka,</l>
                    <l xml:id="l.31">Ihon fekszic az ö kôr ágyába</l>
                    <l xml:id="l.32">Már föl nem kél soha.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.33"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Egy pedig az ki barátom vala,</lem>
                            <rdg wit="#W1" xml:id="rdg.12">penig</rdg>
                        </app></l>
                    <l xml:id="l.34">Kiben bizom vala,</l>
                    <l xml:id="l.35"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Kit tápláltam, es ötte kenyerem,</lem>
                            <rdg wit="#W2" xml:id="rdg.13">és</rdg>
                        </app></l>
                    <l xml:id="l.36">Lábat vét ennékem.</l>
                    <l rend="level_1" xml:id="l.37">Legy kegyelmes azértan Ur Isten,</l>
                    <l xml:id="l.38">Illy nagy szükségemben,</l>
                    <l xml:id="l.39">Gyogyits meg, hogy valaha nékiec</l>
                    <l xml:id="l.40">En megfizethessec.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41">De hozzám jo kedvedet esmerem,</l>
                    <l xml:id="l.42">Ezennis jol értem,</l>
                    <l xml:id="l.43"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Mert ellenségemnec oka ninczen,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.14">ellenségémnec</rdg>
                        </app></l>
                    <l xml:id="l.44">Hogy raytam örvendgyen.</l>
                    <l rend="level_1" xml:id="l.45">Tisztaságomban engem megtartasz,</l>
                    <l xml:id="l.46">Es megszabaditasz,</l>
                    <l xml:id="l.47">Es szemeid eleiben állatsz,</l>
                    <l xml:id="l.48">Öröcké el nem hatsz.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.49">Aldott legy Izraelnec Istene</l>
                    <l xml:id="l.50">Most és mind öröcke.</l>
                    <l xml:id="l.51"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Szent neved diczirtesséc mindenben</lem>
                            <rdg wit="#W1" xml:id="rdg.15">diczértessék</rdg>
                        </app></l>
                    <l xml:id="l.52">Amen, és ugy legyen.</l>
                </lg>
            </div>
