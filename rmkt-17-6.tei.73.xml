    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 73.</fw>
                <head type="title">LXXIII. SOLTAR. T. B.</head>
                <head type="sub">Vigaztalás az istentelenöknec jo szerenczés
                    állapattyokellen.</head>
                <pb facs="173"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">BIzonyára jo az Isten,</l>
                    <l xml:id="l.2">Az Izraelnec jelesben,</l>
                    <l xml:id="l.3"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Az kic szivöket tisztán tartyác</lem>
                            <rdg wit="#W1" xml:id="rdg.1">sziveket</rdg>
                        </app></l>
                    <l xml:id="l.4">Az ö jovoltát azoc láttyác,</l>
                    <l rend="level_1" xml:id="l.5"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">De én czac nem félre hayléc,</lem>
                            <rdg wit="#W1" xml:id="rdg.2">félen</rdg>
                        </app></l>
                    <l xml:id="l.6">Ugy megtántorodéc lábam,</l>
                    <l xml:id="l.7">Járásomban ugy megbotlam,</l>
                    <l xml:id="l.8">Hogy czaknem szörnyen ledöléc.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Mert boszszonkodom az népre,</l>
                    <l xml:id="l.10">Kinec nagy esztelensége,</l>
                    <l xml:id="l.11">Midön látom hogy az hitlenec</l>
                    <l xml:id="l.12">Illy nagy jo szerenczében élnec.</l>
                    <l rend="level_1" xml:id="l.13">Az halállal nem baylódnac,</l>
                    <l xml:id="l.14"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Semmi faydalmat
                                nemlátn<corr>a</corr>c,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">látnac</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">látnác</rdg>
                        </app></l>
                    <l xml:id="l.15">Erös kövérec testekben,</l>
                    <l xml:id="l.16">Elnec nagy jo egésségben.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">Nincz nékic mint egyebeknec:</l>
                    <l xml:id="l.18"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Semminemü gy<corr>ö</corr>ttrödésec,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">gyödrödésec</rdg>
                            <rdg wit="#W3" xml:id="rdg.6">gyottrödésec</rdg>
                        </app></l>
                    <l xml:id="l.19">Midön más embert vér az Isten,</l>
                    <l xml:id="l.20">Ök élnec nagy jo békeségben.</l>
                    <l rend="level_1" xml:id="l.21">Azért kevélség nyakokon</l>
                    <l xml:id="l.22">Mint aranylántz környül vagyon,</l>
                    <l xml:id="l.23"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Öltöznec mint szép ruhába</lem>
                            <rdg wit="#W1" xml:id="rdg.7"><sic>tuhában</sic></rdg>
                            <rdg wit="#W2" xml:id="rdg.8">ruhában</rdg>
                        </app></l>
                    <l xml:id="l.24"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Negédségbe eröszakba.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">Negédségben eröszakban</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25">Fénlic szemec kövérségtöl</l>
                    <l xml:id="l.26">Kidüllettec â fejekböl,</l>
                    <l xml:id="l.27">Nagyob az ö jo szerenczéjec,</l>
                    <l xml:id="l.28">Hogy nem mint kivánhatná szivec.</l>
                    <l rend="level_1" xml:id="l.29">Azért gonosz az ö dolgoc,</l>
                    <l xml:id="l.30"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Kevélség
                                mindenszánd<corr>é</corr>koc,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">szándékoc</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">szándekoc</rdg>
                        </app></l>
                    <l xml:id="l.31"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Gonossá<corr>g</corr>ockalkérkednec,</lem>
                            <rdg wit="#W1" xml:id="rdg.12">Gonosságokkal</rdg>
                            <rdg wit="#W2" xml:id="rdg.13">Gonosságockal</rdg>
                            <rdg wit="#W3" xml:id="rdg.14">Gonossággockal</rdg>
                        </app></l>
                    <l xml:id="l.32"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Nagy gög<corr>g</corr>el
                                fönnyenbeszélnec.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.15">göggel</rdg>
                            <rdg wit="#W3" xml:id="rdg.16">gögel</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 5 </fw>
                    <l xml:id="l.33"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Szájokat
                                nagykároml<corr>á</corr>ssal</lem>
                            <rdg wit="#W1 #W3" xml:id="rdg.17">káromlassal</rdg>
                            <rdg wit="#W2" xml:id="rdg.18">káromlással</rdg>
                        </app></l>
                    <l xml:id="l.34">Az égre táttyác szitkockal,</l>
                    <l xml:id="l.35"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Gyal<corr>á</corr>zatockal
                                rakvanyelvec,</lem>
                            <rdg wit="#W1" xml:id="rdg.19">Gyalázatokkal</rdg>
                            <rdg wit="#W2" xml:id="rdg.20">Gyalázatockal</rdg>
                            <rdg wit="#W3" xml:id="rdg.21">Gyalazatockal</rdg>
                        </app></l>
                    <l xml:id="l.36">Kic ez egez földre kiütnec,</l>
                    <l rend="level_1" xml:id="l.37">Azért az hivec gyakorta</l>
                    <l xml:id="l.38">Esnec nagy mély gondolatba,</l>
                    <l xml:id="l.39">Mert pohárjoc ö nékiec</l>
                    <l xml:id="l.40">Keserö vizzel töltetnec.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41">Mondnac végre: Az Ur Isten</l>
                    <l xml:id="l.42"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Láttyaé ezt
                                azm<corr>e</corr>nnyekben?</lem>
                            <rdg wit="#W1" xml:id="rdg.22">Lattyáé</rdg>
                            <rdg wit="#W2" xml:id="rdg.23">Láttyáé</rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.24">menyekben</rdg>
                            <rdg wit="#W3" xml:id="rdg.25">ménnyekben</rdg>
                        </app></l>
                    <l xml:id="l.43"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">Mi nyavalyáinkat tudgyaé,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.26">nyavályáinkat</rdg>
                        </app></l>
                    <l xml:id="l.44"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14"
                                >Kes<corr>e</corr>rüségünketszánnyaé?</lem>
                            <rdg wit="#W1 #W2 #W3" xml:id="rdg.27">Kesérüségünket</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.45">Imé az Istentelenec,</l>
                    <l xml:id="l.46">Láttyátoc élnec örömben,</l>
                    <l xml:id="l.47">Az mint kivánnyác szivekben,</l>
                    <l xml:id="l.48">Gazdagoc joszerenczéssec.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.49">Mit használ tehát énnékem</l>
                    <l xml:id="l.50">Hogy tisztán tartom én szivem?</l>
                    <l xml:id="l.51">Es miczoda hasznom vân abban</l>
                    <l xml:id="l.52">Hogy kezem mosom tisztaságban?</l>
                    <l rend="level_1" xml:id="l.53">Imé mind hijában marad</l>
                    <l xml:id="l.54">Hogy én igy kesergettetem,</l>
                    <l xml:id="l.55">Ottan raytam büntetésem</l>
                    <l xml:id="l.56"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15">Reggel mihelyen megvirrad.</lem>
                            <rdg wit="#W1" xml:id="rdg.28">megvérrad</rdg>
                            <rdg wit="#W2" xml:id="rdg.29">megverrad</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.57">Czaknem énis igyen szoléc,</l>
                    <l xml:id="l.58"><app xml:id="app.16">
                            <lem wit="#KK" xml:id="lem.16">D<corr>e</corr> látám hogy nem
                                jolesnéc,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.30">De</rdg>
                            <rdg wit="#W3" xml:id="rdg.31">Dé</rdg>
                        </app></l>
                    <l xml:id="l.59"><app xml:id="app.17">
                            <lem wit="#KK" xml:id="lem.17">Es ártalmas
                                lenn<corr>e</corr>azoknac,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.32">lenne</rdg>
                            <rdg wit="#W3" xml:id="rdg.33">lenné</rdg>
                        </app></l>
                    <l xml:id="l.60">Kic te fiaidnac mondatnac.</l>
                    <l rend="level_1" xml:id="l.61"><app xml:id="app.18">
                            <lem wit="#KK" xml:id="lem.18">Azért
                                jobbanmeggond<corr>o</corr>lám,</lem>
                            <rdg wit="#W1" xml:id="rdg.34">meggondolam</rdg>
                            <rdg wit="#W2" xml:id="rdg.35">meggondolám</rdg>
                            <rdg wit="#W3" xml:id="rdg.36">meggondalám</rdg>
                        </app></l>
                    <l xml:id="l.62">Magamban meghányám vetém,</l>
                    <l xml:id="l.63">De sockal nehezbnec lelém,</l>
                    <l xml:id="l.64">Hogy nem végét találhatnám.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.65">Miglen elbémenéc végre</l>
                    <l xml:id="l.66">Az Istennec szent helyére,</l>
                    <l xml:id="l.67">Es végezetre vöm eszemben</l>
                    <l xml:id="l.68">Az gonoszoc vége mi legyen.</l>
                    <l rend="level_1" xml:id="l.69">Aztis jol megértém osztán,</l>
                    <l xml:id="l.70">Hogy öket te megbünteted,</l>
                    <l xml:id="l.71">Sikamló helyre helyheted,</l>
                    <l xml:id="l.72">Es vetöd az pusztaságban.</l>
                </lg>
                <lg xml:id="lg.10">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 10 </fw>
                    <l xml:id="l.73">Ugy hogy czudállyác mindenec</l>
                    <l xml:id="l.74"><app xml:id="app.19">
                            <lem wit="#KK" xml:id="lem.19">Hogy illy hamar odá lesznec,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.37">oda</rdg>
                        </app></l>
                    <l xml:id="l.75"><app xml:id="app.20">
                            <lem wit="#KK" xml:id="lem.20">Vesznec es esnec nagy inségben,</lem>
                            <rdg wit="#W2" xml:id="rdg.38">és</rdg>
                        </app></l>
                    <l xml:id="l.76"><app xml:id="app.21">
                            <lem wit="#KK" xml:id="lem.21">Szégyenségben es rettegésben,</lem>
                            <rdg wit="#W2" xml:id="rdg.39">és</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.77">Minden ö gazdagságokat</l>
                    <l xml:id="l.78">Mulando alommá tészed,</l>
                    <l xml:id="l.79">Kiböl ha ember fölébred,</l>
                    <l xml:id="l.80">Az lelt jókban semmit nem lát.</l>
                </lg>
                <lg xml:id="lg.11">
                    <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                    <l xml:id="l.81">Ezen vala nagy bánatom,</l>
                    <l xml:id="l.82">Es szivemben nagy faydalmom,</l>
                    <l xml:id="l.83"><app xml:id="app.22">
                            <lem wit="#KK" xml:id="lem.22">Kinozám szörnyen veséimet,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.40">Kínozám</rdg>
                        </app></l>
                    <l xml:id="l.84">Elhagyám hitetni elmémet.</l>
                    <l rend="level_1" xml:id="l.85"><app xml:id="app.23">
                            <lem wit="#KK" xml:id="lem.23">Olly tunya es bolond valéc,</lem>
                            <rdg wit="#W2" xml:id="rdg.41">és</rdg>
                        </app></l>
                    <l xml:id="l.86">Mert ez dologhoz nem értéc,</l>
                    <l xml:id="l.87">Elötted lök olly tudatlan,</l>
                    <l xml:id="l.88">Mint az barom, melly oktalan.</l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.89">De én te nálad maradoc,</l>
                    <l xml:id="l.90">Noha soc nyavalyát látoc,</l>
                    <l xml:id="l.91">Mert te megtartál jób kezeddel,</l>
                    <l xml:id="l.92">Nagy inségemben nem hagyálel.</l>
                    <l rend="level_1" xml:id="l.93">Tanáczoddal vezérly engem,</l>
                    <l xml:id="l.94">Igazgass te ösvényedre,</l>
                    <l xml:id="l.95"><app xml:id="app.24">
                            <lem wit="#KK" xml:id="lem.24">Osztán végy föl diczöségre,</lem>
                            <rdg wit="#W1" xml:id="rdg.42">düczöségre</rdg>
                        </app></l>
                    <l xml:id="l.96">Tégy illy kegyessen én velem.</l>
                </lg>
                <lg xml:id="lg.13">
                    <fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
                    <l xml:id="l.97">Az mennyekben te vagy nékem</l>
                    <l xml:id="l.98">Czac egyedöl én Istenem,</l>
                    <l xml:id="l.99">Ez egesz földön senki ninczen</l>
                    <l xml:id="l.100"><app xml:id="app.25">
                            <lem wit="#KK" xml:id="lem.25">Kit kivöled lelkem kedvellyen.</lem>
                            <rdg wit="#W1" xml:id="rdg.43">küvelöd</rdg>
                            <rdg wit="#W2" xml:id="rdg.44">kivelöd</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.101"><app xml:id="app.26">
                            <lem wit="#KK" xml:id="lem.26">Ha elfogy testem es lelkem,</lem>
                            <rdg wit="#W2" xml:id="rdg.45">és</rdg>
                        </app></l>
                    <l xml:id="l.102">Mégis vigaztalsz szivemben,</l>
                    <l xml:id="l.103">Egyéb részem nékem ninczen</l>
                    <l xml:id="l.104">Te náladnál én Istenem.</l>
                </lg>
                <lg xml:id="lg.14">
                    <fw corresp="Szenci Molnár Albert" type="lg">14 </fw>
                    <l xml:id="l.105">Mert kic töled eltávoznac,</l>
                    <l xml:id="l.106">Azoc elvesznec, romlanac</l>
                    <l xml:id="l.107">Elveszted azokat hirtelen,</l>
                    <l xml:id="l.108">Kic biznac bálvány istenekben.</l>
                    <l rend="level_1" xml:id="l.109"><app xml:id="app.27">
                            <lem wit="#KK" xml:id="lem.27">Azért én
                                hozzádfoly<corr>a</corr>mom,</lem>
                            <rdg wit="#W1" xml:id="rdg.46">folyamom</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.47">folyámom</rdg>
                        </app></l>
                    <l xml:id="l.110">Fö bodogságom az nékem;</l>
                    <l xml:id="l.111">Hogy benned én reménségem,</l>
                    <l xml:id="l.112">Es jo tétöd magasztalom.</l>
                </lg>
            </div>
        </body>
    </text>
