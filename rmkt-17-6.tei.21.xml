    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 21.</fw>
                <head type="title">XXI. SOLTAR. C. M.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Háláadása az Izrael<corr>i</corr>táknac az
                            David királyért.</lem>
                        <rdg wit="#W1 #W2" xml:id="rdg.1">Izraelitáknac</rdg>
                        <rdg wit="#W3" xml:id="rdg.2">Izraelítáknac</rdg>
                    </app></head>
                <pb facs="57"/>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">ÖRvendez Uram az királ</l>
                    <l xml:id="l.2">Az te nagy hatalmadban,</l>
                    <l xml:id="l.3">Es szabaditásodban,</l>
                    <l rend="level_1" xml:id="l.4"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es vigad nagy
                                buzgos<corr>á</corr>ggal,</lem>
                            <rdg wit="#W1" xml:id="rdg.3">buzgosággal</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.4">buzgosaggal</rdg>
                        </app></l>
                    <l xml:id="l.5"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Hogy öt megs<corr>e</corr>gited,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">megsegited</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.6">megségited</rdg>
                        </app></l>
                    <l xml:id="l.6">Inségböl kimented.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Ugy viseled néki gondgyát,</l>
                    <l xml:id="l.8">Hogy az mit töled kérend,</l>
                    <l xml:id="l.9">Mindeneket megnyerend.</l>
                    <l rend="level_1" xml:id="l.10">Mihelt fölnyittya ö száját,</l>
                    <l xml:id="l.11">Alég szól egy igét,</l>
                    <l xml:id="l.12">Már hallod kérését.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13">Elöb hogy nem könyörgene</l>
                    <l xml:id="l.14">Meghalgatod, meglátod,</l>
                    <l xml:id="l.15">Irgalmaddal megáldod.</l>
                    <l rend="level_1" xml:id="l.16">Es föltész az ö fejére</l>
                    <l xml:id="l.17">Sár arany koronát,<note type="critic" xml:id="note.1"
                                    ><persName>Lobwasser<idno corresp="Ambrosius Lobwasser"
                                /></persName>: ein schöne kron, von roten golt gemacht; Károli:
                            tiszta arany Coronát.</note></l>
                    <l xml:id="l.18">Mint királyi pompát.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Azt kéri vala tetöled,</l>
                    <l xml:id="l.20">Hogy czac valamennyire</l>
                    <l xml:id="l.21">Hoszszabbollyon élete:</l>
                    <l rend="level_1" xml:id="l.22">De ö életét terjeszted</l>
                    <l xml:id="l.23">Nagy soc esztendökre,</l>
                    <l xml:id="l.24"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Söt öröc idökre.</lem>
                            <rdg wit="#W1" xml:id="rdg.7">üdökre</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Öt fölvöd nagy diczöségre</lem>
                            <rdg wit="#W1" xml:id="rdg.8">düczöségre</rdg>
                        </app></l>
                    <l xml:id="l.26">Az te segedelmeddel,</l>
                    <l xml:id="l.27"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Öröc idvösségeddel.</lem>
                            <rdg wit="#W1" xml:id="rdg.9">üdvössegeddel</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.28">Ez nagy királyi fölségre</l>
                    <l xml:id="l.29">Töled emeltetéc,</l>
                    <l xml:id="l.30">Es ékesitetéc.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.31">Szereted öt minden jockal,</l>
                    <l xml:id="l.32">Es te szent áldomásod</l>
                    <l xml:id="l.33">Öröcké néki nyuytod.</l>
                    <l rend="level_1" xml:id="l.34">Örvendetes vigságockal</l>
                    <l xml:id="l.35">Öt gyönyörkötteted,</l>
                    <l xml:id="l.36">Szinedre nézeted.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.37">Ez király mindenkor bizic</l>
                    <l xml:id="l.38"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Czac az ö Istenében,</lem>
                            <rdg wit="#W1" xml:id="rdg.10">Isteniben</rdg>
                        </app></l>
                    <l xml:id="l.39">Es nem fél veszéliben.</l>
                    <l rend="level_1" xml:id="l.40">Az magasságosnac nyugszic</l>
                    <l xml:id="l.41">Irgalmasságában,</l>
                    <l xml:id="l.42">Es megmarad abban.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.43">Kezeddel megleled öket,</l>
                    <l xml:id="l.44">Az kic reád támadnac,</l>
                    <l xml:id="l.45">Boszszuságodra járnac.</l>
                    <l rend="level_1" xml:id="l.46">Es az te gyülölöidet</l>
                    <l xml:id="l.47">Kezeidböl senki</l>
                    <l xml:id="l.48">Soha ki nem menti.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.49">Mint az hév tüzes kementze,</l>
                    <l xml:id="l.50">Haragod környülvészi</l>
                    <l xml:id="l.51"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Es öket mind ellepi.</lem>
                            <rdg wit="#W1" xml:id="rdg.11">ököt</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.52">Haragos ortzádnac szine</l>
                    <l xml:id="l.53">Öket megemeszti,</l>
                    <l xml:id="l.54">Mint az láng elnyeli.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.55">Mindennemü gyümölczeket</l>
                    <l xml:id="l.56">Hirtelen te elvesztöd,</l>
                    <l xml:id="l.57">Es az földröl eltörlöd.</l>
                    <l rend="level_1" xml:id="l.58">Magvokat, czemétéjeket</l>
                    <l xml:id="l.59">Nékic megátkozod,</l>
                    <l xml:id="l.60">Nép közül kiirtod.</l>
                </lg>
                <lg xml:id="lg.11">
                    <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                    <l xml:id="l.61">Mert gonoszra igyekeztec,</l>
                    <l xml:id="l.62">Szándékoztac ellened,</l>
                    <l xml:id="l.63">Hogy boszszontsanac téged.</l>
                    <l rend="level_1" xml:id="l.64">Gonosz tanáczot végeztec,</l>
                    <l xml:id="l.65">De hogy véghez mennyen,</l>
                    <l xml:id="l.66">Erejekben ninczen.</l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.67">Mert minden ellenségidet</l>
                    <l xml:id="l.68">Erössen megkergeted,</l>
                    <l xml:id="l.69">Es öket elszélleszted.</l>
                    <l rend="level_1" xml:id="l.70">Megvonszod Ived idegét,</l>
                    <l xml:id="l.71">Nyilad mint az tárgyra</l>
                    <l xml:id="l.72">Lövöd ortzájokra.</l>
                </lg>
                <lg xml:id="lg.13">
                    <fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
                    <l xml:id="l.73">Azert Uram már támadgy föl,</l>
                    <l xml:id="l.74">Mutasd meg hatalmadat,</l>
                    <l xml:id="l.75">Lássuc erös voltodat.</l>
                    <l rend="level_1" xml:id="l.76"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Hogy diczöséges erödröl</lem>
                            <rdg wit="#W1" xml:id="rdg.12">düczöseges</rdg>
                        </app></l>
                    <l xml:id="l.77">Vigan énekellyünc,</l>
                    <l xml:id="l.78">Es benned örvendgyünc.</l>
                </lg>
            </div>
