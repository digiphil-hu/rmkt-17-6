    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 162.</fw>
                <head type="title"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">AZ APASTALI CREDO</lem>
                        <rdg wit="#W2" xml:id="rdg.1">Az Credo.</rdg>
                    </app></head>
                <head type="notation">Az 116. Soltarnac Franciai notajára.</head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">HIszec az menybéli egy Istenbe,</lem>
                            <rdg wit="#W2" xml:id="rdg.2">Istenben</rdg>
                        </app></l>
                    <l xml:id="l.2"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Az mindenhato kegyelmes atyába,</lem>
                            <rdg wit="#W2" xml:id="rdg.3">atyában</rdg>
                        </app></l>
                    <l xml:id="l.3"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Mennec és földnec teremtö Uraba,</lem>
                            <rdg wit="#W2" xml:id="rdg.4">urában</rdg>
                        </app></l>
                    <l xml:id="l.4"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Ki mindent <corr>t</corr>art
                                gondviselésébe.</lem>
                            <rdg wit="#W1" xml:id="rdg.5">rart</rdg>
                            <rdg wit="#W2" xml:id="rdg.6">tart gondviselésében</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.5"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Es az ö egyszülött szent Fiába,</lem>
                            <rdg wit="#W2" xml:id="rdg.7">fiában</rdg>
                        </app></l>
                    <l xml:id="l.6"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Az Iesus Christusba mi egy Urunkba,</lem>
                            <rdg wit="#W2" xml:id="rdg.8">Christusban […] Urunkban</rdg>
                        </app></l>
                    <l xml:id="l.7"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Az ki az szent Lélektül fogantatéc,</lem>
                            <rdg wit="#W2" xml:id="rdg.9">lélektöl</rdg>
                        </app></l>
                    <l xml:id="l.8"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Es az szüz Mariatul születéc.</lem>
                            <rdg wit="#W2" xml:id="rdg.10">Mariától <sic>szüleletéc</sic></rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.9"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Kinzatéc Pilátusnac alatta,</lem>
                            <rdg wit="#W2" xml:id="rdg.11">Kénzatéc</rdg>
                        </app></l>
                    <l xml:id="l.10">Keresztfára feszitetéc: meghala,</l>
                    <l xml:id="l.11">Es eltemettetéc, poklokra szálla:</l>
                    <l xml:id="l.12">Harmad nap holtábol feltámada.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.13">Felméne mennyekben, ül jobjára,</l>
                    <l xml:id="l.14">Az mindenhato atya Ur Istennec,</l>
                    <l xml:id="l.15">Onnan itéletire az élöknec,</l>
                    <l xml:id="l.16">Es holtaknac eljö bizonyára.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.17">Hiszec az szentelö szent lélekben,</l>
                    <l xml:id="l.18">Hiszec Keresztyen anya szent egyházat,</l>
                    <l xml:id="l.19">Az szenteknec eggyességét mindenben</l>
                    <l xml:id="l.20">Es az bünöknec megboczánattyát.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.21">Hiszem az testnec feltamadását,</l>
                    <l xml:id="l.22"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Es az idvösséges öröc életet,</lem>
                            <rdg wit="#W2" xml:id="rdg.12">idvesseges</rdg>
                        </app></l>
                    <l xml:id="l.23">Mellyet Isten az hiveknec megszerzet,</l>
                    <l xml:id="l.24">Lelkem ez hittel biztattya magát.</l>
                </lg>
            </div>
