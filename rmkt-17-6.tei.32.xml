            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 32.</fw>
                <head type="title">XXXII. SOLTAR. C. M.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Tanusag az üdvös<corr>s</corr>éges
                            bodogságrol.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">üdvösseges</rdg>
                        <rdg wit="#W2 #W3" xml:id="rdg.2">üdvöszéges</rdg>
                    </app></head>
                <pb facs="81"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">O Melly bodog az olly ember éltében</l>
                    <l xml:id="l.2">Az kit az Isten bévött kegyelmében,</l>
                    <l xml:id="l.3">Es megboczátta az ö vétkeit,</l>
                    <l xml:id="l.4">Es béfedezte minden büneit.</l>
                    <l rend="level_1" xml:id="l.5">Bodog az kinec ö nagy hamissága</l>
                    <l xml:id="l.6">Istentöl nincz néki tulaydonitva,</l>
                    <l xml:id="l.7">Es kinec czalárdság nincz szivében,</l>
                    <l xml:id="l.8">Tettetés nélkül jár életében.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Hogy bünömet el akarnám halgatni</l>
                    <l xml:id="l.10"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es néked meg nem ak<corr>a</corr>rám
                                vallani,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">akarám</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">akárám</rdg>
                        </app></l>
                    <l xml:id="l.11">Ottan czontaim elszáradánac,</l>
                    <l xml:id="l.12">Soksága miatt én siralmimnac.</l>
                    <l rend="level_1" xml:id="l.13">Mert éyjel nappal kezed nehez vólta</l>
                    <l xml:id="l.14">Nagy büneimért raytam fekszic vala,</l>
                    <l xml:id="l.15">Bennem elfogya minden erösség,</l>
                    <l xml:id="l.16"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Mint nyári hévségben az nedvesség.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">nedvésség</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">De hogy bünemet elötted
                                    megvallá<corr>m</corr>,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">megvallám</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">megvallã</rdg>
                        </app></l>
                    <l xml:id="l.18">Es nagy vétkeimet el nem halgatám,</l>
                    <l xml:id="l.19">De hiven elö beszéllém néked,</l>
                    <l xml:id="l.20">Ottan boczánatot nyeréc töled.</l>
                    <l rend="level_1" xml:id="l.21"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Ezért az Ur Istennec minden hivec</lem>
                            <rdg wit="#W1" xml:id="rdg.8">Azert</rdg>
                            <rdg wit="#W2" xml:id="rdg.9">Azért</rdg>
                        </app></l>
                    <l xml:id="l.22">Könyörögjenec mig vagyon idejec,</l>
                    <l xml:id="l.23">Mert ha nagy árvizec jönénekis,</l>
                    <l xml:id="l.24"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">De nem árth<corr>a</corr>tna ezeknec
                                mégis.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">árthatna</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">árthátna</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25">Te vagy otalmam, örizz meg engemet,</l>
                    <l xml:id="l.26">Minden gonosz ellen tarts meg lelkemet,</l>
                    <l xml:id="l.27">Vigaztally meg, hogy örvendezhessec,</l>
                    <l xml:id="l.28"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Es vigan néked énekelhessec.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">nekéd</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.29">Tanitlac téged, ugymond az Ur Isten,</l>
                    <l xml:id="l.30">Es vezérellec az igaz ösvenyen,</l>
                    <l xml:id="l.31">Szememvel mindenkor rád vigyázoc,</l>
                    <l xml:id="l.32"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Igazgatlac, réad gondot tartoc.</lem>
                            <rdg wit="#W1" xml:id="rdg.13">reád</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.33">Ne legyetec ollyac mint az öszvérec</l>
                    <l xml:id="l.34">Es â lovac, kiknec ninczen értelmec,</l>
                    <l xml:id="l.35">Kiknec zabolát vetnec szájokra,</l>
                    <l xml:id="l.36">Hogy ne jargalhassanac szájokra.</l>
                    <l rend="level_1" xml:id="l.37">Az gonosznac szinte ez nyavalyája,</l>
                    <l xml:id="l.38">Az melly ötet szájára nem boczáttya:</l>
                    <l xml:id="l.39">De környülvészi az Ur kegyelme</l>
                    <l xml:id="l.40">Az kinec ö minden hiedelme.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Örüllyetec azért az Ur Istenben</lem>
                            <rdg wit="#W1" xml:id="rdg.14">Oeröllyetec</rdg>
                        </app></l>
                    <l xml:id="l.42">Igaz hivec, legyetec nagy örömben,</l>
                    <l xml:id="l.43">Vigadgyatoc es énekellyetec,</l>
                    <l xml:id="l.44"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Az kiknec vagyon tiszta
                                    sziv<corr>e</corr>tec.</lem>
                            <rdg wit="#W1 #W2 #W3" xml:id="rdg.15">szivétec</rdg>
                        </app></l>
                </lg>
            </div>
