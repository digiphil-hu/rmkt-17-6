         <div type="poem" xml:id="d.1" xml:lang="hu">
            <fw type="originalNum">[RMKT XVII/6:] 188.</fw>
            <head type="title"><app xml:id="app.1">
                  <lem wit="#KK" xml:id="lem.1">AZ SAREPTABÉLI ÖZVEGY ASZSZONYROL.</lem>
                  <rdg wit="#W2" xml:id="rdg.1">Cantio optima.</rdg>
                  <rdg wit="#W3" xml:id="rdg.2">Mas.</rdg>
                  <rdg wit="#W4" xml:id="rdg.3">In festi Helie profetae</rdg>
                  <rdg wit="#W5" xml:id="rdg.4">Szent Illyes profetarol</rdg>
               </app></head>
            <head type="notation"><app xml:id="app.2">
                  <lem wit="#KK" xml:id="lem.2">Notaja: O felseges Isten kegyelmes Atyám.</lem>
                  <rdg wit="#W2" xml:id="rdg.5">Maidan nektök mondok etc.</rdg>
                  <rdg wit="#W3 #W5" xml:id="rdg.6">Nagy bánatban Dávid.</rdg>
                  <rdg wit="#W4" xml:id="rdg.7">[Hiányzik.]</rdg>
               </app></head>
            <pb facs="391"> </pb>
            <lg xml:id="lg.1">
               <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
               <l xml:id="l.1">SOc hálá adással mi most tartozunc,</l>
               <l xml:id="l.2"><app xml:id="app.3">
                     <lem wit="#KK" xml:id="lem.3">Az nagy Ur Istennec ezzel áldozunc,</lem>
                     <rdg wit="#W2" xml:id="rdg.8">azzal</rdg>
                     <rdg wit="#W5" xml:id="rdg.9">Az Istennek hogy mi ezzel áldozzunk</rdg>
                  </app></l>
               <l xml:id="l.3"><app xml:id="app.4">
                     <lem wit="#KK" xml:id="lem.4">Egyéb jot mert bénnünc nem talalhatunc</lem>
                     <rdg wit="#W4" xml:id="rdg.10">Mert egjeb io bennűnk nem talaltatik</rdg>
                     <rdg wit="#W5" xml:id="rdg.11">Mert egyébb jót</rdg>
                  </app></l>
               <l xml:id="l.4"><app xml:id="app.5">
                     <lem wit="#KK" xml:id="lem.5">Ez keserves völgyben az kic nyomorgunc.</lem>
                     <rdg wit="#W4" xml:id="rdg.12">budosunk</rdg>
                     <rdg wit="#W5" xml:id="rdg.13">földön, a’ hol</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.2">
               <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
               <l xml:id="l.5">Azert emlekezzünc Isten dolgárol,</l>
               <l xml:id="l.6"><app xml:id="app.6">
                     <lem wit="#KK" xml:id="lem.6">O törvenben es<corr>e</corr>tt czuda
                        dologrol,</lem>
                     <rdg wit="#W1" xml:id="rdg.14">esétt</rdg>
                     <rdg wit="#W2" xml:id="rdg.15">esöt</rdg>
                     <rdg wit="#W3" xml:id="rdg.16">eset</rdg>
                     <rdg wit="#W4" xml:id="rdg.17">teörtent</rdg>
                     <rdg wit="#W5" xml:id="rdg.18">Az O Törvényben történt nagy csudáról</rdg>
                  </app></l>
               <l xml:id="l.7">Az ötet felöknec táplálásárol,</l>
               <l xml:id="l.8"><app xml:id="app.7">
                     <lem wit="#KK" xml:id="lem.7">Eledelröl valo szaporodásrol.</lem>
                     <rdg wit="#W4" xml:id="rdg.19">Eleteben</rdg>
                     <rdg wit="#W5" xml:id="rdg.20">A’ Szent irás bizonság lészen arról</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.3">
               <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
               <l xml:id="l.9">Nagy éhség drágaság Sidoc közt vala</l>
               <l xml:id="l.10"><app xml:id="app.8">
                     <lem wit="#KK" xml:id="lem.8">Mert fölöttöc az ég értzé lött vala,</lem>
                     <rdg wit="#W5" xml:id="rdg.21">vált vala</rdg>
                  </app></l>
               <l xml:id="l.11"><app xml:id="app.9">
                     <lem wit="#KK" xml:id="lem.9">Es alattoc az föld vassá lött vala,</lem>
                     <rdg wit="#W4" xml:id="rdg.22">Es az feöld allatok uassa ualt ualla</rdg>
                  </app></l>
               <l xml:id="l.12"><app xml:id="app.10">
                     <lem wit="#KK" xml:id="lem.10">Sem fü sem gabona nem terem vala.</lem>
                     <rdg wit="#W5" xml:id="rdg.23">nöhet vala</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.4">
               <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
               <l xml:id="l.13">Isten Prophetája szent Illyes vala,</l>
               <l xml:id="l.14"><app xml:id="app.11">
                     <lem wit="#KK" xml:id="lem.11">Ki az népec között
                           sz<corr>é</corr>ll<corr>e</corr>l jár vala,</lem>
                     <rdg wit="#W1" xml:id="rdg.24">szellél</rdg>
                     <rdg wit="#W2" xml:id="rdg.25">szelel</rdg>
                     <rdg wit="#W3" xml:id="rdg.26">széllel</rdg>
                     <rdg wit="#W4 #W5" xml:id="rdg.27">szelliel</rdg>
                  </app></l>
               <l xml:id="l.15">Penitenciára mindent int vala,</l>
               <l xml:id="l.16"><app xml:id="app.12">
                     <lem wit="#KK" xml:id="lem.12">Mert az éhség köztöc igen nagy vala.</lem>
                     <rdg wit="#W5" xml:id="rdg.28">nö vala</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.5">
               <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
               <l xml:id="l.17"><app xml:id="app.13">
                     <lem wit="#KK" xml:id="lem.13">Sarepta városban ö el küldetéc,</lem>
                     <rdg wit="#W5" xml:id="rdg.29">Illyés küldeték</rdg>
                  </app></l>
               <l xml:id="l.18"><app xml:id="app.14">
                     <lem wit="#KK" xml:id="lem.14">Egy özvegy aszszontul ö eltartatéc</lem>
                     <rdg wit="#W1" xml:id="rdg.30"><sic>aszszentul</sic></rdg>
                  </app></l>
               <l xml:id="l.19">Istennec czudája ott jelentetéc,</l>
               <l xml:id="l.20">Kevés liszt és olay szaporitatéc.</l>
            </lg>
            <lg xml:id="lg.6">
               <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
               <l xml:id="l.21">Mikor az városba szent Illyes juta,</l>
               <l xml:id="l.22"><app xml:id="app.15">
                     <lem wit="#KK" xml:id="lem.15">Egy aszszont talála ki fat szed vala,</lem>
                     <rdg wit="#W4" xml:id="rdg.31">Egj eözuegj azont talala</rdg>
                  </app></l>
               <l xml:id="l.23">Kenyeret ö töle Illyes ker vala</l>
               <l xml:id="l.24"><app xml:id="app.16">
                     <lem wit="#KK" xml:id="lem.16">Mert hoszszu ut miat ehezött vala.</lem>
                     <rdg wit="#W4" xml:id="rdg.32">megj elhűlt uala</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.7">
               <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
               <l xml:id="l.25"><app xml:id="app.17">
                     <lem wit="#KK" xml:id="lem.17">Szegény aszszony monda: él az na<corr>gy</corr>
                        Isten,</lem>
                     <rdg wit="#W1" xml:id="rdg.33"><sic>na-</sic></rdg>
                     <rdg wit="#W2 #W3 #W4 #W5" xml:id="rdg.34">nagy</rdg>
                  </app></l>
               <l xml:id="l.26"><app xml:id="app.18">
                     <lem wit="#KK" xml:id="lem.18">Hogy nékem kenyerem egy falat sinczen,</lem>
                     <rdg wit="#W2" xml:id="rdg.35">Neköm kenyerem egy morsais ninczen</rdg>
                     <rdg wit="#W3" xml:id="rdg.36">Nékem kenyerem egy morsa ninczen</rdg>
                     <rdg wit="#W4" xml:id="rdg.37">Ennekem kinierem egj falat s nintczien</rdg>
                     <rdg wit="#W5" xml:id="rdg.38">Ennékem kenyerem</rdg>
                  </app></l>
               <l xml:id="l.27"><app xml:id="app.19">
                     <lem wit="#KK" xml:id="lem.19">De házamban vagyon egy kevés lisztem,</lem>
                     <rdg wit="#W5" xml:id="rdg.39">Vagyon csak házamban egy marok lisztem</rdg>
                  </app></l>
               <l xml:id="l.28"><app xml:id="app.20">
                     <lem wit="#KK" xml:id="lem.20">Es korsómban vagyon egy kalán olájom.</lem>
                     <rdg wit="#W2" xml:id="rdg.40">Korsomban vagyon keves olayom</rdg>
                     <rdg wit="#W3" xml:id="rdg.41">kevés olajom</rdg>
                     <rdg wit="#W4" xml:id="rdg.42">uagion kalan</rdg>
                     <rdg wit="#W5" xml:id="rdg.43">Korsóban egy kalán olaj elöttem</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.8">
               <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
               <l xml:id="l.29"><app xml:id="app.21">
                     <lem wit="#KK" xml:id="lem.21">Hogy azt pogaczaul egyszer meg süssem,</lem>
                     <rdg wit="#W2 #W3" xml:id="rdg.44">pogaczajul azt</rdg>
                  </app></l>
               <l xml:id="l.30"><app xml:id="app.22">
                     <lem wit="#KK" xml:id="lem.22">Es én gyermekemmel egyszer ehessem,</lem>
                     <rdg wit="#W4" xml:id="rdg.45">giermekimel</rdg>
                     <rdg wit="#W5" xml:id="rdg.46">Edes gyermekemmel hogy megehessem</rdg>
                  </app></l>
               <l xml:id="l.31"><app xml:id="app.23">
                     <lem wit="#KK" xml:id="lem.23">Ehsegnec halála ottan elvegyen,</lem>
                     <rdg wit="#W2" xml:id="rdg.47"><sic>halalat</sic></rdg>
                  </app></l>
               <l xml:id="l.32"><app xml:id="app.24">
                     <lem wit="#KK" xml:id="lem.24">Mert semmi életem ennél töb ninczen.</lem>
                     <rdg wit="#W5" xml:id="rdg.48">Mert életem tovább ennél már nincsen</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.9">
               <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
               <l xml:id="l.33"><app xml:id="app.25">
                     <lem wit="#KK" xml:id="lem.25">Az Propheta erre neki felele,</lem>
                     <rdg wit="#W4" xml:id="rdg.49">nekj erre</rdg>
                  </app></l>
               <l xml:id="l.34">Hogy az keves lisztböl pogaczát sütne,</l>
               <l xml:id="l.35"><app xml:id="app.26">
                     <lem wit="#KK" xml:id="lem.26">Elöször ö néki abbol reszt tenne,</lem>
                     <rdg wit="#W4" xml:id="rdg.50">nekj rezt tenne benne</rdg>
                     <rdg wit="#W5" xml:id="rdg.51">Leg-elöször néki</rdg>
                  </app></l>
               <l xml:id="l.36"><app xml:id="app.27">
                     <lem wit="#KK" xml:id="lem.27">Az utan fiával ö ennec benne.</lem>
                     <rdg wit="#W4" xml:id="rdg.52">fiajual [A sor után más tintával egy új
                        versszak:] Szegenj azonj haluan gyors leön dolgaba, liztet olajual giura
                        pogacziaba megh süluen eleoszeör Illies ueön abban az utan fiayual eö euek
                        abban</rdg>
                     <rdg wit="#W5" xml:id="rdg.53">[A sor után két új vsz.:] Ha ezt mivelnéje,
                        lenne olly haszna, Hogy kevés liszt, s’ olaj el-nem fogyhatna: Mert Istennek
                        arra áldása szálna, Ehség halálátúl rneg-szabadúlna. Szegény Aszszony hallá,
                        gyors lön dolgában, Lisztet, olajat gyúra pogácsában: Meg-sülvén, elöször
                        Illyés vön abban, Az-után fiával évének vigan.</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.10">
               <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
               <l xml:id="l.37"><app xml:id="app.28">
                     <lem wit="#KK" xml:id="lem.28">Olly nagy czuda dolog ott
                        mu<corr>ta</corr>ttatec,</lem>
                     <rdg wit="#W1" xml:id="rdg.54">muttatec</rdg>
                     <rdg wit="#W2 #W3" xml:id="rdg.55">adattaték</rdg>
                     <rdg wit="#W4" xml:id="rdg.56">cziuda tetel ott ielentetnek</rdg>
                     <rdg wit="#W5" xml:id="rdg.57">csuda-tétel ott jelenteték</rdg>
                  </app></l>
               <l xml:id="l.38"><app xml:id="app.29">
                     <lem wit="#KK" xml:id="lem.29">Mert nagy áldás menyböl néki adatéc,</lem>
                     <rdg wit="#W4" xml:id="rdg.58">adatnek</rdg>
                     <rdg wit="#W5" xml:id="rdg.59">Mert Menyböl ö-néki áldás</rdg>
                  </app></l>
               <l xml:id="l.39"><app xml:id="app.30">
                     <lem wit="#KK" xml:id="lem.30">Keves liszt és <corr>o</corr>l<corr>ay</corr>
                        szaporitatéc,</lem>
                     <rdg wit="#W1" xml:id="rdg.60">aloy</rdg>
                     <rdg wit="#W2 #W3 #W5" xml:id="rdg.61">olay</rdg>
                     <rdg wit="#W4" xml:id="rdg.62">alay szaporytatnek</rdg>
                  </app></l>
               <l xml:id="l.40"><app xml:id="app.31">
                     <lem wit="#KK" xml:id="lem.31">Ezzel soc napiglan ö tápláltatéc.</lem>
                     <rdg wit="#W4" xml:id="rdg.63">taplaltatnek</rdg>
                     <rdg wit="#W5" xml:id="rdg.64">esztendön el-tápláltaték</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.11">
               <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
               <l xml:id="l.41"><app xml:id="app.32">
                     <lem wit="#KK" xml:id="lem.32">O fösvény gazdagoc ezt gondolnátoc,</lem>
                     <rdg wit="#W4" xml:id="rdg.65">[Hiányzik.]</rdg>
                     <rdg wit="#W5" xml:id="rdg.66">szemléllyétek</rdg>
                  </app></l>
               <l xml:id="l.42"><app xml:id="app.33">
                     <lem wit="#KK" xml:id="lem.33">Az szegény aszszonyrol példát vennetec</lem>
                     <rdg wit="#W2" xml:id="rdg.67">Aszszontul</rdg>
                     <rdg wit="#W4" xml:id="rdg.68">[Hiányzik.]</rdg>
                     <rdg wit="#W5" xml:id="rdg.69">Az özvegy</rdg>
                  </app></l>
               <l xml:id="l.43"><app xml:id="app.34">
                     <lem wit="#KK" xml:id="lem.34">Istennec szegényit segélenétec,</lem>
                     <rdg wit="#W2 #W3 #W5" xml:id="rdg.70">segetenetök</rdg>
                     <rdg wit="#W4" xml:id="rdg.71">[Hiányzik.]</rdg>
                  </app></l>
               <l xml:id="l.44"><app xml:id="app.35">
                     <lem wit="#KK" xml:id="lem.35">Terhes lelketec könnyebitnétec.</lem>
                     <rdg wit="#W2 #W3 #W5" xml:id="rdg.72">lelkötöket</rdg>
                     <rdg wit="#W4" xml:id="rdg.73">[Hiányzik.]</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.12">
               <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
               <l xml:id="l.45"><app xml:id="app.36">
                     <lem wit="#KK" xml:id="lem.36">Isten igéjére ha sietnétec,</lem>
                     <rdg wit="#W5" xml:id="rdg.74">igijével ha gondolnátok,</rdg>
                  </app></l>
               <l xml:id="l.46">Es szivetec szerent azt halgatnátoc</l>
               <l xml:id="l.47"><app xml:id="app.37">
                     <lem wit="#KK" xml:id="lem.37">Az meghallott igét megtartanátoc,</lem>
                     <rdg wit="#W4" xml:id="rdg.75">megj tanulnatok</rdg>
                     <rdg wit="#W5" xml:id="rdg.76">Sietnétek, és azt megtartanátok,</rdg>
                  </app></l>
               <l xml:id="l.48"><app xml:id="app.38">
                     <lem wit="#KK" xml:id="lem.38">Iámbor tanitoktul megáldatnátoc.</lem>
                     <rdg wit="#W4" xml:id="rdg.77">tanitoual megj alkunatok</rdg>
                     <rdg wit="#W5" xml:id="rdg.78">tanitókkal</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.13">
               <fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
               <l xml:id="l.49">De valahol Isten igéje nem kell,</l>
               <l xml:id="l.50"><app xml:id="app.39">
                     <lem wit="#KK" xml:id="lem.39">Ott nagy nyomoruság az népekre kél</lem>
                     <rdg wit="#W4" xml:id="rdg.79">nepekre tamad fell</rdg>
                     <rdg wit="#W5" xml:id="rdg.80">Ott sok nyomorúság népre támad-fel</rdg>
                  </app></l>
               <l xml:id="l.51"><app xml:id="app.40">
                     <lem wit="#KK" xml:id="lem.40">Kegyetlen nép közöt nyomorgani kell,</lem>
                     <rdg wit="#W4" xml:id="rdg.81">Kegitlennek miat niomorodnak ell</rdg>
                     <rdg wit="#W5" xml:id="rdg.82">Kegyetlenek miatt nyomorodni kell</rdg>
                  </app></l>
               <l xml:id="l.52"><app xml:id="app.41">
                     <lem wit="#KK" xml:id="lem.41">Az éhség miattis pusztulnia kell.</lem>
                     <rdg wit="#W4" xml:id="rdg.83">Ehsegj miatis puztjtatnak ell</rdg>
                     <rdg wit="#W5" xml:id="rdg.84">Ehseg, halál miatt</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.14">
               <fw corresp="Szenci Molnár Albert" type="lg">14 </fw>
               <l xml:id="l.53"><app xml:id="app.42">
                     <lem wit="#KK" xml:id="lem.42">Azért diczéretet mi mostan mondgyunc,</lem>
                     <rdg wit="#W5" xml:id="rdg.85">tegyünk</rdg>
                  </app></l>
               <l xml:id="l.54"><app xml:id="app.43">
                     <lem wit="#KK" xml:id="lem.43">Az nagy Ur Istennec ugy könyörögjünc,</lem>
                     <rdg wit="#W5" xml:id="rdg.86">Az Ur Istennek szivböl</rdg>
                  </app></l>
               <l xml:id="l.55">Hogy az ö szent lelkét adgya minekünc</l>
               <l xml:id="l.56"><app xml:id="app.44">
                     <lem wit="#KK" xml:id="lem.44">Kárhozó vakságban ne legyen lelkünc.</lem>
                     <rdg wit="#W5" xml:id="rdg.87">Örök-bóldogságban véle lehessünk</rdg>
                  </app></l>
            </lg>
         </div>
      </body>
   </text>
