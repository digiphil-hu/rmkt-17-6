            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 145.</fw>
                <head type="title">CXLV. SOLTAR. T. B.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">David diczéri az Istent nagy diczöségéröl és
                            kegyességéröl mindenekhez, kiváltképpen az Isten félökhöz.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">Diczireti</rdg>
                    </app></head>
                <pb facs="324"/>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">ALdgyad én lelkem az Urat,</l>
                    <l xml:id="l.2">Hirdessed diczéretét,</l>
                    <l xml:id="l.3">Az Istennec adok hálát,</l>
                    <l xml:id="l.4">Valamig engem éltet,</l>
                    <l xml:id="l.5">En az Urnac éneklec</l>
                    <l xml:id="l.6">Mind addig miglen élec.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Ne legyen bizodalmatoc</l>
                    <l xml:id="l.8">Földi fejedelmekben,</l>
                    <l xml:id="l.9">Egy emberben se bizzatoc,</l>
                    <l xml:id="l.10">Kiben segétség ninczen:</l>
                    <l xml:id="l.11">Mihelt lelke kimegyen,</l>
                    <l xml:id="l.12">Menten hamuvá leszen:</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13">Minden dolga és szándéka</l>
                    <l xml:id="l.14">Elvész azon nap véle,</l>
                    <l xml:id="l.15">Bodog, az kinec otalma</l>
                    <l xml:id="l.16">Az Jacobnac Istene:</l>
                    <l xml:id="l.17">Az kinec mindenekben</l>
                    <l xml:id="l.18">Reménsége az Isten:</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Az ki mind mennyet és földet,</l>
                    <l xml:id="l.20"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es az t<corr>e</corr>ngert teremté,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.2">tengert</rdg>
                            <rdg wit="#W3" xml:id="rdg.3">téngert</rdg>
                        </app></l>
                    <l xml:id="l.21">Es ezekben mindeneket</l>
                    <l xml:id="l.22">Nagy hatalmával szerze,</l>
                    <l xml:id="l.23">Igassága, s’ hivsége</l>
                    <l xml:id="l.24">Megmarad mind öröcké.</l>
                </lg>
                <lg xml:id="lg.5">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 5 </fw>
                    <l xml:id="l.25">Az kic méltatlan szenvednec</l>
                    <l xml:id="l.26">Megmenti az jo Isten,</l>
                    <l xml:id="l.27">Az nyomorult éhezöknec,</l>
                    <l xml:id="l.28">Ö eledelt ád böven,</l>
                    <l xml:id="l.29">Az foglyokat kihozza,</l>
                    <l xml:id="l.30">Rabságból kioldozza.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.31">Es az világtalanoknac</l>
                    <l xml:id="l.32">Megnyittya ö szemeket,</l>
                    <l xml:id="l.33"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Az kic döl<corr>ö</corr>félben
                                vadnac</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">dölöfélben</rdg>
                            <rdg wit="#W3" xml:id="rdg.5">dölefélben</rdg>
                        </app></l>
                    <l xml:id="l.34">Meggyámolitya öket:</l>
                    <l xml:id="l.35"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Az igazakat hiven</lem>
                            <rdg wit="#W1" xml:id="rdg.6">igazzakat</rdg>
                        </app></l>
                    <l xml:id="l.36">Szereti az Ur Isten.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.37">Veszedelmében megmenti</l>
                    <l xml:id="l.38">Az nyavalyás jövevént,</l>
                    <l xml:id="l.39">Az árvákot megsegéti,</l>
                    <l xml:id="l.40">Kegyessen rájoc teként.</l>
                    <l xml:id="l.41">Az sérelmes özvegyec</l>
                    <l xml:id="l.42">Töle megenyhitetnec.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.43">Az hitleneket megrontya,</l>
                    <l xml:id="l.44"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Ösvényöket elvesztvén,</lem>
                            <rdg wit="#W1" xml:id="rdg.7">Oesvénnyöket</rdg>
                        </app></l>
                    <l xml:id="l.45">De megáll az ö országa</l>
                    <l xml:id="l.46"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Most és minden idöben,</lem>
                            <rdg wit="#W1" xml:id="rdg.8">üdöben</rdg>
                        </app></l>
                    <l xml:id="l.47">Oh Sion az te Urad</l>
                    <l xml:id="l.48">Mind öröcké megmarad.</l>
                </lg>
            </div>
