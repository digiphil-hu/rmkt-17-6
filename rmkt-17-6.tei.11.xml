            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 11.</fw>
                <head type="title">XI. SOLTAR. C. M.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Davidnac p<corr>a</corr>naszsza<corr>az</corr>
                            Saul ellen.</lem>
                        <rdg wit="#W1" xml:id="rdg.1">panaszsza az Saul</rdg>
                        <rdg wit="#W2" xml:id="rdg.2">pánaszsz az Saul</rdg>
                        <rdg wit="#W3" xml:id="rdg.3">pánaszsza Saul</rdg>
                    </app></head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">AZ Istenben bizom jo reménséggel,</l>
                    <l xml:id="l.2">Miért szóltoc hát igyen lelkemnec?</l>
                    <l xml:id="l.3">Hogy én az ti hegyetekröl fussak el,</l>
                    <l xml:id="l.4"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es mint egy madár meszsze röpöllyec?</lem>
                            <rdg wit="#W1" xml:id="rdg.4">röpölyec</rdg>
                        </app></l>
                    <l xml:id="l.5">Mert az kegyetlenec iveket szerzic,</l>
                    <l xml:id="l.6"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Hogy az tiszta szivököt meglöyjéc,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">meglöyék</rdg>
                            <rdg wit="#W2" xml:id="rdg.6">meglöyéc</rdg>
                        </app></l>
                    <l xml:id="l.7">Már az nyilakot az idegben vetic.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.8">De véghez nem vihetic ök ez dolgot,</l>
                    <l xml:id="l.9">Megromlanac igyekezetekben,</l>
                    <l xml:id="l.10"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Mert az hiv ember vallyon s’
                                kinecártot?</lem>
                            <rdg wit="#W1" xml:id="rdg.7">hü</rdg>
                        </app></l>
                    <l xml:id="l.11">Az Istennec temploma mennyekben</l>
                    <l xml:id="l.12"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Otfön vagyon szent széki,
                                mellybölszéllyel</lem>
                            <rdg wit="#W1" xml:id="rdg.8">melyböl széllel</rdg>
                            <rdg wit="#W2" xml:id="rdg.9">melyböl</rdg>
                        </app></l>
                    <l xml:id="l.13"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Sz<corr>e</corr>mei mindent
                                néznecélessen,</lem>
                            <rdg wit="#W1 #W3" xml:id="rdg.10">Szémei</rdg>
                            <rdg wit="#W2" xml:id="rdg.11">Szémmei</rdg>
                        </app></l>
                    <l xml:id="l.14"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Földi népetis megnézell es szemlél.</lem>
                            <rdg wit="#W1" xml:id="rdg.12">megnézel</rdg>
                            <rdg wit="#W2" xml:id="rdg.13">és</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.15">Az Isten megprobállya az igazat,</l>
                    <l xml:id="l.16">Es gyülöli az eröszak tevöt,</l>
                    <l xml:id="l.17"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Az káromlokra záporessöt boczát,</lem>
                            <rdg wit="#W2" xml:id="rdg.14">kárómlokra</rdg>
                        </app></l>
                    <l xml:id="l.18">Rájoc döyt tüzet, kénköves essöt,</l>
                    <l xml:id="l.19">Az Istentelenekre háborut eyt,</l>
                    <l xml:id="l.20">Es nagy szélvészszel itattya ököt,</l>
                    <l xml:id="l.21">Fejekre szörnyü forgo szelet buréyt.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.22"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Mert ö igaz, es igasságot szeret,</lem>
                            <rdg wit="#W2" xml:id="rdg.15">és</rdg>
                        </app></l>
                    <l xml:id="l.23">Es kedves ortzát mutat azoknac,</l>
                    <l xml:id="l.24">Kic igasságban rendelic élteket.</l>
                </lg>
            </div>
