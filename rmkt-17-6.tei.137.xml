            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 137.</fw>
                <head type="title">CXXXVII. SOLTAR. C. M.</head>
                <head type="sub">Panaszsza az Levitaknac az Babyloniai fogságban.</head>
                <pb facs="311"/>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">HOgy az Babyloni vizeknél ültünc,</lem>
                            <rdg wit="#W1" xml:id="rdg.1">vezeknél</rdg>
                        </app></l>
                    <l xml:id="l.2">Ott mi nagy siralomban kesergettünc,</l>
                    <l xml:id="l.3">Az szent Sionrol megemlekezvén,</l>
                    <l xml:id="l.4">Kinél gyönyörüségesb hely ninczen.</l>
                    <l xml:id="l.5">Az nagy búnac és bánatnac miatta,</l>
                    <l xml:id="l.6"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Hegedünket
                                függesztettücfüzf<corr>á</corr>kra.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.2">füzfákra</rdg>
                            <rdg wit="#W3" xml:id="rdg.3">füzfakra</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Az kic minket fogva tartottac, kértec</l>
                    <l xml:id="l.8">Hogy valamit hegedülnénc nékiec,</l>
                    <l xml:id="l.9">Es mondanánc Sioni éneket,</l>
                    <l xml:id="l.10">Felelvén mondtuc: Miképpen lehet?</l>
                    <l xml:id="l.11">Hogy diczérhetnénc az Ur Istent vigan</l>
                    <l xml:id="l.12">Enekelvén ez idegen országban.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Imé n<corr>é</corr>ked én azt
                                nyilvánfelelem,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">néked</rdg>
                            <rdg wit="#W3" xml:id="rdg.5">neked</rdg>
                        </app></l>
                    <l xml:id="l.14"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Hogy
                                hegedül<corr>é</corr>semetelfeleytem,</lem>
                            <rdg wit="#W1" xml:id="rdg.6">hegedülésemet</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.7">hegedülesemet</rdg>
                        </app></l>
                    <l xml:id="l.15">Elöb hogy nem az Jerusalemet,</l>
                    <l xml:id="l.16">Mig ez fogságban tartnac engemet,</l>
                    <l xml:id="l.17">Bár inyemhez ragadgyon az én nyelvem,</l>
                    <l xml:id="l.18">Ha Jerusalemre nem ohayt szivem.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Az Edom fiairol emlekezzél,</l>
                    <l xml:id="l.20">Es nékiec Uram azt ne engedd el,</l>
                    <l xml:id="l.21">Az mit ök ackoron kiáltottac,</l>
                    <l xml:id="l.22"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Midön Jerusalemet rontottac;</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">rontottác</rdg>
                        </app></l>
                    <l xml:id="l.23">Foszszad foszszad Jerusalemnec népét,</l>
                    <l xml:id="l.24">Földre lerontsad minden épületét!</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25">Te Babylonnac leánya meghidgyed,</l>
                    <l xml:id="l.26">Hogy még végre porhamuvà kell lenned,</l>
                    <l xml:id="l.27"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Bodog az ki tenéked ez dolgot</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">tenekéd</rdg>
                        </app></l>
                    <l xml:id="l.28">Megfizeti ez méltatlanságot,</l>
                    <l xml:id="l.29">Ki öledböl gyermekidet kirántya</l>
                    <l xml:id="l.30">Es az erös kösziklához paskollya.</l>
                </lg>
            </div>
