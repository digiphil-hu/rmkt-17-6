            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 5.</fw>
                <head type="title">V. SOLTAR. CL. M.</head>
                <head type="sub">Megszabaditásért valo könyörgése Davidnac, az ö
                    kergetöiellen.</head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">UR Isten az én imátságom</l>
                    <l xml:id="l.2">Kérlec vegyed füleidben,</l>
                    <l xml:id="l.3">Es halgass meg kérésemben,</l>
                    <l xml:id="l.4">En Istenem és én királyom,</l>
                    <l xml:id="l.5">Erts meg mondásom.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.6"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Tekéntsed
                                meg<corr>e</corr>sedezésem,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">meg esedezésem</rdg>
                            <rdg wit="#W3" xml:id="rdg.2">megesedezésem</rdg>
                        </app></l>
                    <l xml:id="l.7">Es hald meg kiáltásomat,</l>
                    <l xml:id="l.8">Midön hivlac királyomat</l>
                    <l xml:id="l.9">Meghalgatod én könyörgésem,</l>
                    <l xml:id="l.10">Bizonnyal hiszem.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.11">Jo reggel meghalgatsz engemet</l>
                    <l xml:id="l.12"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Uram, m<corr>ê</corr>g
                                virrattaelött,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">mêg</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">meg</rdg>
                        </app></l>
                    <l xml:id="l.13"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Idején az nap hogy följött,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">Idejin</rdg>
                        </app></l>
                    <l xml:id="l.14"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Elödbe számlálom igyemet,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">Elödben […] ügyemet</rdg>
                        </app></l>
                    <l xml:id="l.15">Várván kegyelmet.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.16">Mert te egyedül vagy olly Isten,</l>
                    <l xml:id="l.17">Kinec az gonosság nem kel,</l>
                    <l xml:id="l.18">Es az ki gonosz bünben él,</l>
                    <l xml:id="l.19"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Nem mehet
                                hozzádsemmik<corr>é</corr>ppen,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.7">semmiképpen</rdg>
                            <rdg wit="#W3" xml:id="rdg.8">semmikeppen</rdg>
                        </app></l>
                    <l xml:id="l.20">Mig él vétekben.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.21">Az kábác és az esztelenec</l>
                    <l xml:id="l.22">Nem álhatnac szined elöt.</l>
                    <l xml:id="l.23">Gyülölsz minden gonosztevöt,</l>
                    <l xml:id="l.24">Es töled távul üzettetnec</l>
                    <l xml:id="l.25">Az illyeténec.</l>
                </lg>
                <metamark function="pause"/>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 6 </fw>
                    <l xml:id="l.26">Az kic czac hazugságot szolnac,</l>
                    <l xml:id="l.27">Szörnyen elveszted azokat,</l>
                    <l xml:id="l.28">Es megátkozsz gyilkosokat,</l>
                    <l xml:id="l.29">Kic embert hamissan megczalnac,</l>
                    <l xml:id="l.30">Mind megrontatnac.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.31">En pedig nagy jo reménséggel</l>
                    <l xml:id="l.32"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Bémegyec
                                szenttemplom<corr>o</corr>dban,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">templomodban</rdg>
                            <rdg wit="#W3" xml:id="rdg.10">templomódban</rdg>
                        </app></l>
                    <l xml:id="l.33">Es imádlac szent házadban,</l>
                    <l xml:id="l.34">Nagy jo voltodért félelemmel</l>
                    <l xml:id="l.35"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Szolgállac szivvel.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.11">szivel</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.36">Vezérly Uram igasságodban,</l>
                    <l xml:id="l.37">Ellenségimnec láttokra,</l>
                    <l xml:id="l.38">Kic igyekeznec káromra,</l>
                    <l xml:id="l.39">Oktass, hogy az te utaidban</l>
                    <l xml:id="l.40">Járhassac jóbban.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.41">Mert szájokban ninczen igaz szó,</l>
                    <l xml:id="l.42">Szivec tellyes nyavalyával,</l>
                    <l xml:id="l.43">Ö nyelvec szól álnoksággal,</l>
                    <l xml:id="l.44"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Torkoc olly mint â nyilt koporsó,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">oly</rdg>
                        </app></l>
                    <l xml:id="l.45">Hól nincz semmi jó.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.46"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Büntesdmeg Uram Isten öket,</lem>
                            <rdg wit="#W1" xml:id="rdg.13">ököt</rdg>
                        </app></l>
                    <l xml:id="l.47">Tedd semmivé tanáczokat,</l>
                    <l xml:id="l.48">Ronts el ö találmányokat,</l>
                    <l xml:id="l.49"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Verd meg
                                veledell<corr>e</corr>nkezöket,</lem>
                            <rdg wit="#W1" xml:id="rdg.14">ellenkezököt</rdg>
                            <rdg wit="#W2" xml:id="rdg.15">ellenkezöket</rdg>
                            <rdg wit="#W3" xml:id="rdg.16">ellénkezöket</rdg>
                        </app></l>
                    <l xml:id="l.50"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Az pártü<corr>t</corr>öket.</lem>
                            <rdg wit="#W1" xml:id="rdg.17">pártütököt</rdg>
                            <rdg wit="#W2" xml:id="rdg.18">pártütöket</rdg>
                            <rdg wit="#W3" xml:id="rdg.19">pártüttöket</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.11">
                    <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                    <l xml:id="l.51"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Es hogy azoc mind örüllyenec,</lem>
                            <rdg wit="#W1" xml:id="rdg.20">öröllyenec</rdg>
                        </app></l>
                    <l xml:id="l.52">Az kic biznac czac te benned,</l>
                    <l xml:id="l.53">Es szivböl szeretic neved,</l>
                    <l xml:id="l.54">Engedd hogy vigan fölségednec</l>
                    <l xml:id="l.55">Enekellyenec.</l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.56">Mert az igazat te megáldod,</l>
                    <l xml:id="l.57">Te nagy irgalmassâgoddal,</l>
                    <l xml:id="l.58"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">Körny<corr>ü</corr>lveszed
                                mintpaissal,</lem>
                            <rdg wit="#W1" xml:id="rdg.21">Környül veszed</rdg>
                            <rdg wit="#W2" xml:id="rdg.22">Környülveszed</rdg>
                            <rdg wit="#W3" xml:id="rdg.23">Környúlveszed</rdg>
                        </app></l>
                    <l xml:id="l.59">Minden gonosz ellen megtartod</l>
                    <l xml:id="l.60">Es otalmazod.</l>
                </lg>
            </div>
