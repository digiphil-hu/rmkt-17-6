			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 28.</fw>
				<head type="title">XXVIII. SOLTAR. T. B. 109.</head>
				<head type="sub">Könyörgése Davidnac az megotalmazásért.</head>
				<pb facs="73"> </pb>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">HOzzád kiáltoc kegyes Uram,</l>
					<l xml:id="l.2"><app xml:id="app.1">
							<lem wit="#KK" xml:id="lem.1">En segédségem es köváram!</lem>
							<rdg wit="#W2" xml:id="rdg.1">és</rdg>
						</app></l>
					<l xml:id="l.3">Halgass meg kegyelmessen engem,</l>
					<l xml:id="l.4">Ne halgassel, mert el kell vesznem,</l>
					<l xml:id="l.5">Azokhoz hasonlo leszec,</l>
					<l xml:id="l.6">Kiknec az koporso helyec.</l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.7">Midön te hozzád esedezem,</l>
					<l xml:id="l.8">Es kezeimet fölemelem</l>
					<l xml:id="l.9">Az te szentséges templomodban,</l>
					<l xml:id="l.10"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">H<corr>a</corr>lgass meg én
								imátságomban,</lem>
							<rdg wit="#W1" xml:id="rdg.2">Halgas</rdg>
							<rdg wit="#W2" xml:id="rdg.3">Halgass</rdg>
							<rdg wit="#W3" xml:id="rdg.4">Hálgass</rdg>
						</app></l>
					<l xml:id="l.11">Ne büntess az hitleneckel,</l>
					<l xml:id="l.12">Ne vérj az gonosztévöckel.</l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.13">Az kic szólnac nagy nyájassággal,</l>
					<l xml:id="l.14">De szivec rakva álnoksággal,</l>
					<l xml:id="l.15">Fizess meg azért ö nékiec,</l>
					<l xml:id="l.16">Az mint szinte megerdemlettéc.</l>
					<l xml:id="l.17">Addmeg ö kezec munkáját,</l>
					<l xml:id="l.18">Es álnokságoc jutalmát.</l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.19">Mert az Urral ök nem gondolnac,</l>
					<l xml:id="l.20">Dolgairol nem gondolkodnac,</l>
					<l xml:id="l.21">Keze munkáit nem tekintic,</l>
					<l xml:id="l.22">Melly ö nékic megfizettetic,</l>
					<l xml:id="l.23">Mert ök meg nem épitetnec,</l>
					<l xml:id="l.24">Hanem szörnyen megtöretnec.</l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.25">Aldott legyen az nagy Ur Isten,</l>
					<l xml:id="l.26">Ki meghalgata kérésemben,</l>
					<l xml:id="l.27">Az Ur énnékem erösségem,</l>
					<l xml:id="l.28"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">En paisom es segedelmem,</lem>
							<rdg wit="#W2" xml:id="rdg.5">és</rdg>
						</app></l>
					<l xml:id="l.29"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">Örül szivem, es énekben</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.6">Oeröl</rdg>
						</app></l>
					<l xml:id="l.30">Diczérem ötet szüntelen.</l>
				</lg>
				<lg xml:id="lg.6">
					<fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
					<l xml:id="l.31">Az UR én népemnec ereje,</l>
					<l xml:id="l.32">Az Christusnac nagy erössége,</l>
					<l xml:id="l.33">Tarts meg azért az te népedet,</l>
					<l xml:id="l.34">Es áldgyad meg örökségedet,</l>
					<l xml:id="l.35"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Legeltessed es vigaztald</lem>
							<rdg wit="#W2" xml:id="rdg.7">és</rdg>
						</app></l>
					<l xml:id="l.36">Es öröcké fölmagaztald.</l>
				</lg>
			</div>
