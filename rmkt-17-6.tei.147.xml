        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 147.</fw>
                <head type="title">CXLVII. SOLTAR. T. B.</head>
                <head type="sub">Intés az Istennec diczéretire, az ö soc jo téteményiért, mellyeket
                    elöszámlál ez Soltárnac szerzöje.</head>
                <pb facs="328"/>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">AZ Urat diczérjétec, mert jo</l>
                    <l xml:id="l.2">Es az Istent diczérni mélto,</l>
                    <l xml:id="l.3">Kedves dolog az Ur Istennél,</l>
                    <l xml:id="l.4"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Hogy ötet diczérjéc egy szivvel,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">szivel</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.5">Mert Jerusálemet az Isten</l>
                    <l xml:id="l.6"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Megéppiti nagy kegyelmessen,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.2">Megépiti</rdg>
                        </app></l>
                    <l xml:id="l.7">Ismét az Izrael nemzetét</l>
                    <l xml:id="l.8">Öszve gyüyti eloszlott népét.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Töredelmes szivet meggyogyit,</l>
                    <l xml:id="l.10">Sérelmes lelket ö megenyhit,</l>
                    <l xml:id="l.11">Békötözi az ö sebeket,</l>
                    <l xml:id="l.12">Megkönnyebéti sérelmeket.</l>
                    <l rend="level_1" xml:id="l.13">Az czillagokat megszámlállya,</l>
                    <l xml:id="l.14">Es azoknac számát joltudgya,</l>
                    <l xml:id="l.15">Es mindeniket ugy esmeri,</l>
                    <l xml:id="l.16">Hogy tulaydon néven nevezi.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">Nagy az mi Urunc az Ur Isten,</l>
                    <l xml:id="l.18">Az kinél nagyob semmi ninczen,</l>
                    <l xml:id="l.19">Erössége kimondhatatlan,</l>
                    <l xml:id="l.20"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Bölczesége
                                száml<corr>á</corr>lhatatlan.</lem>
                            <rdg wit="#W1" xml:id="rdg.3">szamlalhatatlan</rdg>
                            <rdg wit="#W2" xml:id="rdg.4">számlálhatatlan</rdg>
                            <rdg wit="#W3" xml:id="rdg.5">számlalhatatlan</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.21">Az együgyöket fölemeli,</l>
                    <l xml:id="l.22">Az szelédeket erösiti,</l>
                    <l xml:id="l.23">Megalázza az hitleneket,</l>
                    <l xml:id="l.24">Az földre legyalázza öket.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25">Azért néki énekellyetec,</l>
                    <l xml:id="l.26"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Hegedückel
                                zengedez<corr>z</corr>etec,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">zengedezzetec</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">zengedezetec</rdg>
                        </app></l>
                    <l xml:id="l.27">Ki az eget elfedi széllyel</l>
                    <l xml:id="l.28">Temerdec vizenyös fölhöckel.</l>
                    <l rend="level_1" xml:id="l.29"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Es az égröl essököt boczat,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">boczát</rdg>
                        </app></l>
                    <l xml:id="l.30">Mellyeket ez földre leszállat,</l>
                    <l xml:id="l.31">Megnedveséti az hegyeket,</l>
                    <l xml:id="l.32">Hogy böven teremtsenec füvet.</l>
                </lg>
                <lg xml:id="lg.5">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 5 </fw>
                    <l xml:id="l.33">Ki ételt ád minden állatnac,</l>
                    <l xml:id="l.34">Es az éh holló fiaczkáknac,</l>
                    <l xml:id="l.35">Kic ö szájokat réa táttyác</l>
                    <l xml:id="l.36">Kialtván ételeket várjác.</l>
                    <l rend="level_1" xml:id="l.37">Ö néki semmi kedve ninczen</l>
                    <l xml:id="l.38">Az lónac ö erössegében,</l>
                    <l xml:id="l.39">Sem az ferfinac száraiban,</l>
                    <l xml:id="l.40">Nem gyönyörködic illy dologban.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41">Inkáb azokban gyönyörködic,</l>
                    <l xml:id="l.42">Az kic ötet igazán félic,</l>
                    <l xml:id="l.43">Kic tellyes szivböl kegyes voltát</l>
                    <l xml:id="l.44">Mindenkor reménlic irgalmát.</l>
                    <l rend="level_1" xml:id="l.45">Diczérd Jerusalem az Urat,</l>
                    <l xml:id="l.46">Fölmagaztallyad nagy hatalmát,</l>
                    <l xml:id="l.47"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Ez kegyes Urat, ôh szent Sion,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">Sion!</rdg>
                        </app></l>
                    <l xml:id="l.48">Teis diczérd áhétatosson.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.49">Mert kapuidra ö závart vet,</l>
                    <l xml:id="l.50">Es hiven megöriz tégedet,</l>
                    <l xml:id="l.51">Fiaidat benned megáldgya,</l>
                    <l xml:id="l.52">Es dolgokat jora forditya,</l>
                    <l rend="level_1" xml:id="l.53"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Földedet áldgya
                                    bék<corr>e</corr>s<corr>é</corr>ggel,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">békséggel</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">békéseggel</rdg>
                        </app></l>
                    <l xml:id="l.54">Határidat szép czendességgel,</l>
                    <l xml:id="l.55">Es téged szép tiszta buzával</l>
                    <l xml:id="l.56">Megelégit, és böven táplal.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.57">Kiboczáttya erös igéjét,</l>
                    <l xml:id="l.58">Ez földre leküldi beszédét:</l>
                    <l xml:id="l.59">Sebessen megyen az ö szava,</l>
                    <l xml:id="l.60">Hamarsággal egy helyröl másra.</l>
                    <l rend="level_1" xml:id="l.61">Az földre szállat fejér havat,</l>
                    <l xml:id="l.62"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Mint az szep szálankozo gyapjat,</lem>
                            <rdg wit="#W1" xml:id="rdg.12">szalánkozo</rdg>
                        </app></l>
                    <l xml:id="l.63">Es az deress zuzmarázokat,</l>
                    <l xml:id="l.64">Az földre hinti mint az hamvat.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.65">Az kö essöket alá lövi,</l>
                    <l xml:id="l.66">Es falatonkint széllel hinti,</l>
                    <l xml:id="l.67">Az kinec hidegségit senki,</l>
                    <l xml:id="l.68"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Töle irtozv<corr>á</corr>n, nem
                                türheti.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.13">irtozván</rdg>
                            <rdg wit="#W3" xml:id="rdg.14">irtozvan</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.69"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Ismét mihelyen ö egy szót szol,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.15">mihellyen</rdg>
                        </app></l>
                    <l xml:id="l.70">Az jég mind elolvad és elfoly,</l>
                    <l xml:id="l.71">Ha ö szeleit rá ereszti,</l>
                    <l xml:id="l.72">Az jeget folyo vizzé teszi.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.73"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">J<corr>a</corr>cobnac adá szent
                                igéjét,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.16">Jacobnac</rdg>
                            <rdg wit="#W3" xml:id="rdg.17">Jocobnac</rdg>
                        </app></l>
                    <l xml:id="l.74">Hogy ához szabnác életeket,</l>
                    <l xml:id="l.75">Törvényit adá Izraelnec,</l>
                    <l xml:id="l.76">Hogy ök azoc szerint elnénec.</l>
                    <l rend="level_1" xml:id="l.77">Nem tön igy semmi pogán néppel,</l>
                    <l xml:id="l.78">Nem látá öket illy szentséggel,</l>
                    <l xml:id="l.79"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Szent szerzését ök nem értöttéc,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.18">szerzésit</rdg>
                        </app></l>
                    <l xml:id="l.80">Azért Alleluja mondasséc.</l>
                </lg>
            </div>
