			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 143.</fw>
				<head type="title">CXLIII. SOLTAR. C. M.</head>
				<head type="sub">Davidnac külömbkülömb könyörgése és kérése.</head>
				<pb facs="321"/>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">HAlgasd meg Uram kérésemet,</l>
					<l xml:id="l.2">Vedd füledben könyörgésemet</l>
					<l xml:id="l.3">Az te igéreted szerint,</l>
					<l xml:id="l.4">Halgass meg és tarts meg engemet</l>
					<l xml:id="l.5">Te szent igasságod szerint.</l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.6">Szolgádat törvénben ne idézd,</l>
					<l xml:id="l.7">Haragodat reám ne gerjezd</l>
					<l xml:id="l.8">Az én gonosz büneimert,</l>
					<l xml:id="l.9">Mert ez egesz földet bár elnézd,</l>
					<l xml:id="l.10">Nem találhatsz igaz embert.</l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.11">Az ellenség kerget engemet,</l>
					<l xml:id="l.12">Az földhöz verte életemet,</l>
					<l xml:id="l.13">Helyheztetött az setétben,</l>
					<l xml:id="l.14"><app xml:id="app.1">
							<lem wit="#KK" xml:id="lem.1">Set<corr>é</corr>tségben engem
								elreytet,</lem>
							<rdg wit="#W1" xml:id="rdg.1">Setétsegben</rdg>
							<rdg wit="#W2" xml:id="rdg.2">Setétségben</rdg>
							<rdg wit="#W3" xml:id="rdg.3">Setetségben</rdg>
						</app></l>
					<l xml:id="l.15">Mint az halottat az sirben.</l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.16"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">Az én lelkem
								elkeser<corr>e</corr>dett,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.4">elkeserédet</rdg>
							<rdg wit="#W3" xml:id="rdg.5">elkeserédett</rdg>
						</app></l>
					<l xml:id="l.17"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">Sérelem miatt elepedett,</lem>
							<rdg wit="#W1" xml:id="rdg.6">elépedet</rdg>
						</app></l>
					<l xml:id="l.18">Azért hogy elhagyál engem,</l>
					<l xml:id="l.19">Czac nem elszántam életemet,</l>
					<l xml:id="l.20">Ugy elkeseredett szivem.</l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.21">Ez illyen nagy inségim közöt,</l>
					<l xml:id="l.22">Emléytem az régi idököt,</l>
					<l xml:id="l.23">Nézvén czuda dolgaidat,</l>
					<l xml:id="l.24">Mellyeket kezed czeleködöt,</l>
					<l xml:id="l.25">Kikvel biztatom magamat.</l>
				</lg>
				<lg xml:id="lg.6">
					<fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
					<l xml:id="l.26">Te hozzád én Uram Istenem</l>
					<l xml:id="l.27">Nagy siralommal fölemelem</l>
					<l xml:id="l.28">Es kinyuytom kezeimet,</l>
					<l xml:id="l.29">Tégedet ugy ohayt én lelkem,</l>
					<l xml:id="l.30">Mint az száraz föld az vizet.</l>
				</lg>
				<lg xml:id="lg.7">
					<metamark function="pause"/>
					<fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
							rend="sub">*</hi><hi rend="super">*</hi> 7 </fw>
					<l xml:id="l.31"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">Ne k<corr>é</corr>ssel, halgasd meg
								kérésem,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.7">késsel</rdg>
							<rdg wit="#W3" xml:id="rdg.8">kessel</rdg>
						</app></l>
					<l xml:id="l.32">Mert elfogy bennem az én lelkem:</l>
					<l xml:id="l.33">Szined tölem el ne térjen,</l>
					<l xml:id="l.34">Mert mayd el ollyannà kell lennem,</l>
					<l xml:id="l.35">Mint az kic szálnac az sirben.</l>
				</lg>
				<lg xml:id="lg.8">
					<fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
					<l xml:id="l.36">Kegyelmezz meg Uram ennékem,</l>
					<l xml:id="l.37">Halgass meg és örizz meg engem,</l>
					<l xml:id="l.38">Mert én czac te benned bizom,</l>
					<l xml:id="l.39">Utaidat adgyad esmérnem,</l>
					<l xml:id="l.40">Mert te hozzád kivánkozom.</l>
				</lg>
				<lg xml:id="lg.9">
					<fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
					<l xml:id="l.41">Szabadits meg ellenségimtül,</l>
					<l xml:id="l.42"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Kic engem kergetnec
								<corr>o</corr>knékül,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.9">ok nélkül</rdg>
							<rdg wit="#W3" xml:id="rdg.10">öknékül</rdg>
						</app></l>
					<l xml:id="l.43">Benned vetem reménségem,</l>
					<l xml:id="l.44">Viselly gondot az én igyemrül,</l>
					<l xml:id="l.45">Uram kérlec ne hadgy engem.</l>
				</lg>
				<lg xml:id="lg.10">
					<fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
					<l xml:id="l.46">Tanits meg engemet szolgádat,</l>
					<l xml:id="l.47">Hogy tehessem akaratodat,</l>
					<l xml:id="l.48">Mert te vagy az én Istenem,</l>
					<l xml:id="l.49">Hogy örizhessem utaidat,</l>
					<l xml:id="l.50">Szent lelkeddel vezérly engem.</l>
				</lg>
				<lg xml:id="lg.11">
					<fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
					<l xml:id="l.51">Uram engemet erösits meg,</l>
					<l xml:id="l.52">Te szent nevedért vigasztally meg,</l>
					<l xml:id="l.53">Es az te kegyességedböl</l>
					<l xml:id="l.54">Az én életem szabadits meg</l>
					<l xml:id="l.55">Mindennémü inségekböl.</l>
				</lg>
				<lg xml:id="lg.12">
					<fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
					<l xml:id="l.56">Gondold meg hozzám jo kedvedet,</l>
					<l xml:id="l.57">Veszesdel én ellenségimet,</l>
					<l xml:id="l.58">Töröltessenec el azoc,</l>
					<l xml:id="l.59">Az kic kergetic életemet,</l>
					<l xml:id="l.60"><app xml:id="app.6">
							<lem wit="#KK" xml:id="lem.6">Mert én te hiv szólgád vagyoc.</lem>
							<rdg wit="#W1" xml:id="rdg.11">hü</rdg>
						</app></l>
				</lg>
			</div>
		</body>
