            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 79.</fw>
                <head type="title">LXXIX. SOLTAR. C. M.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Könyörgése az Sido népnec az
                            megszabadetásért.</lem>
                        <rdg wit="#W1 #W2" xml:id="rdg.1">megszabaditásért</rdg>
                    </app></head>
                <pb facs="191"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">ÖRöködben Uram pogányoc jöttec,</l>
                    <l xml:id="l.2">Es szent templomodat megförtöztettec,</l>
                    <l xml:id="l.3">Jerusalem városát elrontottác,</l>
                    <l xml:id="l.4">Es széllel nagy kö rakásokra hántác,</l>
                    <l rend="level_1" xml:id="l.5">Szolgáidnac testec,</l>
                    <l xml:id="l.6">Az kic megöletec,</l>
                    <l xml:id="l.7">Adattac az hollóknac,</l>
                    <l xml:id="l.8">Husoc te szentidnec,</l>
                    <l xml:id="l.9">Etelül vettetnec</l>
                    <l xml:id="l.10">Az mezei vadaknac.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.11">Az városon nagy soc vért kiontánac,</l>
                    <l xml:id="l.12"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Az soc vér, mint vizec széllel
                                folyánac,</lem>
                            <rdg wit="#W1" xml:id="rdg.2">vezek</rdg>
                        </app></l>
                    <l xml:id="l.13">Tövénec olly szörnyü öldökléseket,</l>
                    <l xml:id="l.14">Nem lön ki eltemetné az testeket,</l>
                    <l rend="level_1" xml:id="l.15"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Az mi szomszéds<corr>á</corr>gunc</lem>
                            <rdg wit="#W1" xml:id="rdg.3">szomszédságunk</rdg>
                            <rdg wit="#W2" xml:id="rdg.4">szomszédságunc</rdg>
                            <rdg wit="#W3" xml:id="rdg.5">szomszédsagunc</rdg>
                        </app></l>
                    <l xml:id="l.16">Czufságot üz raytunc,</l>
                    <l xml:id="l.17"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Az kic környülünc laknac</lem>
                            <rdg wit="#W1" xml:id="rdg.6">környölünk</rdg>
                            <rdg wit="#W2" xml:id="rdg.7">környölünc</rdg>
                        </app></l>
                    <l xml:id="l.18">Minket nem böczülnec,</l>
                    <l xml:id="l.19">Söt czac megnevetnec,</l>
                    <l xml:id="l.20">Czufolnak és rutolnac.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.21">Mig haragszol Uram reánc ecképpen,</l>
                    <l xml:id="l.22">Haragod miglen gerjedez illy igen?</l>
                    <l xml:id="l.23">Meddig terjeszted boszszuállásodat,</l>
                    <l xml:id="l.24">Ki minket mint az sebes tüz elfogyat?</l>
                    <l rend="level_1" xml:id="l.25">Boszszudat azokra</l>
                    <l xml:id="l.26">Onts az pogányokra,</l>
                    <l xml:id="l.27">Kic téged nem esmernec,</l>
                    <l xml:id="l.28">Döyts az országokra</l>
                    <l xml:id="l.29">Hol nevedet soha</l>
                    <l xml:id="l.30">Nem tiszteltéc az népec.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.31">Mert Jácóbot ök megöttéc, elnyeltéc,</l>
                    <l xml:id="l.32">Az ö nemzetségét megemesztettéc,</l>
                    <l xml:id="l.33">Minden házait földre lerontottác,</l>
                    <l xml:id="l.34">Kietlen pusztaságra forditottác.</l>
                    <l rend="level_1" xml:id="l.35">Boczásd meg bününket,</l>
                    <l xml:id="l.36">Ne emlits meg öket,</l>
                    <l xml:id="l.37">Nagy haragod szünnyéc meg,</l>
                    <l xml:id="l.38">Mert igen gyötretünc,</l>
                    <l xml:id="l.39">Jövel mi Istenünc,</l>
                    <l xml:id="l.40">Es kegyelmessen tarts meg.</l>
                </lg>
                <lg xml:id="lg.5">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 5 </fw>
                    <l xml:id="l.41">Tekénts meg Uram kegyelmességedet,</l>
                    <l xml:id="l.42">Az te szent nevedért segéts meg minket,</l>
                    <l xml:id="l.43"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Szabadits es tarts meg minket
                                kegyessen,</lem>
                            <rdg wit="#W2" xml:id="rdg.8">és</rdg>
                        </app></l>
                    <l xml:id="l.44">Büneinket boczásd meg szent nevedben.</l>
                    <l rend="level_1" xml:id="l.45">Hogy ne nevettessünc,</l>
                    <l xml:id="l.46">Kérdven: Hol Istenünc?</l>
                    <l xml:id="l.47">Verdmeg az pogány népet,</l>
                    <l xml:id="l.48">Vérét szolgaidnac</l>
                    <l xml:id="l.49">Kit ök kiontanac</l>
                    <l xml:id="l.50">Nékic el ne engedgyed.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.51"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Jusson elödbe siralmoc azoknac,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.9">elödben</rdg>
                        </app></l>
                    <l xml:id="l.52"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Kic az rabságban oha<corr>y</corr>tnac és
                                sirnac.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">ohaytnac</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">ohayitnac</rdg>
                        </app></l>
                    <l xml:id="l.53">Siess ments meg, hogy ök el ne veszszenec,</l>
                    <l xml:id="l.54"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Kic imm<corr>á</corr>r halálra
                                itéltettenec.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">immár</rdg>
                            <rdg wit="#W3" xml:id="rdg.13">immar</rdg>
                            <rdg wit="#W1" xml:id="rdg.14">itiltettenec</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.55">Szomszédinknac éppen</l>
                    <l xml:id="l.56">Fizesd meg hétképpen</l>
                    <l xml:id="l.57">Az mint raytunc miveltec.</l>
                    <l xml:id="l.58">Hogy téged Ur Isten</l>
                    <l xml:id="l.59"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Szidalmaztac szörnyen,</lem>
                            <rdg wit="#W2" xml:id="rdg.15">Szidalmazták</rdg>
                        </app></l>
                    <l xml:id="l.60"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Fizesd meg ö n<corr>é</corr>kiec.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.16">nékiec</rdg>
                            <rdg wit="#W3" xml:id="rdg.17">nekiec</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.61">Es mi, ugy mint te nyájad és sereged,</l>
                    <l xml:id="l.62"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Magaztallyuc és dicz<corr>é</corr>rjüc
                                szent neved,</lem>
                            <rdg wit="#W1" xml:id="rdg.18">diczérjük</rdg>
                            <rdg wit="#W2" xml:id="rdg.19">diczérjüc</rdg>
                            <rdg wit="#W3" xml:id="rdg.20">diczerjüc</rdg>
                        </app></l>
                    <l xml:id="l.63">Diczéretedet mindenkor hirdettyüc,</l>
                    <l xml:id="l.64">Es nemzetröl nemzetre kiterjesztyüc.</l>
                </lg>
            </div>
