	<text>
		<body>
			<div type="poem" xml:id="d.1" xml:lang="hu">
				<fw type="originalNum">[RMKT XVII/6:] 31.</fw>
				<head type="title">XXXI. SOLTAR. T. B. 71.</head>
				<head type="sub">Könyörög David megszabaditásért az Saul ellen.</head>
				<pb facs="78"> </pb>
				<lg xml:id="lg.1">
					<fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
					<l xml:id="l.1">URam én czac te benned biztam,</l>
					<l xml:id="l.2">Örizz meg kegyessen,</l>
					<l xml:id="l.3">Ne essem szégyenben,</l>
					<l rend="level_1" xml:id="l.4">Igasságodban fordully hozzám,</l>
					<l xml:id="l.5">Es tarts meg jovoltodbol,</l>
					<l xml:id="l.6">Ments ki nyavalyáimbol.</l>
				</lg>
				<lg xml:id="lg.2">
					<fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
					<l xml:id="l.7">Hayts én hozzám Uram füledet,</l>
					<l xml:id="l.8">Oh én üdvössegem</l>
					<l xml:id="l.9">Siess tarts meg engem!</l>
					<l rend="level_1" xml:id="l.10">Mutasd meg nagy erösségedet,</l>
					<l xml:id="l.11">Légy én erös köváram,</l>
					<l xml:id="l.12">Kiben bátran lakhassam.</l>
				</lg>
				<lg xml:id="lg.3">
					<fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
					<l xml:id="l.13">Te vagy kösziklám, erösségem,</l>
					<l xml:id="l.14">Szent nevedért kérlec,</l>
					<l xml:id="l.15">Vezérelly, hogy éllyec:</l>
					<l rend="level_1" xml:id="l.16">Szabadits ki az törböl engem,</l>
					<l xml:id="l.17">Mellyet énnékem vetnec,</l>
					<l xml:id="l.18">Mert megtartómnac hiszlec.</l>
				</lg>
				<lg xml:id="lg.4">
					<fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
					<l xml:id="l.19">Kezedben ajánlom lelkemet,</l>
					<l xml:id="l.20">Mert nagy inségemben</l>
					<l xml:id="l.21">Megtartál Ur Isten,</l>
					<l rend="level_1" xml:id="l.22">Azoktul megvonszom szivemet,</l>
					<l xml:id="l.23">Az kic élnec hivságban,</l>
					<l xml:id="l.24">Es czac bizom Uramban.</l>
				</lg>
				<lg xml:id="lg.5">
					<fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
					<l xml:id="l.25"><app xml:id="app.1">
							<lem wit="#KK" xml:id="lem.1">Örvendezöc nagy vigaságban,</lem>
							<rdg wit="#W1" xml:id="rdg.1">vigáságban</rdg>
						</app></l>
					<l xml:id="l.26">Vigadoc szivemben</l>
					<l xml:id="l.27">Irgalmadra nézvén,</l>
					<l rend="level_1" xml:id="l.28">Ha megtekintesz nyavalyámban</l>
					<l xml:id="l.29">Szivemet megesmered,</l>
					<l xml:id="l.30">Sérelmit megenyhited.</l>
				</lg>
				<lg xml:id="lg.6">
					<fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
					<l xml:id="l.31">Nem eytesz engemet kezekben</l>
					<l xml:id="l.32">En ellenségimnec,</l>
					<l xml:id="l.33">Kic engem gyülölnec,</l>
					<l rend="level_1" xml:id="l.34">Söt minden ellenségim ellen</l>
					<l xml:id="l.35"><app xml:id="app.2">
							<lem wit="#KK" xml:id="lem.2">Utat adsz l<corr>á</corr>baimnac,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.2">lábaimnac</rdg>
							<rdg wit="#W3" xml:id="rdg.3">labaimnac</rdg>
						</app></l>
					<l xml:id="l.36">Hogy meg ne akadgyanac.</l>
				</lg>
				<lg xml:id="lg.7">
					<fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
					<l xml:id="l.37">Nagy szükség nyomorgat engemet,</l>
					<l xml:id="l.38">Kiben elbágyadtam,</l>
					<l xml:id="l.39"><app xml:id="app.3">
							<lem wit="#KK" xml:id="lem.3">K<corr>e</corr>gyelmezz meg Uram,</lem>
							<rdg wit="#W1" xml:id="rdg.4">Kegyelmez</rdg>
							<rdg wit="#W2" xml:id="rdg.5">Kegyelmezz</rdg>
							<rdg wit="#W3" xml:id="rdg.6">Kégyelmezz</rdg>
						</app></l>
					<l rend="level_1" xml:id="l.40">Az én ortzám elrepedezet,</l>
					<l xml:id="l.41">Lelkem elvajutt, elholt,</l>
					<l xml:id="l.42">Az én hasam meghijolt.</l>
				</lg>
				<lg xml:id="lg.8">
					<fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
					<l xml:id="l.43"><app xml:id="app.4">
							<lem wit="#KK" xml:id="lem.4">Elfogyoc
								k<corr>e</corr>serüségemben,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.7">keserüségemben</rdg>
							<rdg wit="#W3" xml:id="rdg.8">késerüségemben</rdg>
						</app></l>
					<l xml:id="l.44">Eletem rövidöl,</l>
					<l xml:id="l.45">Sérelmem mayd megöl,</l>
					<l rend="level_1" xml:id="l.46">Ez nagy méltatlan büntetésen</l>
					<l xml:id="l.47">En szivem elszakadott,</l>
					<l xml:id="l.48">Minden czontom megbomlott.</l>
				</lg>
				<lg xml:id="lg.9">
					<metamark function="pause"/>
					<fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
							rend="sub">*</hi><hi rend="super">*</hi> 9 </fw>
					<l xml:id="l.49">Minden én ellenségim között</l>
					<l xml:id="l.50">Gyaláznac szomszédim,</l>
					<l xml:id="l.51"><app xml:id="app.5">
							<lem wit="#KK" xml:id="lem.5">Félnec esmeröim,</lem>
							<rdg wit="#W1" xml:id="rdg.9">ösmeröim</rdg>
						</app></l>
					<l rend="level_1" xml:id="l.52">Kic midön látnac az ház elött,</l>
					<l xml:id="l.53">Félre térnec elölem,</l>
					<l xml:id="l.54"><app xml:id="app.6">
							<lem wit="#KK" xml:id="lem.6">Nem jönec szembe velem.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.10">szemben</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.10">
					<fw corresp="Szenci Molnár Albert" type="lg"> 10</fw>
					<l xml:id="l.55">En rólam elfeletkeztenec,</l>
					<l xml:id="l.56">Mint egy holt emberröl</l>
					<l xml:id="l.57">Czufolnac veszettöl.</l>
					<l rend="level_1" xml:id="l.58">Mint egy törött edént elvetnec,</l>
					<l xml:id="l.59">Hallom hogy szidalmoznac,</l>
					<l xml:id="l.60">Nékem félelmet hoznac.</l>
				</lg>
				<lg xml:id="lg.11">
					<fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
					<l xml:id="l.61">Mert tanáczot tartnac én rolam,</l>
					<l xml:id="l.62"><app xml:id="app.7">
							<lem wit="#KK" xml:id="lem.7">Végez<corr>é</corr>st végeznec</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.11">Végezést</rdg>
							<rdg wit="#W3" xml:id="rdg.12">Végezest</rdg>
						</app></l>
					<l xml:id="l.63">Hogy elveszessenec.</l>
					<l rend="level_1" xml:id="l.64">De te vagy az én bizodalmam,</l>
					<l xml:id="l.65">Es megvigaztalsz engem</l>
					<l xml:id="l.66">En kegyelmes Istenem.</l>
				</lg>
				<lg xml:id="lg.12">
					<fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
					<l xml:id="l.67">Kezedben vagyon én életem,</l>
					<l xml:id="l.68">Ellenségim ellen</l>
					<l xml:id="l.69">Tarts meg kegyelmessen.</l>
					<l rend="level_1" xml:id="l.70"><app xml:id="app.8">
							<lem wit="#KK" xml:id="lem.8">Ne adgy azoc kezében engem</lem>
							<rdg wit="#W1" xml:id="rdg.13">kéziben</rdg>
						</app></l>
					<l xml:id="l.71">Az kic szörnyen gyülölnec</l>
					<l xml:id="l.72">Es szüntelen kergetnec.</l>
				</lg>
				<lg xml:id="lg.13">
					<fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
					<l xml:id="l.73"><app xml:id="app.9">
							<lem wit="#KK" xml:id="lem.9">Vil<corr>á</corr>gosits ortzádat
								raytam,</lem>
							<rdg wit="#W1" xml:id="rdg.14">Világosicz</rdg>
							<rdg wit="#W2" xml:id="rdg.15">Világosits</rdg>
							<rdg wit="#W3" xml:id="rdg.16">Vilagosits</rdg>
						</app></l>
					<l xml:id="l.74">Es szolgáddal tégy jol</l>
					<l xml:id="l.75">Te nagy irgalmadbol,</l>
					<l rend="level_1" xml:id="l.76">Hogy soha meg ne czufoltassam,</l>
					<l xml:id="l.77">Mert te hozzád kiáltoc</l>
					<l xml:id="l.78">Töled otalmat vároc.</l>
				</lg>
				<lg xml:id="lg.14">
					<metamark function="pause"/>
					<fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
							rend="sub">*</hi><hi rend="super">*</hi> 14 </fw>
					<l xml:id="l.79">Szégyenits meg az gonoszakat,</l>
					<l xml:id="l.80"><app xml:id="app.10">
							<lem wit="#KK" xml:id="lem.10">Ronts meg
									sz<corr>á</corr>nd<corr>é</corr>kokban,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.17">szándékokban</rdg>
							<rdg wit="#W3" xml:id="rdg.18">szandekokban</rdg>
						</app></l>
					<l xml:id="l.81">Hánd az koporsóban,</l>
					<l rend="level_1" xml:id="l.82">Kic az istenes jámborokat</l>
					<l xml:id="l.83"><app xml:id="app.11">
							<lem wit="#KK" xml:id="lem.11">Nevetic es czufollyác,</lem>
							<rdg wit="#W2" xml:id="rdg.19">és</rdg>
						</app></l>
					<l xml:id="l.84"><app xml:id="app.12">
							<lem wit="#KK" xml:id="lem.12">Es szörnyen
								r<corr>á</corr>galmazzác.</lem>
							<rdg wit="#W1" xml:id="rdg.20">rágalmazzák</rdg>
							<rdg wit="#W2" xml:id="rdg.21">rágalmazzác</rdg>
							<rdg wit="#W3" xml:id="rdg.22">ragalmazzác</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.15">
					<fw corresp="Szenci Molnár Albert" type="lg">15 </fw>
					<l xml:id="l.85">Fölötte nagy az te jovoltod,</l>
					<l xml:id="l.86"><app xml:id="app.13">
							<lem wit="#KK" xml:id="lem.13">Kit tartasz hiveknec,</lem>
							<rdg wit="#W2" xml:id="rdg.23">hivéknec</rdg>
						</app></l>
					<l xml:id="l.87">Az kic téged félnec,</l>
					<l rend="level_1" xml:id="l.88">Es nagy az te irgalmasságod,</l>
					<l xml:id="l.89">Mellyet azoc jol látnac,</l>
					<l xml:id="l.90">Az kic te benned biznac.</l>
				</lg>
				<lg xml:id="lg.16">
					<fw corresp="Szenci Molnár Albert" type="lg">16 </fw>
					<l xml:id="l.91">Te nálad azokat elreyted,</l>
					<l xml:id="l.92">Megörzöd kegyessen,</l>
					<l xml:id="l.93">Az kevélyec ellen,</l>
					<l rend="level_1" xml:id="l.94"><app xml:id="app.14">
							<lem wit="#KK" xml:id="lem.14">Hayl<corr>é</corr>kodban öket
								bévészed,</lem>
							<rdg wit="#W1" xml:id="rdg.24">Hajlékodban</rdg>
							<rdg wit="#W2" xml:id="rdg.25">Haylékodban</rdg>
							<rdg wit="#W3" xml:id="rdg.26">Haylekodban</rdg>
						</app></l>
					<l xml:id="l.95">Hogy az kegyetlen nyelvec</l>
					<l xml:id="l.96"><app xml:id="app.15">
							<lem wit="#KK" xml:id="lem.15">Öket meg ne sérthessec.</lem>
							<rdg wit="#W1" xml:id="rdg.27">sérthessék</rdg>
							<rdg wit="#W2" xml:id="rdg.28">sérthesséc</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.17">
					<fw corresp="Szenci Molnár Albert" type="lg">17 </fw>
					<l xml:id="l.97"><app xml:id="app.16">
							<lem wit="#KK" xml:id="lem.16">Diczöség adasséc <corr>az</corr>
								Urnac,</lem>
							<rdg wit="#W1" xml:id="rdg.29">Düczöség</rdg>
							<rdg wit="#W1 #W2" xml:id="rdg.30">az</rdg>
							<rdg wit="#W3" xml:id="rdg.31"><sic>es</sic></rdg>
						</app></l>
					<l xml:id="l.98"><app xml:id="app.17">
							<lem wit="#KK" xml:id="lem.17">Ki tart otalm<corr>á</corr>ban,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.32">otalmában</rdg>
							<rdg wit="#W3" xml:id="rdg.33">otalmaban</rdg>
						</app></l>
					<l xml:id="l.99">Mint egy szép városban,</l>
					<l rend="level_1" xml:id="l.100"><app xml:id="app.18">
							<lem wit="#KK" xml:id="lem.18">Kinec erös
									b<corr>á</corr>sty<corr>á</corr>i vadnac,</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.34">bástyái</rdg>
							<rdg wit="#W3" xml:id="rdg.35">bastyai</rdg>
						</app></l>
					<l xml:id="l.101">Hogy az ki abban lakic</l>
					<l xml:id="l.102"><app xml:id="app.19">
							<lem wit="#KK" xml:id="lem.19">Senkitöl n<corr>e</corr>m bántatic.</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.36">nem</rdg>
							<rdg wit="#W3" xml:id="rdg.37">ném</rdg>
						</app></l>
				</lg>
				<lg xml:id="lg.18">
					<fw corresp="Szenci Molnár Albert" type="lg">18 </fw>
					<l xml:id="l.103"><app xml:id="app.20">
							<lem wit="#KK" xml:id="lem.20">F<corr>é</corr>lelmes futásomban
								mondéc:</lem>
							<rdg wit="#W1 #W2" xml:id="rdg.38">Félelmes</rdg>
							<rdg wit="#W3" xml:id="rdg.39">Felelmes</rdg>
						</app></l>
					<l xml:id="l.104"><app xml:id="app.21">
