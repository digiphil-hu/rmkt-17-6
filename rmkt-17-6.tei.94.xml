        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 94.</fw>
                <head type="title">XCIIII. SOLTAR. T. B.</head>
                <head type="sub">Könyörgés az kegyetlenec ellen.</head>
                <pb facs="220"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">Oh erös boszszuállo Isten,</l>
                    <l xml:id="l.2">Ki bününkért büntetsz erössen!</l>
                    <l xml:id="l.3">Jelents meg már hatalmadat,</l>
                    <l xml:id="l.4">Mind ez világnac birája,</l>
                    <l xml:id="l.5">Támadgy föl, add meg valóba</l>
                    <l xml:id="l.6">Az kevélyeknec jutalmát.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Miglen marad ez büntetetlen,</l>
                    <l xml:id="l.8"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Mig
                                <corr>f</corr>uvalkodna<corr>c</corr>fel kevélyen</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">Mîg fuvalkodnac föl</rdg>
                            <rdg wit="#W3" xml:id="rdg.2">Migfuvalkodnac, fel</rdg>
                        </app></l>
                    <l xml:id="l.9">Az gonosz istentelenec?</l>
                    <l xml:id="l.10">Mig élnec illy vigassággal,</l>
                    <l xml:id="l.11"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es az ö gonosságockal</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">gonosságokval</rdg>
                        </app></l>
                    <l xml:id="l.12"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Vallyon meddig diczekednec?</lem>
                            <rdg wit="#W1" xml:id="rdg.4">düczekednec</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13">Uram az te népedet rontyác,</l>
                    <l xml:id="l.14">Örökségedet sanyargattyác,</l>
                    <l xml:id="l.15">Minden irgalmasság nélkül</l>
                    <l xml:id="l.16">Özvegyet árvát megölnec,</l>
                    <l xml:id="l.17">Szegény jövevént elvesztnec,</l>
                    <l xml:id="l.18">Még ezt mondgyác szemtelenül:</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Az Isten ez dolgot nem láttya,</l>
                    <l xml:id="l.20"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Az <corr>J</corr>ácob Istene
                                nemtudgya</lem>
                            <rdg wit="#W1" xml:id="rdg.5">Jácob</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.6">jácob</rdg>
                        </app></l>
                    <l xml:id="l.21">Az miket mi szerzünc mostan.</l>
                    <l xml:id="l.22">En czudáloc ti raytatoc,</l>
                    <l xml:id="l.23">Hogy illy oktalanoc vattoc,</l>
                    <l xml:id="l.24"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">H<corr>á</corr>nnyátoc
                                    megmag<corr>a</corr>tokban:</lem>
                            <rdg wit="#W1" xml:id="rdg.7">Hánnyátok</rdg>
                            <rdg wit="#W2" xml:id="rdg.8">Hánnyátoc</rdg>
                            <rdg wit="#W3" xml:id="rdg.9">Hannyátoc</rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">magatokban</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">magátokban</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Az ki az
                                f<corr>ü</corr>letteremtette,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.12">fület</rdg>
                            <rdg wit="#W3" xml:id="rdg.13">fúlet</rdg>
                        </app></l>
                    <l xml:id="l.26">Es az látó szemet szerzette,</l>
                    <l xml:id="l.27">Hogy nem látna sem hallana?</l>
                    <l xml:id="l.28">Az pogányoc büntetöje</l>
                    <l xml:id="l.29">Egyebet hogy ne büntetne,</l>
                    <l xml:id="l.30">Ki mást tanit, hogy ne tudna?</l>
                </lg>
                <lg xml:id="lg.6">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 6 </fw>
                    <l xml:id="l.31"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Az Isten minden
                                szivn<corr>e</corr>ctitkát</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.14">szivnec</rdg>
                            <rdg wit="#W3" xml:id="rdg.15">szivnéc</rdg>
                        </app></l>
                    <l xml:id="l.32">Jol tudgya minden gondolattyát,</l>
                    <l xml:id="l.33">Hogy semmire kellöc láttya.</l>
                    <l xml:id="l.34">Bodog az kit te igazgatsz,</l>
                    <l xml:id="l.35">Es törvényedre tanitasz,</l>
                    <l xml:id="l.36">Es kinec vagy oktatoja.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.37">Hogy ha gonoszul leszen dolga,</l>
                    <l xml:id="l.38">Es érkezic háborusága,</l>
                    <l xml:id="l.39">Mindent elszenved czendeszszen,</l>
                    <l xml:id="l.40">Miglen az istentelennec</l>
                    <l xml:id="l.41">Vermet koporsot készétnec,</l>
                    <l xml:id="l.42">Hol örömében vég leszen.</l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.43">Mert nem hadgya Isten ö népét,</l>
                    <l xml:id="l.44"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">El nem
                                feleytiörö<corr>k</corr>ségét,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.16">örökségét</rdg>
                            <rdg wit="#W3" xml:id="rdg.17">öröckségét</rdg>
                        </app></l>
                    <l xml:id="l.45">Söt vagyon ráyoc nagy gondgya.</l>
                    <l xml:id="l.46">Es midön ideje eljö,</l>
                    <l xml:id="l.47">Mindent igazán itél ö,</l>
                    <l xml:id="l.48">Es az hiveket megtartya.</l>
                </lg>
                <lg xml:id="lg.9">
                    <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                    <l xml:id="l.49"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Ki ment az gonosztul meg engem,</lem>
                            <rdg wit="#W1" xml:id="rdg.18">áz</rdg>
                        </app></l>
                    <l xml:id="l.50">Es ki támad föl én mellettem,</l>
                    <l xml:id="l.51">Ez gonosztévö nép ellen?</l>
                    <l xml:id="l.52">Ha Isten nem örzött volna,</l>
                    <l xml:id="l.53">Már régen megholtam volna,</l>
                    <l xml:id="l.54">Es most fekünném az sirben.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.55">Midön mondom: Im elkell esnem</l>
                    <l xml:id="l.56">Legottan megsegétesz engem</l>
                    <l xml:id="l.57">Te nagy irgalmasságodbol,</l>
                    <l xml:id="l.58">Mikor nagy bánatban volnéc,</l>
                    <l xml:id="l.59">Es szivemben kesergenéc</l>
                    <l xml:id="l.60">Megvigaztalál azontol.</l>
                </lg>
                <lg xml:id="lg.11">
                    <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                    <l xml:id="l.61">Itéletedhez hogy férhetne</l>
                    <l xml:id="l.62"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Az
                                Istent<corr>e</corr>lenectörvénye,</lem>
                            <rdg wit="#W1" xml:id="rdg.19">istentélenek</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.20">Istentélenec</rdg>
                        </app></l>
                    <l xml:id="l.63">Kic jot hamisra forditnac?</l>
                    <l xml:id="l.64">Nagy sereggel öszvegyülnec,</l>
                    <l xml:id="l.65">Hogy az igazat megöllyéc</l>
                    <l xml:id="l.66"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Es <corr>á</corr>rtatlan
                                vértontsanac.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.21">ártatlan</rdg>
                            <rdg wit="#W3" xml:id="rdg.22">artatlan</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.67">De én czac az Istenben bizom,</l>
                    <l xml:id="l.68"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12">Ö énnékem erös kövárom,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.23">énnékem</rdg>
                            <rdg wit="#W3" xml:id="rdg.24">énnekém</rdg>
                        </app></l>
                    <l xml:id="l.69"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13">Es ezöket megbünteti,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.25">ezeket</rdg>
                        </app></l>
                    <l xml:id="l.70"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14">Az ö
                                számtal<corr>a</corr>nbünekért,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.26">számtalan</rdg>
                            <rdg wit="#W3" xml:id="rdg.27">számtalán</rdg>
                        </app></l>
                    <l xml:id="l.71"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15">Es gonosztétemények<corr>é</corr>rt</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.28">téteményekért</rdg>
                            <rdg wit="#W3" xml:id="rdg.29">téteményekert</rdg>
                        </app></l>
                    <l xml:id="l.72">Az Isten öket elveszti.</l>
                </lg>
            </div>
