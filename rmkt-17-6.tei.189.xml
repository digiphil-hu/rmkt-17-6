    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 189.</fw>
                <head type="title">ASZTAL ÁLDÁS VAGY ETEL ELÖTT VALO DICZÉRET</head>
                <head type="notation">Notaja: Halgasd meg Atya Isten.</head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">HOzzád kiáltásunkat</l>
                    <l xml:id="l.2">Halgasd meg Ur Isten : / :</l>
                    <l xml:id="l.3"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Szorgalmatossagunkat</lem>
                            <rdg wit="#W2 #W3" xml:id="rdg.1">Szorgalmatossaginkat</rdg>
                        </app></l>
                    <l xml:id="l.4">Kissebits szivünkben,</l>
                    <l xml:id="l.5">Add meg mi kenyerünket,</l>
                    <l xml:id="l.6">Táplállyad életünket,</l>
                    <l xml:id="l.7">Szenteld meg lelkünket.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.8">Ald meg eledelünket</l>
                    <l xml:id="l.9">Mint ajándékidat, : / :</l>
                    <l xml:id="l.10">Tarts meg egéssegünket</l>
                    <l xml:id="l.11">Kérünc mint Urunkat.</l>
                    <l xml:id="l.12">Hogy néked szolgálhassunc</l>
                    <l xml:id="l.13">Tisztünkben eljárhassunc,</l>
                    <l xml:id="l.14">Joknac használhassunc.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.15">Mutasd hozzánc kedvedet,</l>
                    <l xml:id="l.16"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Mindenekel tégy jól : / :</lem>
                            <rdg wit="#W2 #W3" xml:id="rdg.2">Irgalmassagodbol</rdg>
                        </app></l>
                    <l xml:id="l.17">Az szegény éhezöket</l>
                    <l xml:id="l.18">Etesd jovoltodból.</l>
                    <l xml:id="l.19">Hogy diczérhessünc téged</l>
                    <l xml:id="l.20">Minden jót várjunc töled,</l>
                    <l xml:id="l.21">Hálát adván néked.</l>
                </lg>
            </div>
