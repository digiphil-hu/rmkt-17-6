            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 46.</fw>
                <head type="title">XLVI. SOLTAR. C. M. 82.</head>
                <head type="sub">Háláadása az Isten népénec az megotalmazásért.</head>
                <pb facs="118"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">AZ Isten az mi reménségünc,</l>
                    <l xml:id="l.2">Midön reánc tör ellenségünc,</l>
                    <l xml:id="l.3"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Minden haborus<corr>á</corr>ginkban</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">haboruságinkban</rdg>
                            <rdg wit="#W3" xml:id="rdg.2">haborusaginkban</rdg>
                        </app></l>
                    <l xml:id="l.4"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Megtart eröshatalmába<corr>n.</corr></lem>
                            <rdg wit="#W1" xml:id="rdg.3">hatalmában</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.4">hatalmában?</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.5">Azért az mi szivünc nem félne,</l>
                    <l xml:id="l.6">Ha az egez föld megrendölne,</l>
                    <l xml:id="l.7">Es az hegyec az tengernec</l>
                    <l xml:id="l.8"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Közepibe bédölnénec.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">Közepiben</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Ha az tenger szörnyen zugnais,</l>
                    <l xml:id="l.10">Minden viz fölzavarodnékis,</l>
                    <l xml:id="l.11">Es ha az sebes szélvészszel</l>
                    <l xml:id="l.12"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Az hegyec hányatnac széllyel,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.6">széllel</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.13"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Az szép
                                    folyovizmindaz<corr>á</corr>lt<corr>a</corr>l</lem>
                            <rdg wit="#W1" xml:id="rdg.7">mind az által</rdg>
                            <rdg wit="#W2" xml:id="rdg.8">mindazáltal</rdg>
                            <rdg wit="#W3" xml:id="rdg.9">mindazaltál</rdg>
                        </app></l>
                    <l xml:id="l.14">Az ö szép tiszta folyásával</l>
                    <l xml:id="l.15">Az Istennec szent városát</l>
                    <l xml:id="l.16">Megvigaztalná haylékát.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">Mert közepén lakic az Isten,</l>
                    <l xml:id="l.18">Azértan romlása nem leszen,</l>
                    <l xml:id="l.19">Semmi énségben nem eyti</l>
                    <l xml:id="l.20">Az Isten jokor megmenti.</l>
                    <l rend="level_1" xml:id="l.21">Az pogán népec dúlnakfúlnac,</l>
                    <l xml:id="l.22">Nagy soc országoc föltámadnac,</l>
                    <l xml:id="l.23">De az ö haragos szava</l>
                    <l xml:id="l.24">Mind ez földet elolvasztya.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">De az Isten minden idöben</lem>
                            <rdg wit="#W1" xml:id="rdg.10">üdöben</rdg>
                        </app></l>
                    <l xml:id="l.26">Mivelünc vagyon inségünkben,</l>
                    <l xml:id="l.27">Jacob Istene otalmunc,</l>
                    <l xml:id="l.28">Az Zebaoth mi hadnagyunc.</l>
                    <l rend="level_1" xml:id="l.29"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Jertec lássátoc ez nagy Urnac</lem>
                            <rdg wit="#W2" xml:id="rdg.11">éz</rdg>
                        </app></l>
                    <l xml:id="l.30"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Czuda
                                dolgaithatalmán<corr>a</corr>c,</lem>
                            <rdg wit="#W1" xml:id="rdg.12">hatalmánac</rdg>
                            <rdg wit="#W2" xml:id="rdg.13">hatalmanác</rdg>
                            <rdg wit="#W3" xml:id="rdg.14">hatalmánác</rdg>
                        </app></l>
                    <l xml:id="l.31">Ki mind ez föld kerekséget</l>
                    <l xml:id="l.32">Elpusztitya ékességet.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.33"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Ez földön széllyel nagy hadakat</lem>
                            <rdg wit="#W1" xml:id="rdg.15">széllel</rdg>
                        </app></l>
                    <l xml:id="l.34"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Ö megczendeszit haborúkat,</lem>
                            <rdg wit="#W1" xml:id="rdg.16"><sic>megczendeszeir</sic></rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.17">haborokat</rdg>
                        </app></l>
                    <l xml:id="l.35">Ivet kopjákot megrontat,</l>
                    <l xml:id="l.36">Társzekereket fölgyuytat,</l>
                    <l rend="level_1" xml:id="l.37">Igy szolván: mindnyájan hallyátoc,</l>
                    <l xml:id="l.38">Hogy én erös Istentec vagyoc,</l>
                    <l xml:id="l.39"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Es hogy
                                birodalmomv<corr>a</corr>gyon</lem>
                            <rdg wit="#W1" xml:id="rdg.18">vagyon</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.19">vágyon</rdg>
                        </app></l>
                    <l xml:id="l.40">Minden népen ez világon.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41">Summa szerint ez erös Isten</l>
                    <l xml:id="l.42">Velünc vagyon minden helyeken,</l>
                    <l xml:id="l.43">Az Jácobnac nagy Istene</l>
                    <l xml:id="l.44">Dolgainknac segedelme.</l>
                </lg>
            </div>
