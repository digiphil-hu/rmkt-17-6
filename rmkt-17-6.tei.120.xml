            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 120.</fw>
                <head type="title">CXX. SOLTAR. T. B. </head>
                <head type="sub">Könyörgése Davidnac az ö rágalmazoi ellen.</head>
                <pb facs="289"/>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">EN az Ur Istenhez kiáltéc,</l>
                    <l xml:id="l.2"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Mikoron nagy
                                inségbenval<corr>é</corr>c.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">valéc</rdg>
                            <rdg wit="#W3" xml:id="rdg.2">valec</rdg>
                        </app></l>
                    <l xml:id="l.3"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Es bé nem dugá az ö fület.</lem>
                            <rdg wit="#W2" xml:id="rdg.3">fülét</rdg>
                        </app></l>
                    <l xml:id="l.4"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Uram halgasd meg kérésemet,</lem>
                            <rdg wit="#W1" xml:id="rdg.4">keresémet</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.5">Az népeknec hazug szájoktul,</l>
                    <l xml:id="l.6">Hamis nyelvec gyalázattyátul,</l>
                    <l xml:id="l.7">Eletemet ez veszéltöl</l>
                    <l xml:id="l.8">Tarts meg kegyelmességedböl.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Vallyon az te czélczapo nyelved</l>
                    <l xml:id="l.10"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Miczoda hasznot
                                ádtenéke<corr>d?</corr></lem>
                            <rdg wit="#W1" xml:id="rdg.5">te néked?</rdg>
                            <rdg wit="#W2" xml:id="rdg.6">tenéked?</rdg>
                            <rdg wit="#W3" xml:id="rdg.7">tenéket:</rdg>
                        </app></l>
                    <l xml:id="l.11">De minemö jo dolgot tehet,</l>
                    <l xml:id="l.12"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">H<corr>a</corr>zudozásával
                                mitnyerhet?</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">Hazudozasával</rdg>
                            <rdg wit="#W3" xml:id="rdg.9">Házudozásával</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.13"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Szintin mint az nyil
                                azk<corr>é</corr>zivben,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.10">kézivben</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">kezivben</rdg>
                        </app></l>
                    <l xml:id="l.14">Kit az vitez megvony kezében,</l>
                    <l xml:id="l.15">Az melly éget olly sebessen,</l>
                    <l xml:id="l.16">Mint tüz az fenyö tövisben.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">Oh melly igen nehéz ennékem,</l>
                    <l xml:id="l.18">Ez itt lakásom és életem,</l>
                    <l xml:id="l.19">Az Mesekitác sátorában,</l>
                    <l xml:id="l.20">Az Kedaritác haylékában.</l>
                    <l rend="level_1" xml:id="l.21">En ezen olly igen kesergec,</l>
                    <l xml:id="l.22">Hogy kic békeséget gyülölnec,</l>
                    <l xml:id="l.23">Azoknál kell soká laknom,</l>
                    <l xml:id="l.24">Kic között nagy én bánatom.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25">En mind czac békeséget szoltam,</l>
                    <l xml:id="l.26">Háborgástul magamat ottam,</l>
                    <l xml:id="l.27">De ez nem tettzic ö nékiec,</l>
                    <l xml:id="l.28">Czac had és hartz kell ö kedveknec.</l>
                </lg>
            </div>
