            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 4.</fw>
                <head type="title">IIII. SOLTAR. C. M.</head>
                <head type="sub">Davidnac könyörgése az Saul ellen.</head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">EN igasságomnac Istene,</l>
                    <l xml:id="l.2">Halgasdmeg én kiáltásom,</l>
                    <l xml:id="l.3">Szánny meg, és tekénts inségemre,</l>
                    <l xml:id="l.4"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Te vigy engemet
                                t<corr>á</corr>gashelyre,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.1">tágas</rdg>
                            <rdg wit="#W3" xml:id="rdg.2">tagas</rdg>
                        </app></l>
                    <l xml:id="l.5">Midön itt szorongattatom.</l>
                    <l rend="level_1" xml:id="l.6">Ti nagy urac miglen gyaláztoc</l>
                    <l xml:id="l.7">Engemet tisztességemben?</l>
                    <l xml:id="l.8">Ez illy hivságban mig maradtoc?</l>
                    <l xml:id="l.9">Hazudozásra mit vágyódtoc?</l>
                    <l xml:id="l.10">Mig gyönyörködtöc ezekben?</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.11"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">De vegyétec jol eszetekbe,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">eszetekben</rdg>
                        </app></l>
                    <l xml:id="l.12">Hogy az Ur Isten engemet</l>
                    <l xml:id="l.13"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Bévött kedvébe kegyelmébe,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.4">kedvében kegyelmében</rdg>
                        </app></l>
                    <l xml:id="l.14">Ö adta királyi tisztemet,</l>
                    <l xml:id="l.15">Es meghallya kérésemet.</l>
                    <l rend="level_1" xml:id="l.16">Rettegjetec hát és lássátoc,</l>
                    <l xml:id="l.17">Hogy ellene ne vétsetec,</l>
                    <l xml:id="l.18">Magatokat meggondolyátoc</l>
                    <l xml:id="l.19">Az ágyasházban ha nyugosztoc,</l>
                    <l xml:id="l.20">Hogy lehessen czendességtec.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.21">Igasságnac áldozattyával</l>
                    <l xml:id="l.22"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Aldozzatoc az Isten<corr>n</corr>ec,</lem>
                            <rdg wit="#W1" xml:id="rdg.5">Istennec</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.6">Istenec</rdg>
                        </app></l>
                    <l xml:id="l.23">Jo élettel és igassággal,</l>
                    <l xml:id="l.24">Es az Istenben bátorsággal</l>
                    <l xml:id="l.25">Bizzatoc és örvendgyetec,</l>
                    <l rend="level_1" xml:id="l.26">De sokan mondgyác azt minekünc;</l>
                    <l xml:id="l.27">Ki vezérl minket az jóra?</l>
                    <l xml:id="l.28">Azért téged Ur Isten kérünc,</l>
                    <l xml:id="l.29">Mutasd kegyes ortzádat nékünc,</l>
                    <l xml:id="l.30">Jöyjön el az áldott óra!</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.31">Mellyel inkáb vigasztalsz engem,</l>
                    <l xml:id="l.32">Es örvendeztetsz szivemben;</l>
                    <l xml:id="l.33">Hogynem kiknec soc mustyoc terem,</l>
                    <l xml:id="l.34"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Búzájockal rakva soc verem,</lem>
                            <rdg wit="#W2" xml:id="rdg.7">rakvá</rdg>
                        </app></l>
                    <l xml:id="l.35">Kickel élnec bévségessen.</l>
                    <l rend="level_1" xml:id="l.36">Azert élec jo békeségben,</l>
                    <l xml:id="l.37">Fekszem s’ aluszom kedvemre,</l>
                    <l xml:id="l.38"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Ur<corr>a</corr>lk<corr>o</corr>dván
                                lakomföldemben</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.8">Urálkodván</rdg>
                            <rdg wit="#W3" xml:id="rdg.9"><sic>Urálkydván</sic></rdg>
                        </app></l>
                    <l xml:id="l.39">Bátorságos örvendezésben,</l>
                    <l xml:id="l.40">Mert az Ur vigyáz éltemre.</l>
                </lg>
            </div>
