                              <div type="poem" xml:id="d.1" xml:lang="hu">
                                        <fw type="originalNum">[RMKT XVII/6:] 52.</fw>
                                        <head type="title">LII. SOLTAR. T. B.</head>
                                        <head type="sub">Panaszolkodása Davidnac az Doeg
                                                  ellen.</head>
                                        <pb facs="131"> </pb>
                                        <lg xml:id="lg.1">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                                                  <l xml:id="l.1">MIt diczekedel gonosságban,</l>
                                                  <l xml:id="l.2"><app xml:id="app.1">
                                                  <lem wit="#KK" xml:id="lem.1">Te
                                                  hat<corr>a</corr>lmaskodo?</lem>
                                                  <rdg wit="#W1" xml:id="rdg.1">hatalmoskodo</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.2">hatálmoskodo</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.3">hatálmaskodo</rdg>
                                                  </app></l>
                                                  <l xml:id="l.3"><app xml:id="app.2">
                                                  <lem wit="#KK" xml:id="lem.2">Mit fuvalkodol föl
                                                  magadb<corr>a</corr>n</lem>
                                                  <rdg wit="#W1" xml:id="rdg.4">fualkodol</rdg>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.5">magadban</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.6">magadbán</rdg>
                                                  </app></l>
                                                  <l xml:id="l.4">Nagyra vágyakozo?</l>
                                                  <l xml:id="l.5">Mert az Istennec jo volta</l>
                                                  <l xml:id="l.6">Az jokat megtartya.</l>
                                        </lg>
                                        <lg xml:id="lg.2">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                                                  <l xml:id="l.7">Mint szinte az éles beretva,</l>
                                                  <l xml:id="l.8"><app xml:id="app.3">
                                                  <lem wit="#KK" xml:id="lem.3">Ollyan az te
                                                  <corr>n</corr>yelved,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.7">te njelved</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.8">te nyelved</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.9">tenyelved</rdg>
                                                  </app></l>
                                                  <l xml:id="l.9">Mert az sziveket általjárja</l>
                                                  <l xml:id="l.10">Rágalmazo mérged,</l>
                                                  <l xml:id="l.11">Inkáb szeretsz hamisságot</l>
                                                  <l xml:id="l.12">Hogy nem igasságot.</l>
                                        </lg>
                                        <lg xml:id="lg.3">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                                                  <l xml:id="l.13">Te czalárd nyelv szólsz czac
                                                  nyavalyát,</l>
                                                  <l xml:id="l.14">Azértan az Isten</l>
                                                  <l xml:id="l.15"><app xml:id="app.4">
                                                  <lem wit="#KK" xml:id="lem.4">Téged kigyomlál es
                                                  elszaggat,</lem>
                                                  <rdg wit="#W2" xml:id="rdg.10">és</rdg>
                                                  </app></l>
                                                  <l xml:id="l.16">Házadbol kiveszen,</l>
                                                  <l xml:id="l.17">Es az élöc seregiböl</l>
                                                  <l xml:id="l.18"><app xml:id="app.5">
                                                  <lem wit="#KK" xml:id="lem.5">T<corr>é</corr>gedet
                                                  kitöröl.</lem>
                                                  <rdg wit="#W1 #W3" xml:id="rdg.11">Tegedet</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.12">Tégedet</rdg>
                                                  </app></l>
                                        </lg>
                                        <lg xml:id="lg.4">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                                                  <l xml:id="l.19"><app xml:id="app.6">
                                                  <lem wit="#KK" xml:id="lem.6">Midön az hivec es az
                                                  szentec</lem>
                                                  <rdg wit="#W2" xml:id="rdg.13">és</rdg>
                                                  </app></l>
                                                  <l xml:id="l.20">Látandgyác ez veszélt,</l>
                                                  <l xml:id="l.21">Ö magokban megfélemlenec,</l>
                                                  <l xml:id="l.22">Mindenec ez kevélt</l>
                                                  <l xml:id="l.23"><app xml:id="app.7">
                                                  <lem wit="#KK" xml:id="lem.7">Megnevetic es
                                                  czufollyác,</lem>
                                                  <rdg wit="#W2" xml:id="rdg.14">és</rdg>
                                                  </app></l>
                                                  <l xml:id="l.24">Es végre ezt mondgyác:</l>
                                        </lg>
                                        <lg xml:id="lg.5">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                                                  <l xml:id="l.25">Im ez az Istent megvetette,</l>
                                                  <l xml:id="l.26">Es benne nem bizott,</l>
                                                  <l xml:id="l.27">Gazdagsággal magát elhitte,</l>
                                                  <l xml:id="l.28">Ahoz ragazkodott,</l>
                                                  <l xml:id="l.29">Es az ö álnokságához,</l>
                                                  <l xml:id="l.30">Bizott hatalmához.</l>
                                        </lg>
                                        <lg xml:id="lg.6">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                                                  <l xml:id="l.31">De én, az ki jo hittel bizom</l>
                                                  <l xml:id="l.32">Az nagy Ur Istenben,</l>
                                                  <l xml:id="l.33"><app xml:id="app.8">
                                                  <lem wit="#KK" xml:id="lem.8">Az ö
                                                  h<corr>á</corr>zában plántáltatom,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.15">házában</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.16">hazában</rdg>
                                                  </app></l>
                                                  <l xml:id="l.34">Es zöldellem szépen:</l>
                                                  <l xml:id="l.35">Mint az ékes zöld olayfa,</l>
                                                  <l xml:id="l.36">Ki meg nem asz soha.</l>
                                        </lg>
                                        <lg xml:id="lg.7">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                                                  <l xml:id="l.37">En téged öröcké diczérlec,</l>
                                                  <l xml:id="l.38">Mert megtartál engem,</l>
                                                  <l xml:id="l.39">Es az te nevedben reménlec</l>
                                                  <l xml:id="l.40">Mig leszen életem,</l>
                                                  <l xml:id="l.41">Mert te az te hiveidnec</l>
                                                  <l xml:id="l.42">Vagy jo segedelmec.</l>
                                        </lg>
                              </div>
