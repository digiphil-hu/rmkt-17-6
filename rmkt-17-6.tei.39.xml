      <div type="poem" xml:id="d.1" xml:lang="hu">
        <fw type="originalNum">[RMKT XVII/6:] 39.</fw>
        <head type="title">XXXIX. SOLTAR. T. B.</head>
        <head type="sub"><app xml:id="app.1">
            <lem wit="#KK" xml:id="lem.1">Vallástétele Davidnac az ö türhetetlens<corr>é</corr>géröl
              és szenvedés<corr>é</corr>ben valo zugolódásárol.</lem>
            <rdg wit="#W1" xml:id="rdg.1">türhetetlenségiröl es szenvedésében</rdg>
            <rdg wit="#W2 #W3" xml:id="rdg.2">türhetetlensegéröl és szenvedéseben</rdg>
            <rdg wit="#W2" xml:id="rdg.3">zugodásárol</rdg>
          </app></head>
        <pb facs="103"> </pb>
        <lg xml:id="lg.1">
          <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
          <l xml:id="l.1"><app xml:id="app.2">
              <lem wit="#KK" xml:id="lem.2">MAgamban elvégezém es mond<corr>á</corr>m,</lem>
              <rdg wit="#W1" xml:id="rdg.4">mondám</rdg>
              <rdg wit="#W2" xml:id="rdg.5"><sic>mon-</sic></rdg>
              <rdg wit="#W3" xml:id="rdg.6">mõdã</rdg>
            </app></l>
          <l xml:id="l.2"><app xml:id="app.3">
              <lem wit="#KK" xml:id="lem.3">Hogy dolgom megtar<corr>t</corr>oztatnám,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.7">megtartoztatnám</rdg>
              <rdg wit="#W3" xml:id="rdg.8">megtarttoztatnám</rdg>
            </app></l>
          <l xml:id="l.3">Hogy nyelvem olly igét ne eytene,</l>
          <l xml:id="l.4">Ki énnékem bút szerzene,</l>
          <l xml:id="l.5">En szájamra zabolát vetöttem,</l>
          <l xml:id="l.6">Mig az hitlen áll elöttem.</l>
        </lg>
        <lg xml:id="lg.2">
          <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
          <l xml:id="l.7">En mint az néma veszteg halgatéc,</l>
          <l xml:id="l.8">Még az jórol sem beszelléc,</l>
          <l xml:id="l.9">Söt fáydalmomis titkolnom kelle,</l>
          <l xml:id="l.10"><app xml:id="app.4">
              <lem wit="#KK" xml:id="lem.4">Kin sérelmem öregböle,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.9">sérélmem</rdg>
            </app></l>
          <l xml:id="l.11">Eg vala szivem hogy meggondolám,</l>
          <l xml:id="l.12">Eltüzesülvén ezt mondám:</l>
        </lg>
        <lg xml:id="lg.3">
          <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
          <l xml:id="l.13">Mutasd meg Uram éltemnec végét,</l>
          <l xml:id="l.14">Es meddig eltetsz engemet,</l>
          <l xml:id="l.15">Az napoc számát jelents meg nékem,</l>
          <l xml:id="l.16">Mig kell ez világon élnem,</l>
          <l xml:id="l.17">Mert idöm nálad czac egy araszni,</l>
          <l xml:id="l.18">Elötted életem semmi.</l>
        </lg>
        <lg xml:id="lg.4">
          <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
          <l xml:id="l.19">Bizonyára mulando az ember,</l>
          <l xml:id="l.20"><app xml:id="app.5">
              <lem wit="#KK" xml:id="lem.5">Ki m<corr>a</corr>g<corr>á</corr>nac sokat igér,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.10">magánac</rdg>
              <rdg wit="#W3" xml:id="rdg.11">máganac</rdg>
            </app></l>
          <l xml:id="l.21">Mint az árnyéc az ember elmulic,</l>
          <l xml:id="l.22">Mégis szorgalmatoskodic,</l>
          <l xml:id="l.23"><app xml:id="app.6">
              <lem wit="#KK" xml:id="lem.6">Sokat gyüyt, es soc marhát rak öszve,</lem>
              <rdg wit="#W2" xml:id="rdg.12">és</rdg>
            </app></l>
          <l xml:id="l.24">Nem tudgya kié lesz végre.</l>
        </lg>
        <lg xml:id="lg.5">
          <metamark function="pause"/>
          <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi rend="sub"
              >*</hi><hi rend="super">*</hi> 5 </fw>
          <l xml:id="l.25">Uram hát nékem kiben kell biznom?</l>
          <l xml:id="l.26"><app xml:id="app.7">
              <lem wit="#KK" xml:id="lem.7">Nincz kivöled vigaságom,</lem>
              <rdg wit="#W1" xml:id="rdg.13">küvöled</rdg>
            </app></l>
          <l xml:id="l.27">Ments ki engem minden vétkeimböl,</l>
          <l xml:id="l.28">Es az bolondoc nyelvétöl</l>
          <l xml:id="l.29">Örizz meg, hogy öc ne czufollyanac,</l>
          <l xml:id="l.30">Midön ez inségben látnac.</l>
        </lg>
        <lg xml:id="lg.6">
          <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
          <l xml:id="l.31">Mint az néma, halgatoc erössen,</l>
          <l xml:id="l.32">Szájam föl sem nyitom, mert én</l>
          <l xml:id="l.33">Tudom hogy ezt mind te czelekedted,</l>
          <l xml:id="l.34">Czapásod rólam elvegyed,</l>
          <l xml:id="l.35">Mert kezednec kemény volta miatt,</l>
          <l xml:id="l.36">Minden életem ellankatt.</l>
        </lg>
        <lg xml:id="lg.7">
          <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
          <l xml:id="l.37">Mert midön te megfedded az embert,</l>
          <l xml:id="l.38">Az ö nagy gyarloságáért,</l>
          <l xml:id="l.39"><app xml:id="app.8">
              <lem wit="#KK" xml:id="lem.8">Azonnal elvész szép <corr>á</corr>brâzattya,</lem>
              <rdg wit="#W1" xml:id="rdg.14">ábrázattja</rdg>
              <rdg wit="#W2" xml:id="rdg.15">ábrázattya</rdg>
              <rdg wit="#W3" xml:id="rdg.16">abrâzattya</rdg>
            </app></l>
          <l xml:id="l.40">Mint az mólytol az szép ruha.</l>
          <l xml:id="l.41">Lám az ember melly igen mulando,</l>
          <l xml:id="l.42">Semmi dolga nem állando!</l>
        </lg>
        <lg xml:id="lg.8">
          <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
          <l xml:id="l.43"><app xml:id="app.9">
              <lem wit="#KK" xml:id="lem.9">Ha<corr>l</corr>gasdmeg Uram könyörgésemet,</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.17">Halgasdmeg</rdg>
              <rdg wit="#W3" xml:id="rdg.18">Haldgasdmeg</rdg>
            </app></l>
          <l xml:id="l.44">Kérésemre ne légy süket,</l>
          <l xml:id="l.45">Mert elötted vendég es szarándoc,</l>
          <l xml:id="l.46">Mint atyáim, ollyan vagyoc.</l>
          <l xml:id="l.47"><app xml:id="app.10">
              <lem wit="#KK" xml:id="lem.10">Szünnyél meg <corr>t</corr>ölem, hadd vegyec eröt</lem>
              <rdg wit="#W1 #W2" xml:id="rdg.19">meg tölem</rdg>
              <rdg wit="#W3" xml:id="rdg.20">megtölem</rdg>
            </app></l>
          <l xml:id="l.48">Az én kimulásom elöt.</l>
        </lg>
      </div>
    </body>
