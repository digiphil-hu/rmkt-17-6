         <div type="poem" xml:id="d.1" xml:lang="hu">
            <fw type="originalNum">[RMKT XVII/6:] 153.</fw>
            <head type="title">MINDENNÉMÜ HABORUSÁG ELLEN</head>
            <head type="sub">Az 35. Soltárnac Franciai notajara.</head>
            <lg xml:id="lg.1">
               <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
               <l xml:id="l.1">UR Isten melly sokan vadnac,</l>
               <l xml:id="l.2">Kik engemet haborgatnac,</l>
               <l xml:id="l.3">Es mindenkoron igyekeznec,</l>
               <l xml:id="l.4">Miként engem elveszthessenec.</l>
               <l rend="level_1" xml:id="l.5">En pedig egyedül vagyoc,</l>
               <l xml:id="l.6">Nagy nyavalyamban jaygatoc,</l>
               <l xml:id="l.7">Minden barátim elhadnac,</l>
               <l xml:id="l.8">Es czac magokra gondolnac.</l>
            </lg>
            <lg xml:id="lg.2">
               <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
               <l xml:id="l.9">Elsö ellenség az satan,</l>
               <l xml:id="l.10">Ki mint az sivo oroszlán,</l>
               <l xml:id="l.11">Utannam jár nagy álnoksággal,</l>
               <l xml:id="l.12">Hogy bényelhessen eh torkával.</l>
               <l rend="level_1" xml:id="l.13">Mindenütt ellenem lest vét,</l>
               <l xml:id="l.14">Mert tud ezer mesterséget,</l>
               <l xml:id="l.15">Ha eggyickel hijában jár,</l>
               <l xml:id="l.16">Az másic által prédát vár.</l>
            </lg>
            <lg xml:id="lg.3">
               <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
               <l xml:id="l.17"><app xml:id="app.1">
                     <lem wit="#KK" xml:id="lem.1">Gazdagsággal
                           sz<corr>e</corr>génségg<corr>e</corr>l,</lem>
                     <rdg wit="#W1" xml:id="rdg.1">szengénséggél</rdg>
                     <rdg wit="#W2" xml:id="rdg.2">Gazdagsággal düczöséggel</rdg>
                  </app></l>
               <l xml:id="l.18">Világi gyönyörüséggel,</l>
               <l xml:id="l.19">Félelemmelis gyakran kisért,</l>
               <l xml:id="l.20">Ugy hogy elmémben czac nem megsért.</l>
               <l rend="level_1" xml:id="l.21">Honnan nehéz gondolatban,</l>
               <l xml:id="l.22">Lelkem esic nagy bánatban,</l>
               <l xml:id="l.23">Noha nem árthat ezzelis,</l>
               <l xml:id="l.24">Ugyan nem nyughatic mégis.</l>
            </lg>
            <lg xml:id="lg.4">
               <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
               <l xml:id="l.25">Másodic ez czalárd vilag,</l>
               <l xml:id="l.26">Ki en szemem elött villag,</l>
               <l xml:id="l.27">Gonosz példával és intéssel,</l>
               <l xml:id="l.28">Mind czac az gonoszra vezérel,</l>
               <l rend="level_1" xml:id="l.29">Mosolyog reám édessen,</l>
               <l xml:id="l.30">Hogy engem hozzá hitessen,</l>
               <l xml:id="l.31">Es vigyen az széles utra</l>
               <l xml:id="l.32"><app xml:id="app.2">
                     <lem wit="#KK" xml:id="lem.2">Melly megyen az rut p<corr>o</corr>kolra.</lem>
                     <rdg wit="#W1" xml:id="rdg.3">polkolra</rdg>
                     <rdg wit="#W2" xml:id="rdg.4">pokolra</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.5">
               <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
               <l xml:id="l.33">Harmad ellenségem rongal,</l>
               <l xml:id="l.34">Ki még éyjelis nálam hál,</l>
               <l xml:id="l.35">Es sokasittya nyavalyámat,</l>
               <l xml:id="l.36"><app xml:id="app.3">
                     <lem wit="#KK" xml:id="lem.3">Gyakran elszakasztya
                           <corr>á</corr>lm<corr>o</corr>mat,</lem>
                     <rdg wit="#W1" xml:id="rdg.5">almómat</rdg>
                     <rdg wit="#W2" xml:id="rdg.6">álmomat</rdg>
                  </app></l>
               <l rend="level_1" xml:id="l.37">Szüntelen int gonosságra,</l>
               <l xml:id="l.38">Lelkemet kiszti probára,</l>
               <l xml:id="l.39">Ez én gyarlo termeszetem,</l>
               <l xml:id="l.40">Az kiben én születtettem.</l>
            </lg>
            <lg xml:id="lg.6">
               <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
               <l xml:id="l.41"><app xml:id="app.4">
                     <lem wit="#KK" xml:id="lem.4">Ur Isten ez gyors oroszlánt,</lem>
                     <rdg wit="#W2" xml:id="rdg.7">az</rdg>
                  </app></l>
               <l xml:id="l.42"><app xml:id="app.5">
                     <lem wit="#KK" xml:id="lem.5">Verd hátra ez dihös sátánt,</lem>
                     <rdg wit="#W2" xml:id="rdg.8">dühös</rdg>
                  </app></l>
               <l xml:id="l.43">Lelki fegyvert adgy én kezemben,</l>
               <l xml:id="l.44">Ki ellen semmit ne tehessen.</l>
               <l rend="level_1" xml:id="l.45">Ha álnoksággal visgális,</l>
               <l xml:id="l.46">Ne ártson nékem azzalis.</l>
               <l xml:id="l.47">Se rettentsen erejével,</l>
               <l xml:id="l.48"><app xml:id="app.6">
                     <lem wit="#KK" xml:id="lem.6">Mellyel dihösködic széllel.</lem>
                     <rdg wit="#W2" xml:id="rdg.9">dühösködic</rdg>
                  </app></l>
            </lg>
            <lg xml:id="lg.7">
               <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
               <l xml:id="l.49"><app xml:id="app.7">
                     <lem wit="#KK" xml:id="lem.7">Felséged engem megtartson,</lem>
                     <rdg wit="#W2" xml:id="rdg.10">Fölséged</rdg>
                  </app></l>
               <l xml:id="l.50">Ez világ hogy ne árthasson,</l>
               <l xml:id="l.51">Es ne járjac az test kedvére,</l>
               <l xml:id="l.52">Hanem nézzec szent törvényedre.</l>
               <l rend="level_1" xml:id="l.53">Es ahhoz szabjam éltemet,</l>
               <l xml:id="l.54"><app xml:id="app.8">
                     <lem wit="#KK" xml:id="lem.8">Mellyel lelhessem kedvedet,</lem>
                     <rdg wit="#W2" xml:id="rdg.11">nyerhessem</rdg>
                  </app></l>
               <l xml:id="l.55">Es használlyac feleimnec,</l>
               <l xml:id="l.56">Kic velem téged féllyenec.</l>
            </lg>
         </div>
