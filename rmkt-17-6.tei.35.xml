        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 35.</fw>
                <head type="title">XXXV. SOLTAR. T. B.</head>
                <head type="sub"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1"> Kön<corr>y</corr>örgése Davidnac az
                            megszabaditásért.</lem>
                        <rdg wit="#W1 #W2" xml:id="rdg.1">Könyörgése</rdg>
                        <rdg wit="#W3" xml:id="rdg.2">Könörgése</rdg>
                    </app></head>
                <pb facs="89"> </pb>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">PÖrölly Uram
                                pö<corr>r</corr>löimmel,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">pörlöimmel</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">pölöimmel</rdg>
                        </app></l>
                    <l xml:id="l.2">Hartzolly én ellenségimmel,</l>
                    <l xml:id="l.3">Te paisodat ragadd elö,</l>
                    <l xml:id="l.4">En segedelmemre álly elö,</l>
                    <l rend="level_1" xml:id="l.5">Dárdádat nyuyts ki kezeddel,</l>
                    <l xml:id="l.6"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3"> Ellens<corr>é</corr>gimet
                                kergesdel,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">Ellenségimet</rdg>
                            <rdg wit="#W3" xml:id="rdg.6">Ellensegimet</rdg>
                        </app></l>
                    <l xml:id="l.7"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4"> Mondgyad ezt az én lelkemnec:</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.7">áz</rdg>
                        </app></l>
                    <l xml:id="l.8">Tégedet én megsegétlec.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.9">Szégyenits meg Uram öket,</l>
                    <l xml:id="l.10">Kic kergetic életemet,</l>
                    <l xml:id="l.11">Es az kic reám fenekednec,</l>
                    <l xml:id="l.12">Nagy szégyennel hátratérjenec.</l>
                    <l rend="level_1" xml:id="l.13">Mint az szél az könnyü polyvát,</l>
                    <l xml:id="l.14">Széllyel szorja az föld porát,</l>
                    <l xml:id="l.15">Igy az nagy Isten angyala</l>
                    <l xml:id="l.16">Öket széllel futamtassa.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.17">Ö útoc legyen setétség</l>
                    <l xml:id="l.18">Es olly sikamlo mint az jég,</l>
                    <l xml:id="l.19">Es az Isten angyala öket</l>
                    <l xml:id="l.20">Kergesse, rontsa meg fejöket.</l>
                    <l rend="level_1" xml:id="l.21">Mert nékem hálót vetettec,</l>
                    <l xml:id="l.22"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5"> Es mél árkot
                                k<corr>é</corr>szitettec,</lem>
                            <rdg wit="#W1" xml:id="rdg.8">készitettec</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.9">keszitettec</rdg>
                        </app></l>
                    <l xml:id="l.23">Hogy életemben oknélkül,</l>
                    <l xml:id="l.24"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6"> Megeytsen<corr>e</corr>c
                                kegyetlenül.</lem>
                            <rdg wit="#W1" xml:id="rdg.10">Megeyczenek</rdg>
                            <rdg wit="#W2" xml:id="rdg.11">Megeytsenec</rdg>
                            <rdg wit="#W3" xml:id="rdg.12">Megeytsenéc</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.25">Engedgyed hogy az hitetlen</l>
                    <l xml:id="l.26">Esséc veszélben véletlen,</l>
                    <l xml:id="l.27">Es azon hálóban akadgyon,</l>
                    <l xml:id="l.28">Kit nékem vetött hogy megfogjon.</l>
                    <l rend="level_1" xml:id="l.29">Essék bé azon árokban,</l>
                    <l xml:id="l.30">Kit nékem ásott utamban,</l>
                    <l xml:id="l.31">Es örvendez az én lelkem</l>
                    <l xml:id="l.32">Az Urban, ki megtart engem.</l>
                </lg>
                <lg xml:id="lg.5">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 5 </fw>
                    <l xml:id="l.33">Minden én tetemem mondgya:</l>
                    <l xml:id="l.34"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7"> H<corr>o</corr>zzád hasonlo ki
                                volna</lem>
                            <rdg wit="#W1 #W2 #W3" xml:id="rdg.13">Hazzád</rdg>
                            <rdg wit="#W1 #W2" xml:id="rdg.14">volna!</rdg>
                        </app></l>
                    <l xml:id="l.35">Uram, ki az szegént megtartod,</l>
                    <l xml:id="l.36">Az erösbtöl megszabaditod?</l>
                    <l rend="level_1" xml:id="l.37">Az nyomorult szükölködöt</l>
                    <l xml:id="l.38">Az kóborlótól megmentöd.</l>
                    <l xml:id="l.39"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8"> H<corr>a</corr>mis tanoc
                                    föl<corr>t</corr>ámadnac</lem>
                            <rdg wit="#W1 #W2 #W3" xml:id="rdg.15">Hámis</rdg>
                            <rdg wit="#W1" xml:id="rdg.16">fölfamadnac [A <hi rend="italic"
                                    >Corrigenda</hi>-ban kijavítva:] föltámadnac</rdg>
                            <rdg wit="#W2 #W3" xml:id="rdg.17">fölfámadnac</rdg>
                        </app></l>
                    <l xml:id="l.40">Es soc gonoszt reám fognac.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.41">Az joért ök gonoszt adnac,</l>
                    <l xml:id="l.42"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9"> Hogy lelkemtöl megfoszszanac,</lem>
                            <rdg wit="#W1" xml:id="rdg.18">lelkemtül</rdg>
                        </app></l>
                    <l xml:id="l.43">Noha midön megbetegültec,</l>
                    <l xml:id="l.44"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10"> Sákban öltöztem ö éröttec.</lem>
                            <rdg wit="#W1" xml:id="rdg.19">érettec</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.45">Ö inségeken böytöltem,</l>
                    <l xml:id="l.46">Es érettec könyörgöttem,</l>
                    <l xml:id="l.47"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11"> Mint atyámfi<corr>á</corr>t ugy
                                szántam,</lem>
                            <rdg wit="#W1" xml:id="rdg.20">attyám fiát</rdg>
                            <rdg wit="#W2" xml:id="rdg.21">atyámfiát</rdg>
                            <rdg wit="#W3" xml:id="rdg.22">atyámfiat</rdg>
                        </app></l>
                    <l xml:id="l.48">Gyakorta hozzájoc jártam.</l>
                </lg>
                <lg xml:id="lg.7">
                    <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                    <l xml:id="l.49">Gyázban jártam lehorgadva,</l>
                    <l xml:id="l.50">Mint ki az annyát sirattya,</l>
                    <l xml:id="l.51">De ök szomoru esetemen</l>
                    <l xml:id="l.52"><app xml:id="app.12">
                            <lem wit="#KK" xml:id="lem.12"> Örülnec, es gyülnec seregben.</lem>
                            <rdg wit="#W2" xml:id="rdg.23">és</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.53">Hát megöl<note type="critic" xml:id="note.1"> =
                            Hát mögül</note> az gonosz népec</l>
                    <l xml:id="l.54">Engemet szörnyen nevetnec,</l>
                    <l xml:id="l.55">Artatlan léven nem szánnac,</l>
                    <l xml:id="l.56"><app xml:id="app.13">
                            <lem wit="#KK" xml:id="lem.13"> Söt czufolnac es szagatnac.</lem>
                            <rdg wit="#W2" xml:id="rdg.24">és</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.8">
                    <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                    <l xml:id="l.57">Az képmutato galibác</l>
                    <l xml:id="l.58">Fogokat rám czikorgattyác,</l>
                    <l xml:id="l.59">Es raytam nagy czufságot üznec,</l>
                    <l xml:id="l.60">Kic czac zabálodást keresnec.</l>
                    <l rend="level_1" xml:id="l.61">Uram mig nézed ezeket?</l>
                    <l xml:id="l.62">Jövel tarts meg én lelkemet,</l>
                    <l xml:id="l.63">Egyedül voltom tekénts meg,</l>
                    <l xml:id="l.64">Ez oroszlánoktol ments meg.</l>
                </lg>
                <lg xml:id="lg.9">
                    <metamark function="pause"/>
                    <fw corresp="Szenci Molnár Albert" type="lg"><hi rend="super">*</hi><hi
                            rend="sub">*</hi><hi rend="super">*</hi> 9 </fw>
                    <l xml:id="l.65">Diczérlec téged szüntelen,</l>
                    <l xml:id="l.66">Nagy sürö gyülekezetben,</l>
                    <l xml:id="l.67">Es nagy roppant sereg nép elött,</l>
                    <l xml:id="l.68"><app xml:id="app.14">
                            <lem wit="#KK" xml:id="lem.14"> Téged diczérlec minden felött.</lem>
                            <rdg wit="#W1" xml:id="rdg.25">fölöt</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.69"><app xml:id="app.15">
                            <lem wit="#KK" xml:id="lem.15"> Ne engedd hogy örüllyenec,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.26">öröllyenec</rdg>
                        </app></l>
                    <l xml:id="l.70">Az kic oknélkül gyülölnec,</l>
                    <l xml:id="l.71">Ellenségimet fordits el,</l>
                    <l xml:id="l.72">Ne hunyorgassanac szemmel.</l>
                </lg>
                <lg xml:id="lg.10">
                    <fw corresp="Szenci Molnár Albert" type="lg">10 </fw>
                    <l xml:id="l.73">Mert nem szolnac békeségre,</l>
                    <l xml:id="l.74"><app xml:id="app.16">
                            <lem wit="#KK" xml:id="lem.16"> De <corr>á</corr>lnoc szivec néz
                                erre</lem>
                            <rdg wit="#W1" xml:id="rdg.27">álnok</rdg>
                            <rdg wit="#W2" xml:id="rdg.28">álnoc</rdg>
                            <rdg wit="#W3" xml:id="rdg.29">alnoc</rdg>
                        </app></l>
                    <l xml:id="l.75">Hogy ök azokat haborgassác,</l>
                    <l xml:id="l.76">Kic békével ez földet lakjác.</l>
                    <l rend="level_1" xml:id="l.77">Az hitlen népec soksága,</l>
                    <l xml:id="l.78"><app xml:id="app.17">
                            <lem wit="#KK" xml:id="lem.17"> Száj<corr>á</corr>t szörnyen reám
                                táttya,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.30">Száját</rdg>
                            <rdg wit="#W3" xml:id="rdg.31">Szájat</rdg>
                        </app></l>
                    <l xml:id="l.79">Kiáltnac raytam ha ha hát,</l>
                    <l xml:id="l.80">Mondván: szemünc jó dolgot lát.</l>
                </lg>
                <lg xml:id="lg.11">
                    <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                    <l xml:id="l.81">Ur Isten látod ezeket,</l>
                    <l xml:id="l.82">Fedd meg vakmeröségeket,</l>
                    <l xml:id="l.83">Kezed szájokra ne ereszsze</l>
                    <l xml:id="l.84"><app xml:id="app.18">
                            <lem wit="#KK" xml:id="lem.18"> Es tölem Uram ne légy meszsze.</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.32">mészsze</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.85">Serkenny föl Uram es kelly fel,</l>
                    <l xml:id="l.86">Es ments meg itéleteddel,</l>
                    <l xml:id="l.87">Ügyemnec jo voltát lássác</l>
                    <l xml:id="l.88">Ellenségim, noha bánnyác.</l>
                </lg>
                <lg xml:id="lg.12">
                    <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                    <l xml:id="l.89"><app xml:id="app.19">
                            <lem wit="#KK" xml:id="lem.19">Itélly meg
                                igassá<corr>g</corr>odban,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.33">igasságodban</rdg>
                            <rdg wit="#W3" xml:id="rdg.34">igassággodban</rdg>
                        </app></l>
                    <l xml:id="l.90">Ne nevessenec meg vigan,</l>
                    <l xml:id="l.91">Es ne mondgyác nagy hahotával:</l>
                    <l xml:id="l.92">Bényeltüc ötet éh torkunkval.</l>
                    <l rend="level_1" xml:id="l.93"><app xml:id="app.20">
                            <lem wit="#KK" xml:id="lem.20"> Mind megszégyenitessenec,</lem>
                            <rdg wit="#W1" xml:id="rdg.35">meg szegyenültessenec</rdg>
                        </app></l>
                    <l xml:id="l.94">Kic örölnec inségemnec,</l>
                    <l xml:id="l.95">Öltözzenec gyalázatban,</l>
                    <l xml:id="l.96">Ellenem kevély voltokban.</l>
                </lg>
                <lg xml:id="lg.13">
                    <fw corresp="Szenci Molnár Albert" type="lg">13 </fw>
                    <l xml:id="l.97">Es azoc énekellyenec,</l>
                    <l xml:id="l.98"><app xml:id="app.21">
                            <lem wit="#KK" xml:id="lem.21"> Kic igasságnac örülnec,</lem>
                            <rdg wit="#W1" xml:id="rdg.36">örölnec</rdg>
                        </app></l>
                    <l xml:id="l.99">Mondván: hálá legyen az Urnac,</l>
                    <l xml:id="l.100">Ki nyugalmat ád szolgájánac.</l>
                    <l rend="level_1" xml:id="l.101">En nyelvem igasságodat</l>
                    <l xml:id="l.102">Hirdeti nagy jovoltodat,</l>
                    <l xml:id="l.103">Es diczéretedet hiven</l>
                    <l xml:id="l.104">Eneklem minden idöben.</l>
                </lg>
