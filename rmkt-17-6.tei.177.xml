    <text>
        <body>
            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 177.</fw>
                <l xml:id="l.1">Ritka az oly vdö</l>
                <l xml:id="l.2">ki ne legien valtazô</l>
                <l xml:id="l.3">szerenczenk forgando</l>
                <l xml:id="l.4"><app xml:id="app.1">
                        <lem xml:id="lem.1">El<corr>e</corr>tünk nem allando</lem>
                        <rdg wit="#W1" xml:id="rdg.1"><sic>Elentünk</sic></rdg>
                    </app></l>
                <l xml:id="l.5">Minden indulatunk</l>
                <l xml:id="l.6">S Jo igiekezetünk</l>
                <l xml:id="l.7">Bura karra hailando.</l>
            </div>
        </body>
