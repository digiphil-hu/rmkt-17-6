            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 155.</fw>
                <head type="title">AZ VR VACZORÁJA ELÖTT</head>
                <head type="notation"><app xml:id="app.1">
                        <lem wit="#KK" xml:id="lem.1">Az 50. Soltarnac Franciai notajara.</lem>
                        <rdg wit="#W2" xml:id="rdg.1">Notajára az 50. Soltarnac.</rdg>
                    </app></head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">HAlgasd meg Ur Isten kérésemet,</l>
                    <l xml:id="l.2">Es világosits meg én szivemet,</l>
                    <l xml:id="l.3">Hogy szüntelen reád figyelmezzen,</l>
                    <l xml:id="l.4">Lelkem szerelmedre gerjedezzen,</l>
                    <l xml:id="l.5">Es szent fiadat veled egyetemben,</l>
                    <l xml:id="l.6">Fellyem, es tartsam mindenütt elmémben.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.7">Ur Christus menyböl ertem leszállál,</l>
                    <l xml:id="l.8">Az kereszt fan bünömért meghalál,</l>
                    <l xml:id="l.9">Te szent véreddel értem aldozal,</l>
                    <l xml:id="l.10">Az halál töriböl kioldozál,</l>
                    <l xml:id="l.11">Adosságomnac bünömnec sokságát,</l>
                    <l xml:id="l.12">Megengedéd eltörölvén rutságat.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.13">Azért vagyoc már Atyad kedvében,</l>
                    <l xml:id="l.14">Szent országanac öröksegében,</l>
                    <l xml:id="l.15">Erdemem kivöl ki velem igy tön,</l>
                    <l xml:id="l.16"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Nagy jovoltabol kegyelmébe vön,</lem>
                            <rdg wit="#W2" xml:id="rdg.2">kegyelmében</rdg>
                        </app></l>
                    <l xml:id="l.17"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Szent szerelméve<corr>l</corr>
                                ugymegkörnyeköze,</lem>
                            <rdg wit="#W1" xml:id="rdg.3">szerelméves</rdg>
                            <rdg wit="#W2" xml:id="rdg.4">szerelmével ugy megkörnyékeze</rdg>
                        </app></l>
                    <l xml:id="l.18"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Bünt és ördöget tölem távol üze.</lem>
                            <rdg wit="#W2" xml:id="rdg.5">ördögöt</rdg>
                        </app></l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.19">Hogy pedig ezt nyilvábban hihessem,</l>
                    <l xml:id="l.20"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Töled Ur Isten erössittessem,</lem>
                            <rdg wit="#W2" xml:id="rdg.6">erösitettem</rdg>
                        </app></l>
                    <l xml:id="l.21"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Kenyérr<corr>e</corr>l, borral
                                szentVaczorádban,</lem>
                            <rdg wit="#W1" xml:id="rdg.7">Kenyérrél</rdg>
                            <rdg wit="#W2" xml:id="rdg.8">Kenyérrel</rdg>
                        </app></l>
                    <l xml:id="l.22">Mellyel az hivec élnec házadban,</l>
                    <l xml:id="l.23">Ezec jegyei az te jo kedvednec,</l>
                    <l xml:id="l.24">Mellyeket töled hálá adással veszec.</l>
                </lg>
                <lg xml:id="lg.5">
                    <fw corresp="Szenci Molnár Albert" type="lg">5 </fw>
                    <l xml:id="l.25">Velem Ur Iesus ezt czelekedgyed,</l>
                    <l xml:id="l.26"><app xml:id="app.7">
                            <lem wit="#KK" xml:id="lem.7">Hogy én eggyesülhessec te veled,</lem>
                            <rdg wit="#W2" xml:id="rdg.9">egyessülhessek</rdg>
                        </app></l>
                    <l xml:id="l.27">Szent lelked által, egész eltemben,</l>
                    <l xml:id="l.28">Semmi tetöled el ne téritsen</l>
                    <l xml:id="l.29"><app xml:id="app.8">
                            <lem wit="#KK" xml:id="lem.8">Sem jo se gonosz, félelem es joszág,</lem>
                            <rdg wit="#W2" xml:id="rdg.10">félelem, se joszág</rdg>
                        </app></l>
                    <l xml:id="l.30">Ne arthasson, de kellyen czac menyország.</l>
                </lg>
                <lg xml:id="lg.6">
                    <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                    <l xml:id="l.31"><app xml:id="app.9">
                            <lem wit="#KK" xml:id="lem.9">Minden g<corr>o</corr>ndomat
                                nékedajanlom,</lem>
                            <rdg wit="#W1" xml:id="rdg.11">gendomat</rdg>
                            <rdg wit="#W2" xml:id="rdg.12">gondomat</rdg>
                        </app></l>
                    <l xml:id="l.32"><app xml:id="app.10">
                            <lem wit="#KK" xml:id="lem.10">Az halálb<corr>a</corr>nnis
                                vagyvigaztalom,</lem>
                            <rdg wit="#W1" xml:id="rdg.13">halálbánnis</rdg>
                            <rdg wit="#W2" xml:id="rdg.14">halálbannis</rdg>
                        </app></l>
                    <l xml:id="l.33">Az életre nékem aytót nyittatsz,</l>
                    <l xml:id="l.34">Országodban bodogságra juttatsz,</l>
                    <l xml:id="l.35"><app xml:id="app.11">
                            <lem wit="#KK" xml:id="lem.11">Az iteletre lelkem felruházod</lem>
                            <rdg wit="#W2" xml:id="rdg.15">folruházod</rdg>
                        </app></l>
                    <l xml:id="l.36">Ez testvel, és örömre koronázod.</l>
                </lg>
            </div>
