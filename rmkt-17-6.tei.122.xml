            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 122.</fw>
                <head type="title">CXXII. SOLTAR. T. B. </head>
                <head type="sub">Tanuság az Isteni szolgálatrol és az vilagi gubernálásrol.</head>
                <pb facs="292"/>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">ÖRülöc az én szivemben,</lem>
                            <rdg wit="#W1" xml:id="rdg.1">OErölöc</rdg>
                        </app></l>
                    <l xml:id="l.2"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Ez kivánatos hirt halván,</lem>
                            <rdg wit="#W2" xml:id="rdg.2">hálván</rdg>
                        </app></l>
                    <l xml:id="l.3">Hogy mi bémegyünc ez után</l>
                    <l xml:id="l.4">Az Isten lako helyében,</l>
                    <l xml:id="l.5">Jerusalem kapuidban</l>
                    <l xml:id="l.6">Mi lábainckal megálvan,</l>
                    <l xml:id="l.7"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Az Je<corr>rusalem jol
                                megépült,</corr></lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.3">[Lásd a főszövegben.]</rdg>
                            <rdg wit="#W3" xml:id="rdg.4">[Őrszóként csak ennyi:] Az Je-</rdg>
                        </app></l>
                    <l xml:id="l.8">Sok ékes épületeckel,</l>
                    <l xml:id="l.9"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Holott szép polgári rendvel</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.5">polgári</rdg>
                            <rdg wit="#W3" xml:id="rdg.6">polgari</rdg>
                        </app></l>
                    <l xml:id="l.10">Mindenféle nemzet egyben gyült.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.11">Az Urnac minden nemzete,</l>
                    <l xml:id="l.12">Mint meghatta Izraelnec</l>
                    <l xml:id="l.13">Gyüllyenec Jerusalembe,</l>
                    <l xml:id="l.14">Es ott az Istent diczérjéc:</l>
                    <l xml:id="l.15">Az székec ott tétetnec fel,</l>
                    <l xml:id="l.16"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Ki<corr>k</corr>en David háza itél,</lem>
                            <rdg wit="#W1 #W2" xml:id="rdg.7">Kiken</rdg>
                            <rdg wit="#W3" xml:id="rdg.8">Kiben</rdg>
                        </app><note type="critic" xml:id="note.1">I–II a jó;
                                    <persName>Lobwasser<idno corresp="Ambrosius Lobwasser"
                                /></persName>: Daruffen das hauß Dauids richt:</note></l>
                    <l xml:id="l.17">Es ott az igasság lakozic.</l>
                    <l xml:id="l.18">Kérjetec jót ez városnac,</l>
                    <l xml:id="l.19">Békeség légyen azoknac,</l>
                    <l xml:id="l.20">Kic ez várost tisztán szeretic.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.21">Légyen te köfalaidban</l>
                    <l xml:id="l.22">Czendesség és jo békeség,</l>
                    <l xml:id="l.23"><app xml:id="app.6">
                            <lem wit="#KK" xml:id="lem.6">Az kösseg közt
                                <corr>e</corr>gyenesség,</lem>
                            <rdg wit="#W1" xml:id="rdg.9">égjenésseg</rdg>
                            <rdg wit="#W2" xml:id="rdg.10">égyenesseg</rdg>
                            <rdg wit="#W3" xml:id="rdg.11">égyenesség</rdg>
                        </app></l>
                    <l xml:id="l.24">Jo szerencze házaidban.</l>
                    <l xml:id="l.25">Az én atyám fiaiért,</l>
                    <l xml:id="l.26">Es ott lako feleimért</l>
                    <l xml:id="l.27">Adgyon Isten jo békeséget.</l>
                    <l xml:id="l.28">Szentségiért én ez helynec,</l>
                    <l xml:id="l.29">Melly szerzetött az Istennec,</l>
                    <l xml:id="l.30">Minden jót kivánoc te néked.</l>
                </lg>
            </div>
