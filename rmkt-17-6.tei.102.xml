                         <text>
                                                  <body>
                                                  <div type="poem" xml:id="d.1" xml:lang="hu">
                                                  <fw type="originalNum">[RMKT XVII/6:] 102.</fw>
                                                  <head type="title">CII. SOLTAR. T. B.</head>
                                                  <head type="sub">Könyörgése az Sido népnec az
                                                  Bábyloniai fogságbol valo megszabadulásért.</head>
                                                  <pb facs="233"> </pb>
                                                  <lg xml:id="lg.1">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                                                  <l xml:id="l.1"><app xml:id="app.1">
                                                  <lem wit="#KK" xml:id="lem.1">HAlgasd meg Uram
                                                  kér<corr>é</corr>sem,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.1">kérésem</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.2">kéresem</rdg>
                                                  </app></l>
                                                  <l xml:id="l.2">Tekénts meg esedezésem,</l>
                                                  <l xml:id="l.3">Beszédem jusson hozzád,</l>
                                                  <l xml:id="l.4">Ne röyts el tölem ortzád,</l>
                                                  <l xml:id="l.5">Hayts én hozzam te füledet,</l>
                                                  <l xml:id="l.6">Enyhits meg nagy inségemet,</l>
                                                  <l xml:id="l.7"><app xml:id="app.2">
                                                  <lem wit="#KK" xml:id="lem.2">Midön
                                                  kiált<corr>o</corr>c Ur Isten,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.3">kiáltoc</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.4">kiáltóc</rdg>
                                                  </app></l>
                                                  <l xml:id="l.8">Siess, halgass meg kegyessen.</l>
                                                  </lg>
                                                  <lg xml:id="lg.2">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                                                  <l xml:id="l.9">Mert napjai életemnec,</l>
                                                  <l xml:id="l.10">Olly hirtelen elkelénec,</l>
                                                  <l xml:id="l.11">Mint az füst és az pára,</l>
                                                  <l xml:id="l.12">Es mint az tüzhely pora,</l>
                                                  <l xml:id="l.13">Minden czontom ugy elszáratt,</l>
                                                  <l xml:id="l.14">Szivem mint az fü elhervatt,</l>
                                                  <l xml:id="l.15">Ugy hogy az én ételemet</l>
                                                  <l xml:id="l.16">Elfeleytem kenyeremet.</l>
                                                  </lg>
                                                  <lg xml:id="lg.3">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                                                  <l xml:id="l.17">Böröm czontaimhoz ragatt,</l>
                                                  <l xml:id="l.18">Keserves siralmom miatt</l>
                                                  <l xml:id="l.19">Ez iszonyu inségben,</l>
                                                  <l xml:id="l.20">Ollyatén löttem szinten</l>
                                                  <l xml:id="l.21">Mint Pellican az pusztában,</l>
                                                  <l xml:id="l.22">Siralmas kiáltásimban</l>
                                                  <l xml:id="l.23">Ollyá löttem mint az bagoly</l>
                                                  <l xml:id="l.24">Ki az kietlenben huhol.</l>
                                                  </lg>
                                                  <lg xml:id="lg.4">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                                                  <l xml:id="l.25">Ollyan vagyoc minduntalan</l>
                                                  <l xml:id="l.26">Mint veréb az eszterhában,</l>
                                                  <l xml:id="l.27">Az melly egyedül maratt.</l>
                                                  <l xml:id="l.28">Ellenség reám támatt,</l>
                                                  <l xml:id="l.29">Gyaláznac engem naponkint,</l>
                                                  <l xml:id="l.30">Es kic boszszontnac oránkint,</l>
                                                  <l xml:id="l.31">Ha kinec veszélt kivánnac,</l>
                                                  <l xml:id="l.32">En rólam példát fórmálnac.</l>
                                                  </lg>
                                                  <lg xml:id="lg.5">
                                                  <metamark function="pause"/>
                                                  <fw corresp="Szenci Molnár Albert" type="lg"><hi
                                                  rend="super">*</hi><hi rend="sub">*</hi><hi
                                                  rend="super">*</hi> 5 </fw>
                                                  <l xml:id="l.33">Porhamu nékem kenyerem,</l>
                                                  <l xml:id="l.34">Mellyet étel gyanánt észem,</l>
                                                  <l xml:id="l.35">Italom könyveimmel</l>
                                                  <l xml:id="l.36"><app xml:id="app.3">
                                                  <lem wit="#KK" xml:id="lem.3">Elegyittem, mint
                                                  vizzel</lem>
                                                  <rdg wit="#W1" xml:id="rdg.5">Elegjitem</rdg>
                                                  <rdg wit="#W2" xml:id="rdg.6">Elegyitem</rdg>
                                                  </app></l>
                                                  <l xml:id="l.37">Az te nagy haragod miatt,</l>
                                                  <l xml:id="l.38">Kinec tüze ugy föllobbatt,</l>
                                                  <l xml:id="l.39">Hogy engemet fölemelél</l>
                                                  <l xml:id="l.40"><app xml:id="app.4">
                                                  <lem wit="#KK" xml:id="lem.4">Es ismét az
                                                  fö<corr>l</corr>dhöz <corr>ü</corr>tél.</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.7">földhöz
                                                  ütél</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.8">fölld hözütél</rdg>
                                                  </app></l>
                                                  </lg>
                                                  <lg xml:id="lg.6">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">6 </fw>
                                                  <l xml:id="l.41">Az én idöm im elmuléc,</l>
                                                  <l xml:id="l.42">Mint az árnyéc elenyészéc,</l>
                                                  <l xml:id="l.43">Minden testem elasza,</l>
                                                  <l xml:id="l.44">Mint az lekaszált széna,</l>
                                                  <l xml:id="l.45">Az melly meg nem élled többé.</l>
                                                  <l xml:id="l.46">De te megmaradsz öröcké,</l>
                                                  <l xml:id="l.47">Es az te emlekezeted</l>
                                                  <l xml:id="l.48">Mind öröcké megtart hired.</l>
                                                  </lg>
                                                  <lg xml:id="lg.7">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">7 </fw>
                                                  <l xml:id="l.49">Azert kelly föl oh Ur Isten,</l>
                                                  <l xml:id="l.50">Haragod ne gerjedezzen!</l>
                                                  <l xml:id="l.51">Sion városát szándmeg,</l>
                                                  <l xml:id="l.52">Es néki kegyelmezz meg,</l>
                                                  <l xml:id="l.53">Mert már im az idö eljött,</l>
                                                  <l xml:id="l.54">Es az melly már sokat késött,</l>
                                                  <l xml:id="l.55">Jelen vagyon az az óra,</l>
                                                  <l xml:id="l.56">Hogy dolga fordollyon jóra.</l>
                                                  </lg>
                                                  <lg xml:id="lg.8">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">8 </fw>
                                                  <l xml:id="l.57">Hogy az te szolgaid végre</l>
                                                  <l xml:id="l.58">Öszvegyülvén ez szent helyre,</l>
                                                  <l xml:id="l.59">Elpusztult kö rakásit,</l>
                                                  <l xml:id="l.60">Kedvellyéc épülésit,</l>
                                                  <l xml:id="l.61">Es osztán az pogán népec</l>
                                                  <l xml:id="l.62">Uram, nevedet rettegjéc,</l>
                                                  <l xml:id="l.63">Ez földön minden királyoc</l>
                                                  <l xml:id="l.64">Megvallyác hogy te vagy uroc.</l>
                                                  </lg>
                                                  <lg xml:id="lg.9">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">9 </fw>
                                                  <l xml:id="l.65">Mert az Ur jol megépéyte</l>
                                                  <l xml:id="l.66">Az Siont megékeséyte,</l>
                                                  <l xml:id="l.67"><app xml:id="app.5">
                                                  <lem wit="#KK" xml:id="lem.5">Es diczöségét
                                                  itten</lem>
                                                  <rdg wit="#W1" xml:id="rdg.9">düczöséget</rdg>
                                                  </app></l>
                                                  <l xml:id="l.68"><app xml:id="app.6">
                                                  <lem wit="#KK" xml:id="lem.6">Megmutatá
                                                  ism<corr>é</corr>tlen,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.10">ismétlen</rdg>
                                                  <rdg wit="#W3" xml:id="rdg.11">ismetlen</rdg>
                                                  </app></l>
                                                  <l xml:id="l.69">Az nyomorultac panaszszát,</l>
                                                  <l xml:id="l.70">Meghalgatá nagy siralmát,</l>
                                                  <l xml:id="l.71">Keréseket meg nem veté,</l>
                                                  <l xml:id="l.72">Söt kegyelmessen tekinté.</l>
                                                  </lg>
                                                  <lg xml:id="lg.10">
                                                  <metamark function="pause"/>
                                                  <fw corresp="Szenci Molnár Albert" type="lg"><hi
                                                  rend="super">*</hi><hi rend="sub">*</hi><hi
                                                  rend="super">*</hi> 10 </fw>
                                                  <l xml:id="l.73">Ezt ember hiven fölirja,</l>
                                                  <l xml:id="l.74">Hogy megmaradgyon mindenha,</l>
                                                  <l xml:id="l.75">Legyen emlekezete</l>
                                                  <l xml:id="l.76">Nemzetségröl nemzetre,</l>
                                                  <l xml:id="l.77">Hogy az jövendö nemzetec,</l>
                                                  <l xml:id="l.78">Kic még ez földre születnec</l>
                                                  <l xml:id="l.79">Az menybéli Istent áldgyác,</l>
                                                  <l xml:id="l.80">Ez dologért magasztallyác.</l>
                                                  </lg>
                                                  <lg xml:id="lg.11">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">11 </fw>
                                                  <l xml:id="l.81"><app xml:id="app.7">
                                                  <lem wit="#KK" xml:id="lem.7">Hogy alá néz onnan
                                                  fellyöl</lem>
                                                  <rdg wit="#W1" xml:id="rdg.12">fellöl</rdg>
                                                  </app></l>
                                                  <l xml:id="l.82">Az ö magas szenthelyéböl,</l>
                                                  <l xml:id="l.83">Az menyböl alâ nézél,</l>
                                                  <l xml:id="l.84">Ez földre letekintél,</l>
                                                  <l xml:id="l.85">Hogy meghallya kéréseket</l>
                                                  <l xml:id="l.86">Az foglyoknac inségeket,</l>
                                                  <l xml:id="l.87"><app xml:id="app.8">
                                                  <lem wit="#KK" xml:id="lem.8">Es azokat ö
                                                  megtartsa,</lem>
                                                  <rdg wit="#W1 #W2" xml:id="rdg.13">megtartya</rdg>
                                                  </app><note type="critic" xml:id="note.1">III a
                                                  jó; Lobwasser: Vnd das er die rett auß
                                                  nöten</note></l>
                                                  <l xml:id="l.88">Kiket itéltec halálra.</l>
                                                  </lg>
                                                  <lg xml:id="lg.12">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">12 </fw>
                                                  <l xml:id="l.89">Hogy szent neve az Istennec</l>
                                                  <l xml:id="l.90">Az Sionban diczértesséc,</l>
                                                  <l xml:id="l.91">Es az Jerusalembe</l>
                                                  <l xml:id="l.92"><app xml:id="app.9">
                                                  <lem wit="#KK" xml:id="lem.9">Aldasséc
                                                  diczösége,</lem>
                                                  <rdg wit="#W1" xml:id="rdg.14">düczösége</rdg>
                                                  </app></l>
                                                  <l xml:id="l.93">Midön az népec seregben</l>
                                                  <l xml:id="l.94">Öszvegyülnec ez szent
                                                  helyben,</l>
                                                  <l xml:id="l.95">Az királyokis itt lesznec</l>
                                                  <l xml:id="l.96">Es szolgálnac az Istennec.</l>
                                                  </lg>
                                                  <lg xml:id="lg.13">
                                                  <metamark function="pause"/>
                                                  <fw corresp="Szenci Molnár Albert" type="lg"><hi
                                                  rend="super">*</hi><hi rend="sub">*</hi><hi
                                                  rend="super">*</hi> 13 </fw>
                                                  <l xml:id="l.97">Leveré az én erömet</l>
                                                  <l xml:id="l.98">Ez utban, Es életemet</l>
                                                  <l xml:id="l.99">Megrövidité, Es én</l>
                                                  <l xml:id="l.100">Igy szoléc keservessen:</l>
                                                  <l xml:id="l.101">Ne hagy elvesznem Ur Isten</l>
                                                  <l xml:id="l.102">Eletemnec közepiben,</l>
                                                  <l xml:id="l.103">Mert mind öröcké megvadnac</l>
                                                  <l xml:id="l.104">Esztendeid elnem fogynac.</l>
                                                  </lg>
                                                  <lg xml:id="lg.14">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">14 </fw>
                                                  <l xml:id="l.105">Ez földet te teremtetted,</l>
                                                  <l xml:id="l.106">Es ecképpen helyheztetted,</l>
                                                  <l xml:id="l.107">Czac te kezed munkája</l>
                                                  <l xml:id="l.108"><app xml:id="app.10">
                                                  <lem wit="#KK" xml:id="lem.10">Az Egnec
                                                  alkotványa.</lem>
                                                  <rdg wit="#W1" xml:id="rdg.15">alkotmánja</rdg>
                                                  </app></l>
                                                  <l xml:id="l.109">De ezec mind elveszendök,</l>
                                                  <l xml:id="l.110">Uram, te megmaradsz, De ök</l>
                                                  <l xml:id="l.111">Mint az ruha, mind elkopnac,</l>
                                                  <l xml:id="l.112">Szepségekben meg nem álnac:</l>
                                                  </lg>
                                                  <lg xml:id="lg.15">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">15 </fw>
                                                  <l xml:id="l.113">Es midön Uram akarod</l>
                                                  <l xml:id="l.114">Ököt ugy elváltoztatod</l>
                                                  <l xml:id="l.115">Mint az elviselt ruhát,</l>
                                                  <l xml:id="l.116">Az melly tétul megszakat.</l>
                                                  <l xml:id="l.117">Te vagy az ki régen valál,</l>
                                                  <l xml:id="l.118">Voltod változás nélkül ál,</l>
                                                  <l xml:id="l.119">Te esztendeidnec vége</l>
                                                  <l xml:id="l.120">Nem leszen soha öröcke.</l>
                                                  </lg>
                                                  <lg xml:id="lg.16">
                                                  <fw corresp="Szenci Molnár Albert" type="lg">16 </fw>
                                                  <l xml:id="l.121"><app xml:id="app.11">
                                                  <lem wit="#KK" xml:id="lem.11">Azert az te
                                                  szolg<corr>á</corr>idnac</lem>
                                                  <rdg wit="#W1" xml:id="rdg.16">szolgáidnac</rdg>
                                                  <rdg wit="#W2 #W3" xml:id="rdg.17"
                                                  >szolgaidnac</rdg>
                                                  </app></l>
                                                  <l xml:id="l.122">Fiai megszaporodnac,</l>
                                                  <l xml:id="l.123">Es megmaradnac végig,</l>
                                                  <l xml:id="l.124">Az az, örök idökig,</l>
                                                  <l xml:id="l.125">Az néked szolgálo hivec</l>
                                                  <l xml:id="l.126">Es egész ö nemzetségec</l>
                                                  <l xml:id="l.127">Megálnac és megmaradnac,</l>
                                                  <l xml:id="l.128">Es öröcké el nem fogynac.</l>
