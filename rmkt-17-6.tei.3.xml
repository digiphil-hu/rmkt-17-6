            <div type="poem" xml:id="d.1" xml:lang="hu">
                <fw type="originalNum">[RMKT XVII/6:] 3.</fw>
                <head type="title">III. SOLTAR. CL. M.</head>
                <head type="sub">Könyörgése Davidnac az Absolon ellen.</head>
                <lg xml:id="lg.1">
                    <fw corresp="Szenci Molnár Albert" type="lg">1 </fw>
                    <l xml:id="l.1">O Melly sokan vadnac,</l>
                    <l xml:id="l.2">Az kic háborgatnac</l>
                    <l xml:id="l.3">Engemet én Istenem?</l>
                    <l xml:id="l.4">Nagy soc ellenségim,</l>
                    <l xml:id="l.5">Es soc gyülölöim,</l>
                    <l xml:id="l.6">Tusakodnac ellenem.</l>
                    <l rend="level_1" xml:id="l.7"><app xml:id="app.1">
                            <lem wit="#KK" xml:id="lem.1">Sokan azt ali<corr>t</corr>tyác,</lem>
                            <rdg wit="#W1" xml:id="rdg.1">alittyák</rdg>
                            <rdg wit="#W2" xml:id="rdg.2">alittyác</rdg>
                            <rdg wit="#W3" xml:id="rdg.3">alityác</rdg>
                        </app></l>
                    <l xml:id="l.8">Lelkemröl azt mondgyác:</l>
                    <l xml:id="l.9">Veszett ennec ö dolga,</l>
                    <l xml:id="l.10">Segétsége ninczen,</l>
                    <l xml:id="l.11">Mert elhatta Isten,</l>
                    <l xml:id="l.12">Igy szolnac bolond modra.</l>
                </lg>
                <lg xml:id="lg.2">
                    <fw corresp="Szenci Molnár Albert" type="lg">2 </fw>
                    <l xml:id="l.13">Mert te én Istenem,</l>
                    <l xml:id="l.14">Paisom vagy nékem,</l>
                    <l xml:id="l.15"><app xml:id="app.2">
                            <lem wit="#KK" xml:id="lem.2">Ki életem megmented,</lem>
                            <rdg wit="#W1" xml:id="rdg.4">megmentöd</rdg>
                        </app></l>
                    <l xml:id="l.16">Es nagy tisztességre</l>
                    <l xml:id="l.17"><app xml:id="app.3">
                            <lem wit="#KK" xml:id="lem.3">Fejem diczösségre</lem>
                            <rdg wit="#W1" xml:id="rdg.5">düczössegre</rdg>
                        </app></l>
                    <l xml:id="l.18"><app xml:id="app.4">
                            <lem wit="#KK" xml:id="lem.4">Idövel föl<corr>e</corr>meled.</lem>
                            <rdg wit="#W1" xml:id="rdg.6">fölemelöd</rdg>
                            <rdg wit="#W2" xml:id="rdg.7">fölemeled</rdg>
                            <rdg wit="#W3" xml:id="rdg.8">fölémeled</rdg>
                        </app></l>
                    <l rend="level_1" xml:id="l.19">Te hozzád Ur Isten,</l>
                    <l xml:id="l.20">Kiáltoc szüntelen,</l>
                    <l xml:id="l.21">Es te megvidámitasz,</l>
                    <l xml:id="l.22">Meghalgatsz kedvedböl,</l>
                    <l xml:id="l.23">Sion szent hegyéröl</l>
                    <l xml:id="l.24">Nagy segedelmet nyuytasz.</l>
                </lg>
                <lg xml:id="lg.3">
                    <fw corresp="Szenci Molnár Albert" type="lg">3 </fw>
                    <l xml:id="l.25">Ha ágyamban nyugszom,</l>
                    <l xml:id="l.26">Czendesszen aluszom,</l>
                    <l xml:id="l.27">Ninczen semmi félelmem.</l>
                    <l xml:id="l.28"><app xml:id="app.5">
                            <lem wit="#KK" xml:id="lem.5">Midön felserkenec,</lem>
                            <rdg wit="#W1" xml:id="rdg.9">fölserkenec</rdg>
                        </app></l>
                    <l xml:id="l.29">Semmin nem kesergec,</l>
                    <l xml:id="l.30">Mert Isten öriz engem,</l>
                    <l rend="level_1" xml:id="l.31">Ha száz ezer népec</l>
                    <l xml:id="l.32">Mind környülvennénec,</l>
                    <l xml:id="l.33">Job és bal kezem felöl,</l>
                    <l xml:id="l.34">Ha rám ütnénekis,</l>
                    <l xml:id="l.35">Nem rettegnéc mégis</l>
                    <l xml:id="l.36">Semmi veszedelemtöl.</l>
                </lg>
                <lg xml:id="lg.4">
                    <fw corresp="Szenci Molnár Albert" type="lg">4 </fw>
                    <l xml:id="l.37">Kelly föl Uram tarts meg,</l>
                    <l xml:id="l.38">Ellenségim vondmeg,</l>
                    <l xml:id="l.39">Megtörvén ö fogokat.</l>
                    <l xml:id="l.40">Mind öszve paskolod,</l>
                    <l xml:id="l.41">Es artzul czapdosod</l>
                    <l xml:id="l.42">Az Isten utálokat.</l>
                    <l rend="level_1" xml:id="l.43">Czac te vagy az Isten,</l>
                    <l xml:id="l.44">Ki minden szükségben</l>
                    <l xml:id="l.45">Megtudsz szabaditani,</l>
                    <l xml:id="l.46">Ki az te sereged,</l>
                    <l xml:id="l.47">Megtartod, szereted,</l>
                    <l xml:id="l.48">Es megszoktad áldani.</l>
                </lg>
            </div>
